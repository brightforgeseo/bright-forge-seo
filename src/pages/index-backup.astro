<script is:inline>
  function showSEOPillar(pillarId) {
    // Hide all pillar content
    const pillarContents = document.querySelectorAll('.seo-pillar-content');
    pillarContents.forEach(content => {
      content.classList.add('hidden');
      content.classList.remove('block');
    });

    // Remove active class from all tabs
    const pillarTabs = document.querySelectorAll('.seo-pillar-tab');
    pillarTabs.forEach(tab => {
      tab.classList.remove('active');
      tab.classList.remove('border-brand-accent');
      tab.classList.add('border-transparent');
    });

    // Show selected pillar content
    document.getElementById(pillarId + '-content').classList.remove('hidden');
    document.getElementById(pillarId + '-content').classList.add('block');

    // Set active class to selected tab
    document.getElementById(pillarId + '-tab').classList.add('active');
    document.getElementById(pillarId + '-tab').classList.remove('border-transparent');
    document.getElementById(pillarId + '-tab').classList.add('border-brand-accent');
  }
</script>

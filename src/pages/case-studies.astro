<script is:inline>
  // Modern Case Study Filter Function with animation
  document.addEventListener('DOMContentLoaded', function() {
    // Set "All Industries" as active by default
    const allButton = document.querySelector('.modern-filter-btn[data-filter="all"]');
    if (allButton) allButton.classList.add('active');
    
    // Add click event listeners to all filter buttons
    const filterButtons = document.querySelectorAll('.modern-filter-btn');
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const category = this.getAttribute('data-filter');
        
        // Update active button state
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // Get all case study cards
        const cards = document.querySelectorAll('.modern-case-card');
        
        // Apply filter with animation
        cards.forEach(card => {
          // First apply the fade-out class
          card.classList.add('card-fade-out');
          
          // After the fade out animation completes
          setTimeout(() => {
            // Apply filter logic
            if (category === 'all' || card.getAttribute('data-category') === category) {
              card.style.display = 'block';
              // Remove the fade-out and add fade-in
              setTimeout(() => {
                card.classList.remove('card-fade-out');
                card.classList.add('card-fade-in');
              }, 10);
            } else {
              card.style.display = 'none';
            }

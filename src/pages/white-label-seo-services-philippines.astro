---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';
---

<MainLayout title="White Label SEO Services Philippines | Bright Forge SEO" description="Professional white label SEO services in the Philippines. Outsource SEO to our expert team and deliver results under your brand. Trusted by agencies worldwide.">
  <LegacyHeader slot="header" />
  
  <!-- Hero Section with Floating Elements -->
  <section class="hero-masterpiece">
    <div class="hero-bg-elements">
      <div class="floating-shape shape-1"></div>
      <div class="floating-shape shape-2"></div>
      <div class="floating-shape shape-3"></div>
      <div class="floating-shape shape-4"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 relative z-10">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs-modern">
        <a href="/">Home</a>
        <span class="separator">→</span>
        <span class="current">White Label SEO Services</span>
      </nav>
      
      <div class="hero-content-masterpiece">
        <div class="hero-badge">
          <span class="badge-icon">🚀</span>
          <span>Your Invisible SEO Powerhouse</span>
        </div>
        
        <h1 class="hero-title-masterpiece">
          <span class="title-line">White Label SEO</span>
          <span class="title-line gradient-text">That Actually Works</span>
        </h1>
        
        <p class="hero-subtitle-masterpiece">
          Transform your agency with our world-class SEO team working invisibly behind your brand. 
          <strong>No hiring. No training. No overhead.</strong> Just incredible results that make you look like an SEO genius.
        </p>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">500+</div>
            <div class="stat-label">Agencies Trust Us</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">98%</div>
            <div class="stat-label">Client Retention</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">24h</div>
            <div class="stat-label">Average Response</div>
          </div>
        </div>
        
        <div class="hero-cta-masterpiece">
          <a href="#contact" class="cta-primary-modern">
            <span>Start Your Partnership</span>
            <div class="cta-icon">→</div>
          </a>
          <a href="#how-it-works" class="cta-secondary-modern">
            <span class="play-icon">▶</span>
            <span>See How It Works</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="trust-section">
    <div class="max-w-7xl mx-auto px-4">
      <div class="trust-container">
        <p class="trust-text">Trusted by agencies worldwide</p>
        <div class="trust-logos">
          <div class="trust-logo">🏆 Award Winner</div>
          <div class="trust-logo">⭐ 5.0 Rating</div>
          <div class="trust-logo">🔒 100% Confidential</div>
          <div class="trust-logo">💎 Premium Quality</div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works - Visual Process -->
  <section class="process-masterpiece" id="how-it-works">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header-masterpiece">
        <div class="section-badge">The Process</div>
        <h2>How White Label SEO <span class="gradient-text">Actually Works</span></h2>
        <p>From invisible partnership to incredible results - here's how we make you the SEO hero.</p>
      </div>
      
      <div class="process-timeline">
        <div class="process-step active">
          <div class="step-number">01</div>
          <div class="step-icon">🤝</div>
          <div class="step-content">
            <h3>You Get The Client</h3>
            <p>Client needs SEO. You say "We've got this!" No need to mention us - we're your invisible team.</p>
          </div>
          <div class="step-connector"></div>
        </div>
        
        <div class="process-step">
          <div class="step-number">02</div>
          <div class="step-icon">🎯</div>
          <div class="step-content">
            <h3>We Do The Heavy Lifting</h3>
            <p>Our experts audit, strategize, optimize, and execute everything while you focus on client relationships.</p>
          </div>
          <div class="step-connector"></div>
        </div>
        
        <div class="process-step">
          <div class="step-number">03</div>
          <div class="step-icon">📊</div>
          <div class="step-content">
            <h3>You Deliver Branded Results</h3>
            <p>Get white-labeled reports with YOUR branding. Client thinks you're the SEO genius!</p>
          </div>
          <div class="step-connector"></div>
        </div>
        
        <div class="process-step">
          <div class="step-number">04</div>
          <div class="step-icon">💰</div>
          <div class="step-content">
            <h3>Everyone Wins</h3>
            <p>Client gets results, you get credit and profit, we get satisfaction. Perfect partnership!</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid - Modern Cards -->
  <section class="services-masterpiece">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header-masterpiece">
        <div class="section-badge">Our Arsenal</div>
        <h2>Complete SEO Suite <span class="gradient-text">Under Your Brand</span></h2>
        <p>Everything your clients need to dominate search results. All invisible. All yours to claim.</p>
      </div>
      
      <div class="services-grid-masterpiece">
        <div class="service-card-modern featured">
          <div class="service-icon">🔍</div>
          <div class="service-tag">Most Popular</div>
          <h3>Complete SEO Audits</h3>
          <p>Deep technical analysis that finds every opportunity and issue. Your clients will think you're a detective.</p>
          <div class="service-features">
            <span>Technical Analysis</span>
            <span>Competitor Research</span>
            <span>Action Plans</span>
          </div>
        </div>
        
        <div class="service-card-modern">
          <div class="service-icon">🔑</div>
          <h3>Keyword Strategy</h3>
          <p>Data-driven keyword research that targets what actually converts, not just what gets traffic.</p>
          <div class="service-features">
            <span>Intent Analysis</span>
            <span>Competition Study</span>
            <span>Content Roadmaps</span>
          </div>
        </div>
        
        <div class="service-card-modern">
          <div class="service-icon">✏️</div>
          <h3>Content Creation</h3>
          <p>SEO content that reads like it was written by humans (because it was) and ranks like magic.</p>
          <div class="service-features">
            <span>Blog Posts</span>
            <span>Landing Pages</span>
            <span>Product Descriptions</span>
          </div>
        </div>
        
        <div class="service-card-modern">
          <div class="service-icon">🔗</div>
          <h3>Link Building</h3>
          <p>White-hat link acquisition that builds real authority. No spam, no tricks, just results.</p>
          <div class="service-features">
            <span>Guest Posts</span>
            <span>Digital PR</span>
            <span>Broken Link Building</span>
          </div>
        </div>
        
        <div class="service-card-modern">
          <div class="service-icon">⚡</div>
          <h3>Technical SEO</h3>
          <p>Fix the foundation. Speed optimization, mobile fixes, and all the nerdy stuff that moves rankings.</p>
          <div class="service-features">
            <span>Site Speed</span>
            <span>Core Web Vitals</span>
            <span>Schema Markup</span>
          </div>
        </div>
        
        <div class="service-card-modern">
          <div class="service-icon">📍</div>
          <h3>Local SEO</h3>
          <p>Dominate local search results. Perfect for clients who need foot traffic, not just website visits.</p>
          <div class="service-features">
            <span>Google Business</span>
            <span>Local Citations</span>
            <span>Review Management</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Philippines - Creative Layout -->
  <section class="philippines-masterpiece">
    <div class="max-w-7xl mx-auto px-4">
      <div class="philippines-content">
        <div class="philippines-visual">
          <div class="globe-container">
            <div class="globe">🌏</div>
            <div class="orbit orbit-1">
              <div class="orbit-item">💎</div>
            </div>
            <div class="orbit orbit-2">
              <div class="orbit-item">⚡</div>
            </div>
            <div class="orbit orbit-3">
              <div class="orbit-item">🚀</div>
            </div>
          </div>
        </div>
        
        <div class="philippines-text">
          <div class="section-badge">Why Philippines</div>
          <h2>The Secret Weapon of <span class="gradient-text">Global Agencies</span></h2>
          <p class="philippines-intro">While you sleep, we're optimizing. While you're in meetings, we're building links. The Philippines isn't just our location - it's your competitive advantage.</p>
          
          <div class="advantages-list">
            <div class="advantage-item">
              <div class="advantage-icon">🗣️</div>
              <div class="advantage-content">
                <h4>Native English Speakers</h4>
                <p>No "Engrish" here. Content that actually converts because it sounds natural.</p>
              </div>
            </div>
            
            <div class="advantage-item">
              <div class="advantage-icon">💰</div>
              <div class="advantage-content">
                <h4>Insane Value</h4>
                <p>Get US-quality work at Philippines prices. Your margins will thank you.</p>
              </div>
            </div>
            
            <div class="advantage-item">
              <div class="advantage-icon">🕐</div>
              <div class="advantage-content">
                <h4>Time Zone Magic</h4>
                <p>We work while you sleep. Wake up to progress reports and completed tasks.</p>
              </div>
            </div>
            
            <div class="advantage-item">
              <div class="advantage-icon">🎯</div>
              <div class="advantage-content">
                <h4>Laser Focus</h4>
                <p>We live and breathe SEO. No distractions, no side projects. Just results.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="testimonial-masterpiece">
    <div class="max-w-4xl mx-auto px-4">
      <div class="testimonial-card">
        <div class="testimonial-stars">⭐⭐⭐⭐⭐</div>
        <blockquote>
          "I was skeptical about white label SEO, but Bright Forge changed everything. My clients think I'm an SEO wizard now. Last month alone, I closed $47K in SEO contracts without doing any of the actual work. Game changer!"
        </blockquote>
        <div class="testimonial-author">
          <div class="author-avatar">👨‍💼</div>
          <div class="author-info">
            <div class="author-name">Marcus Chen</div>
            <div class="author-title">Digital Agency Owner, London</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Teaser -->
  <section class="pricing-teaser">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <div class="pricing-card">
        <div class="pricing-badge">💎 Partnership Pricing</div>
        <h2>Ready to become the SEO agency everyone talks about?</h2>
        <p>Custom pricing based on your needs. No cookie-cutter packages. No surprise fees. Just transparent partnership pricing that works for everyone.</p>
        <div class="pricing-features">
          <span>✓ Volume Discounts</span>
          <span>✓ Flexible Terms</span>
          <span>✓ No Setup Fees</span>
          <span>✓ White-Label Everything</span>
        </div>
        <a href="#contact" class="cta-pricing">Get Custom Quote</a>
      </div>
    </div>
  </section>

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
  /* CSS Variables for Consistency */
  :root {
    --gradient-primary: linear-gradient(135deg, #FF4438 0%, #4285F4 100%);
    --gradient-secondary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --shadow-soft: 0 10px 40px rgba(0, 0, 0, 0.1);
    --shadow-medium: 0 20px 60px rgba(0, 0, 0, 0.15);
    --shadow-strong: 0 30px 80px rgba(0, 0, 0, 0.2);
    --border-radius: 24px;
    --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Global Enhancements */
  * {
    transition: var(--transition);
  }

  /* Hero Masterpiece */
  .hero-masterpiece {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #FF4438 100%);
    position: relative;
    padding: 6rem 0 8rem;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-bg-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    z-index: 1;
  }

  .floating-shape {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    animation: float 20s infinite linear;
  }

  .shape-1 {
    width: 300px;
    height: 300px;
    top: 10%;
    left: -5%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 200px;
    height: 200px;
    top: 60%;
    right: -5%;
    animation-delay: -5s;
  }

  .shape-3 {
    width: 150px;
    height: 150px;
    top: 30%;
    right: 20%;
    animation-delay: -10s;
  }

  .shape-4 {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 15%;
    animation-delay: -15s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-20px) rotate(90deg); }
    50% { transform: translateY(-40px) rotate(180deg); }
    75% { transform: translateY(-20px) rotate(270deg); }
  }

  .breadcrumbs-modern {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
    font-size: 0.95rem;
    position: relative;
    z-index: 10;
  }

  .breadcrumbs-modern a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.1);
    transition: var(--transition);
  }

  .breadcrumbs-modern a:hover {
    color: white;
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .breadcrumbs-modern .separator {
    color: rgba(255, 255, 255, 0.6);
    font-weight: bold;
  }

  .breadcrumbs-modern .current {
    color: white;
    font-weight: 600;
  }

  .hero-content-masterpiece {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    padding: 1rem 2rem;
    border-radius: 50px;
    margin-bottom: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    animation: pulse-glow 3s ease-in-out infinite;
  }

  .badge-icon {
    font-size: 1.2rem;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 20px rgba(255, 255, 255, 0.3); }
    50% { box-shadow: 0 0 40px rgba(255, 255, 255, 0.5); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-5px); }
    60% { transform: translateY(-3px); }
  }

  .hero-title-masterpiece {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    color: white;
    margin-bottom: 2rem;
    line-height: 1.1;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .title-line {
    display: block;
    animation: slideInFromLeft 1s ease-out;
  }

  .title-line:nth-child(2) {
    animation-delay: 0.3s;
  }

  .gradient-text {
    background: linear-gradient(135deg, #FFE4E1, #87CEEB, #98FB98);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 3s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { filter: hue-rotate(0deg); }
    50% { filter: hue-rotate(60deg); }
  }

  @keyframes slideInFromLeft {
    0% { transform: translateX(-100px); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
  }

  .hero-subtitle-masterpiece {
    font-size: 1.4rem;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 3rem;
    line-height: 1.6;
    font-weight: 400;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 3rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .stat-item {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: var(--transition);
  }

  .stat-item:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-soft);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
  }

  .hero-cta-masterpiece {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 3rem;
  }

  .cta-primary-modern {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: white;
    color: #FF4438;
    padding: 1.25rem 2.5rem;
    border-radius: 60px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    box-shadow: var(--shadow-soft);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .cta-primary-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: var(--transition);
  }

  .cta-primary-modern:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: var(--shadow-medium);
  }

  .cta-primary-modern:hover::before {
    left: 100%;
  }

  .cta-icon {
    background: #FF4438;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    transition: var(--transition);
  }

  .cta-secondary-modern {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: 60px;
    text-decoration: none;
    font-weight: 600;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: var(--transition);
  }

  .cta-secondary-modern:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: white;
    transform: translateY(-3px);
  }

  .play-icon {
    background: white;
    color: #FF4438;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
  }

  /* Trust Section */
  .trust-section {
    padding: 2rem 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .trust-container {
    text-align: center;
  }

  .trust-text {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .trust-logos {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .trust-logo {
    padding: 0.75rem 1.5rem;
    background: white;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #333;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: var(--transition);
  }

  .trust-logo:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* Process Masterpiece */
  .process-masterpiece {
    padding: 8rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    position: relative;
    overflow: hidden;
  }

  .section-header-masterpiece {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 5rem;
  }

  .section-badge {
    display: inline-block;
    background: var(--gradient-primary);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-soft);
  }

  .section-header-masterpiece h2 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .section-header-masterpiece p {
    font-size: 1.2rem;
    color: #666;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .process-timeline {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
  }

  .process-timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--gradient-primary);
    transform: translateX(-50%);
    border-radius: 2px;
  }

  .process-step {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: center;
    position: relative;
  }

  .process-step:nth-child(even) .step-content {
    order: 3;
    text-align: left;
  }

  .process-step:nth-child(odd) .step-content {
    order: 1;
    text-align: right;
  }

  .step-number {
    order: 2;
    width: 80px;
    height: 80px;

---
import Layout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ButtonPrimary from '../components/ButtonPrimary.astro';
import ButtonSecondary from '../components/ButtonSecondary.astro';
import '../styles/contact.css';

const title = "Contact Bright Forge SEO | Get in Touch";
const description = "Contact Bright Forge SEO for expert SEO services in the Philippines. Get a free consultation and boost your online presence today.";
---

<Layout title={title} description={description}>
  <LegacyHeader slot="header" />
  <Footer slot="footer" />

  <!-- Hero Section -->
  <Hero
    title="Let's Grow Your Business Together"
    breadcrumbCurrent="Contact"
  >
    <Fragment slot="story">
      <p>Ready to dominate search rankings? Our SEO experts are here to help you achieve your digital goals.</p>
      <p>Get in touch with our team of experienced SEO professionals and discover how we can transform your online presence with proven strategies and measurable results.</p>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#contact-form" text="Get Started Now" />
      <ButtonSecondary href="tel:+447123456789" text="Call Us Today" />
    </Fragment>
  </Hero>

  <!-- Contact Form Section -->
  <section id="contact-form" class="contact-section bg-[#f8fafc] py-16" style="background-color: #f8fafc !important;">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div class="contact-form-wrapper p-8 rounded-lg shadow-lg bg-[#f8fafc]" style="background-color: #f8fafc !important;">
          <h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>
          <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thanks" id="contactForm" class="space-y-6">
            <input type="hidden" name="form-name" value="contact" />
            <p class="hidden"><label>Donâ€™t fill this out: <input name="bot-field" /></label></p>
            <div class="form-group">
              <label for="name" class="block text-gray-700 mb-2">Full Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#f97316] focus:ring-2 focus:ring-[#f97316]/20 transition-colors"
                placeholder="Your name"
              />
            </div>

            <div class="form-group">
              <label for="email" class="block text-gray-700 mb-2">Email Address *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#f97316] focus:ring-2 focus:ring-[#f97316]/20 transition-colors"
                placeholder="your@email.com"
              />
            </div>

            <div class="form-group">
              <label for="phone" class="block text-gray-700 mb-2">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#f97316] focus:ring-2 focus:ring-[#f97316]/20 transition-colors"
                placeholder="Your phone number"
              />
            </div>

            <div class="form-group">
              <label for="service" class="block text-gray-700 mb-2">Service Interested In</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#f97316] focus:ring-2 focus:ring-[#f97316]/20 transition-colors"
              >
                <option value="">Select a service</option>
                <option value="philippines-seo">Philippines SEO Services</option>
                <option value="white-label-seo">White Label SEO Services</option>
                <option value="backlink-seo">Backlink SEO Services</option>
                <option value="content-seo">Content SEO Services</option>
                <option value="technical-seo">Technical SEO</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message" class="block text-gray-700 mb-2">Your Message *</label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#f97316] focus:ring-2 focus:ring-[#f97316]/20 transition-colors"
                placeholder="Tell us about your project..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-[#f97316] text-white font-bold py-4 px-8 rounded-lg hover:opacity-90 transition-opacity"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="contact-info-wrapper">
          <h2 class="text-3xl font-bold mb-8">Get in Touch</h2>
          
          <div class="space-y-8">
            <!-- Office Address -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#f97316] rounded-lg flex items-center justify-center">
                <i class="fas fa-map-marker-alt text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Office Address</h3>
                <p class="text-gray-600">
                  Kathleen Place 4, Block 16, Lot 37,<br />
                  Armani Street, 75 S Francisco,<br />
                  Novachlies, Quezon City,<br />
                  1116 Metro Manila
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#f97316] rounded-lg flex items-center justify-center">
                <i class="fas fa-envelope text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Email Us</h3>
                <a href="mailto:seo@brightforgeseo.com" class="text-gray-600 hover:text-[#f97316] transition-colors">
                  seo@brightforgeseo.com
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#f97316] rounded-lg flex items-center justify-center">
                <i class="fas fa-phone-alt text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Call Us</h3>
                <a href="tel:+447123456789" class="text-gray-600 hover:text-[#f97316] transition-colors">
                  +44 7123 456 789
                </a>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#f97316] rounded-lg flex items-center justify-center">
                <i class="fas fa-clock text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Business Hours</h3>
                <p class="text-gray-600">
                  Monday - Friday: 9:00 AM - 6:00 PM<br />
                  Saturday: 9:00 AM - 2:00 PM<br />
                  Sunday: Closed
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Visit Our Office</h2>
        <div class="map-wrapper h-96 rounded-lg overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps?q=14.704227661571542,121.04448433671261&hl=en&z=16&output=embed"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-section {
    background-image: linear-gradient(to bottom right, rgba(255, 68, 56, 0.05), rgba(255, 68, 56, 0.05));
  }

  .form-group label {
    font-weight: 500;
  }

  .contact-info-wrapper {
    position: relative;
  }

  @media (min-width: 768px) {
    .contact-info-wrapper::before {
      content: '';
      position: absolute;
      left: -2rem;
      top: 0;
      bottom: 0;
      width: 1px;
      background: #f97316;
    }
  }

  .map-wrapper {
    position: relative;
    height: 400px;
  }

  .map-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 68, 56, 0.1), rgba(255, 68, 56, 0.1));
    pointer-events: none;
  }
</style>

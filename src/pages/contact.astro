---
import Layout from '../layouts/MainLayout.astro';
import '../styles/contact.css';

const title = "Contact Bright Forge SEO | Get in Touch";
const description = "Contact Bright Forge SEO for expert SEO services in the Philippines. Get a free consultation and boost your online presence today.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container mx-auto px-4 py-16 md:py-24">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-6 bg-gradient-to-r from-[#FF4438] to-[#4285F4] text-transparent bg-clip-text">
        Let's Grow Your Business Together
      </h1>
      <p class="text-xl text-center text-gray-600 max-w-2xl mx-auto mb-8">
        Ready to dominate search rankings? Our SEO experts are here to help you achieve your digital goals.
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="contact-section bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div class="contact-form-wrapper bg-white p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>
          <form id="contactForm" class="space-y-6">
            <div class="form-group">
              <label for="name" class="block text-gray-700 mb-2">Full Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                placeholder="Your name"
              />
            </div>

            <div class="form-group">
              <label for="email" class="block text-gray-700 mb-2">Email Address *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                placeholder="your@email.com"
              />
            </div>

            <div class="form-group">
              <label for="phone" class="block text-gray-700 mb-2">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                placeholder="Your phone number"
              />
            </div>

            <div class="form-group">
              <label for="service" class="block text-gray-700 mb-2">Service Interested In</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
              >
                <option value="">Select a service</option>
                <option value="philippines-seo">Philippines SEO Services</option>
                <option value="white-label-seo">White Label SEO Services</option>
                <option value="backlink-seo">Backlink SEO Services</option>
                <option value="content-seo">Content SEO Services</option>
                <option value="technical-seo">Technical SEO</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message" class="block text-gray-700 mb-2">Your Message *</label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                placeholder="Tell us about your project..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-gradient-to-r from-[#FF4438] to-[#4285F4] text-white font-bold py-4 px-8 rounded-lg hover:opacity-90 transition-opacity"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="contact-info-wrapper">
          <h2 class="text-3xl font-bold mb-8">Get in Touch</h2>
          
          <div class="space-y-8">
            <!-- Office Address -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-[#FF4438] to-[#4285F4] rounded-lg flex items-center justify-center">
                <i class="fas fa-map-marker-alt text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Office Address</h3>
                <p class="text-gray-600">
                  Kathleen Place 4, Block 16, Lot 37,<br />
                  Armani Street, 75 S Francisco,<br />
                  Novachlies, Quezon City,<br />
                  1116 Metro Manila
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-[#FF4438] to-[#4285F4] rounded-lg flex items-center justify-center">
                <i class="fas fa-envelope text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Email Us</h3>
                <a href="mailto:seo@brightforgeseo.com" class="text-gray-600 hover:text-[#FF4438] transition-colors">
                  seo@brightforgeseo.com
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-[#FF4438] to-[#4285F4] rounded-lg flex items-center justify-center">
                <i class="fas fa-phone-alt text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Call Us</h3>
                <a href="tel:+447123456789" class="text-gray-600 hover:text-[#FF4438] transition-colors">
                  +44 7123 456 789
                </a>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-[#FF4438] to-[#4285F4] rounded-lg flex items-center justify-center">
                <i class="fas fa-clock text-white text-xl"></i>
              </div>
              <div>
                <h3 class="font-bold text-xl mb-2">Business Hours</h3>
                <p class="text-gray-600">
                  Monday - Friday: 9:00 AM - 6:00 PM<br />
                  Saturday: 9:00 AM - 2:00 PM<br />
                  Sunday: Closed
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Visit Our Office</h2>
        <div class="map-wrapper h-[400px] rounded-lg overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3860.4099247214847!2d121.0374373!3d14.6760492!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397b71decc0b783%3A0x3c74d8d43b67a1f6!2sQuezon%20City%2C%20Metro%20Manila!5e0!3m2!1sen!2sph!4v1623456789012!5m2!1sen!2sph"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target as HTMLFormElement);
      const data = Object.fromEntries(formData);
      
      try {
        // Replace with your actual form submission endpoint
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          alert('Thank you for your message! We will get back to you soon.');
          (e.target as HTMLFormElement).reset();
        } else {
          throw new Error('Failed to send message');
        }
      } catch (error) {
        alert('Sorry, there was an error sending your message. Please try again later.');
        console.error('Error:', error);
      }
    });
  });
</script>

<style>
  .contact-section {
    background-image: linear-gradient(to bottom right, rgba(255, 68, 56, 0.05), rgba(66, 133, 244, 0.05));
  }

  .form-group label {
    font-weight: 500;
  }

  .contact-info-wrapper {
    position: relative;
  }

  @media (min-width: 768px) {
    .contact-info-wrapper::before {
      content: '';
      position: absolute;
      left: -2rem;
      top: 0;
      bottom: 0;
      width: 1px;
      background: linear-gradient(to bottom, #FF4438, #4285F4);
    }
  }

  .map-wrapper {
    position: relative;
  }

  .map-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 68, 56, 0.1), rgba(66, 133, 244, 0.1));
    pointer-events: none;
  }
</style>

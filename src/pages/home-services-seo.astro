    </div>
  </section>

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
  /* Page-specific visual styles for home services icon grid */
  .hero-image-container {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .home-services-icon-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    padding: 2rem;
  }

  .home-services-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    transition: all 0.3s ease;
    animation: iconFloat 4s ease-in-out infinite;
  }

  .home-services-icon:nth-child(odd) {
    animation-delay: 1s;
  }

  .home-services-icon:nth-child(even) {
    animation-delay: 2s;
  }

  .home-services-icon:hover {
    transform: translateY(-5px) scale(1.05);
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.4);
  }

  @keyframes iconFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @media (max-width: 1024px) {
    .home-services-icon-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .home-services-icon-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }

    .home-services-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
  }

  .why-home-services-seo {
    padding: 80px 0;
    background: #f8fafc;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .section-header h2 span {
    color: #f97316;
  }

  .home-services-explanation {
    max-width: 4xl;
    margin: 0 auto;
  }

  .home-services-card {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    background: white;
    padding: 3rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .home-services-card .home-services-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #f97316, #FF6B35);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    flex-shrink: 0;
  }

  .home-services-text p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #4a5568;
    margin-bottom: 1.5rem;
  }

  .home-services-text p:last-child {
    margin-bottom: 0;
  }

  .features-section {
    padding: 80px 0;
    background: white;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-card {
    position: relative;
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid #e2e8f0;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #f97316, #FF6B35);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(249, 115, 22, 0.15);
    border-color: rgba(249, 115, 22, 0.3);
  }

  .feature-icon {
    width: 90px;
    height: 90px;
    background: linear-gradient(135deg, #f97316, #FF6B35);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 20px rgba(249, 115, 22, 0.25);
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 12px 30px rgba(249, 115, 22, 0.35);
  }

  .feature-card h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .feature-card p {
    color: #4a5568;
    line-height: 1.6;
  }

  .services-section {
    padding: 80px 0;
    background: #f8fafc;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .service-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #f97316, #FF6B35);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(249, 115, 22, 0.15);
    border-color: #f97316;
  }

  .service-header {
    background: linear-gradient(135deg, #f97316, #FF6B35);
    color: white;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .service-icon {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-icon {
    transform: scale(1.1);
  }

  .service-header h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0;
  }

  .service-content {
    padding: 2rem;
  }

  .service-content p {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    color: #4a5568;
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .service-features li:before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: #f97316;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .home-services-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      
      if (question && answer) {
        question.addEventListener('click', () => {
          const isActive = item.classList.contains('active');
          
          faqItems.forEach(faq => {
            faq.classList.remove('active');
            const faqAnswer = faq.querySelector('.faq-answer');
            if (faqAnswer) faqAnswer.style.maxHeight = null;
          });
          
          if (!isActive) {
            item.classList.add('active');
            answer.style.maxHeight = answer.scrollHeight + 'px';
          }
        });
      }
    });
  });
</script>

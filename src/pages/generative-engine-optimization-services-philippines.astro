}

/* Solution Section - 3x2 Grid */
.solution-section-new {
  padding: 80px 0;
  background: var(--brand-light, #f8f9fa);
}

.process-grid-geo {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0;

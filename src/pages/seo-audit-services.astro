<script>
// Expose globally for inline onclick handlers in markup
  window.toggleFAQ = function(btn) {
    try {
      const item = btn.closest('.faq-item');
      if (!item) return;
      const answer = item.querySelector('.faq-answer');
      const icon = btn.querySelector('i');

      const isOpen = item.classList.contains('open');
      // Close any inline height to allow transition
      if (isOpen) {
        answer.style.maxHeight = answer.scrollHeight + 'px'; // set current height
        // force reflow before collapsing
        void answer.offsetHeight;
        answer.style.maxHeight = '0px';
        item.classList.remove('open');
        if (icon) { icon.classList.remove('fa-minus'); icon.classList.add('fa-plus'); }
        btn.setAttribute('aria-expanded', 'false');
        if (answer) answer.setAttribute('aria-hidden', 'true');
      } else {
        item.classList.add('open');
        // set to scrollHeight for smooth transition
        answer.style.maxHeight = answer.scrollHeight + 'px';
        if (icon) { icon.classList.remove('fa-plus'); icon.classList.add('fa-minus'); }
        btn.setAttribute('aria-expanded', 'true');
        if (answer) answer.setAttribute('aria-hidden', 'false');
      }
    } catch (e) { /* no-op */ }
  };

// Progressive enhancement: initialize ARIA and collapsed state
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.faq-item').forEach((item) => {
    const btn = item.querySelector('.faq-question');
    const answer = item.querySelector('.faq-answer');
    if (btn && answer) {
      // Ensure starting collapsed
      item.classList.remove('open');
      btn.setAttribute('aria-expanded', 'false');
      answer.setAttribute('aria-hidden', 'true');
      answer.style.maxHeight = '0px';

      // Bind click listener as a fallback to inline onclick
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        window.toggleFAQ(btn);
      });
    }
  });
});
</script>

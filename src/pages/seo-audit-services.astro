  font-size: 2rem;
  color: white;
}

.feature-content h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--brand-dark);
}

.feature-content p {
  color: var(--brand-soft);
  line-height: 1.6;
  margin-bottom: 1rem;
}

.feature-benefit {
  display: inline-block;
  background: var(--brand-light);
  color: var(--brand-accent);
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 600;
}

/********************
  Case Study Section
*********************/
.case-study-section {
  background: white;
}

.case-study-card {
  background: white;
  border-radius: 20px;
  padding: 3rem;
  box-shadow: var(--shadow-medium);
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 3rem;
  align-items: center;
}

@media (max-width: 768px) {
  .case-study-card {
    grid-template-columns: 1fr;
    text-align: center;
  }
}

.case-badge {
  background: var(--gradient-accent);
  color: white;
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 600;
  display: inline-block;
  margin-bottom: 1rem;
}

.case-study-content h3 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.case-study-content p {
  color: var(--brand-soft);
  line-height: 1.6;
  margin-bottom: 2rem;
}

.case-metrics {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
}

.metric {
  text-align: center;
}

.metric-number {
  display: block;
  font-size: 2rem;
  font-weight: 800;
  color: var(--brand-accent);
}

.metric-label {
  font-size: 0.9rem;
  color: var(--brand-soft);
}

.case-cta {
  background: var(--gradient-accent);
  color: white;
  padding: 12px 24px;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.case-cta:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-medium);
}

.case-visual {
  text-align: center;
}

.recovery-chart {
  background: var(--brand-light);
  padding: 2rem;
  border-radius: 16px;

<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.querySelector('form[name="seo-audit-tool"]');
  const input = document.getElementById('audit-website-url');
  const loadingState = document.getElementById('loading-state');
  const resultsContainer = document.getElementById('audit-results');
  
  if (!form || !input || !loadingState || !resultsContainer) {
    console.error('Required elements not found');
    return;
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const url = input.value.trim();
    if (!url) return;

    // Show loading state
    loadingState.classList.remove('hidden');
    resultsContainer.classList.add('hidden');
    
    // Simulate analysis delay
    await new Promise(resolve => setTimeout(resolve, 2000));
    
    try {
      const analysis = await analyzeWebsite(url);
      displayResults(analysis, resultsContainer);
      
      // Hide loading, show results
      loadingState.classList.add('hidden');
      resultsContainer.classList.remove('hidden');
      
      // Smooth scroll to results
      resultsContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
      
    } catch (error) {
      console.error('Analysis failed:', error);
      showError(resultsContainer);
      loadingState.classList.add('hidden');
      resultsContainer.classList.remove('hidden');
    }
  });

  async function analyzeWebsite(url) {
    // Simulate realistic SEO analysis with varying scores
    const baseScore = 60 + Math.random() * 30; // 60-90 range
    
    const scores = {
      technical: Math.max(50, Math.min(100, baseScore + (Math.random() - 0.5) * 20)),
      content: Math.max(40, Math.min(100, baseScore + (Math.random() - 0.5) * 25)),
      performance: Math.max(30, Math.min(100, baseScore + (Math.random() - 0.5) * 30)),
      mobile: Math.max(60, Math.min(100, baseScore + (Math.random() - 0.5) * 15))
    };
    
    const overallScore = Math.round((scores.technical + scores.content + scores.performance + scores.mobile) / 4);
    
    return {
      url,
      overallScore,
      scores: {
        technical: Math.round(scores.technical),
        content: Math.round(scores.content),
        performance: Math.round(scores.performance),
        mobile: Math.round(scores.mobile)
      },
      issues: generateIssues(overallScore),
      recommendations: generateRecommendations(overallScore)
    };
  }

  function generateIssues(score) {
    const allIssues = [
      { type: 'critical', text: 'Missing meta descriptions on key pages', priority: 'High' },
      { type: 'warning', text: 'Images missing alt text attributes', priority: 'Medium' },
      { type: 'info', text: 'Page loading speed could be improved', priority: 'Medium' },
      { type: 'warning', text: 'No schema markup detected', priority: 'Low' },
      { type: 'critical', text: 'Broken internal links found', priority: 'High' },
      { type: 'info', text: 'Mobile viewport not optimized', priority: 'Medium' },
      { type: 'warning', text: 'H1 tags missing on some pages', priority: 'High' },
      { type: 'info', text: 'SSL certificate needs renewal soon', priority: 'Low' }
    ];
    
    // Show more issues for lower scores
    const issueCount = score >= 80 ? 2 : score >= 60 ? 4 : 6;
    return allIssues.slice(0, issueCount);
  }

  function generateRecommendations(score) {
    const allRecommendations = [
      'Add compelling meta descriptions to all pages',
      'Optimize images with proper alt text and compression',
      'Improve page loading speed with caching',
      'Implement schema markup for better rich snippets',
      'Fix broken internal links',
      'Optimize for mobile devices',
      'Add proper H1 tags to all pages',
      'Update SSL certificate'
    ];
    
    const recCount = score >= 80 ? 3 : score >= 60 ? 5 : 7;
    return allRecommendations.slice(0, recCount);
  }

  function displayResults(analysis, container) {
    const getScoreColor = (score) => {
      if (score >= 80) return { text: 'text-green-600', bg: 'bg-green-100', border: 'border-green-200' };
      if (score >= 60) return { text: 'text-yellow-600', bg: 'bg-yellow-100', border: 'border-yellow-200' };
      return { text: 'text-red-600', bg: 'bg-red-100', border: 'border-red-200' };
    };

    const overallColors = getScoreColor(analysis.overallScore);
    
    container.innerHTML = `
      <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl p-8 border border-blue-100">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Analysis Complete
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">SEO Audit Results</h3>
          <p class="text-gray-600">${analysis.url}</p>
        </div>

        <!-- Overall Score -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-24 h-24 ${overallColors.bg} ${overallColors.border} border-2 rounded-full mb-4">
            <span class="text-3xl font-bold ${overallColors.text}">${analysis.overallScore}</span>
          </div>
          <div class="text-lg font-semibold text-gray-900">Overall SEO Score</div>
          <div class="text-sm text-gray-600">
            ${analysis.overallScore >= 80 ? 'Excellent! Your site is well optimized.' : 
              analysis.overallScore >= 60 ? 'Good foundation with room for improvement.' : 
              'Significant optimization opportunities available.'}
          </div>
        </div>

        <!-- Score Breakdown -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
          ${Object.entries(analysis.scores).map(([category, score]) => {
            const colors = getScoreColor(score);
            const categoryNames = {
              technical: 'Technical SEO',
              content: 'Content Quality', 
              performance: 'Performance',
              mobile: 'Mobile UX'
            };
            
            return `
              <div class="bg-white rounded-xl p-4 border border-gray-200 text-center">
                <div class="text-2xl font-bold ${colors.text} mb-1">${score}%</div>
                <div class="text-sm font-medium text-gray-900">${categoryNames[category]}</div>
              </div>
            `;
          }).join('')}
        </div>

        <!-- Issues & Recommendations -->
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Issues -->
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Issues Found
            </h4>
            <div class="space-y-3">
              ${analysis.issues.map(issue => `
                <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                  <div class="w-2 h-2 rounded-full mt-2 ${
                    issue.type === 'critical' ? 'bg-red-500' : 
                    issue.type === 'warning' ? 'bg-yellow-500' : 'bg-blue-500'
                  }"></div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-gray-900">${issue.text}</div>
                    <div class="text-xs text-gray-600">Priority: ${issue.priority}</div>
                  </div>
                </div>
              `).join('')}
            </div>
          </div>

          <!-- Recommendations -->
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Recommendations
            </h4>
            <div class="space-y-3">
              ${analysis.recommendations.map(rec => `
                <div class="flex items-center gap-3 p-3 bg-green-50 rounded-lg">
                  <svg class="w-4 h-4 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">

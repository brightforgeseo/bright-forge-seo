  --shadow-strong: 0 15px 50px rgba(0, 0, 0, 0.15);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', 'DM Sans', sans-serif;
  line-height: 1.6;
  color: var(--brand-dark);
  overflow-x: hidden;
}

/********************
  Section Styling
*********************/
section {
  padding: 5rem 0;
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.section-badge {
  display: inline-block;
  background: var(--gradient-accent);
  color: white;
  padding: 8px 20px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.section-header h2 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 1rem;
}

.section-header span {
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-header p {
  font-size: 1.2rem;
  color: var(--brand-soft);
  max-width: 600px;
  margin: 0 auto;
}

/********************
  Hero Section
*********************/
.hero-section {
  background: var(--gradient-primary);
  color: white;
  padding: 8rem 0 6rem;
  position: relative;
  overflow: hidden;
  min-height: 100vh;
  display: flex;
  align-items: center;
}

.hero-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='m0 40l40-40h-40v40zm40 0v-40h-40l40 40z'/%3E%3C/g%3E%3C/svg%3E");
  animation: float 20s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.breadcrumbs {
  font-size: 0.9rem;
  margin-bottom: 2rem;
  color: rgba(255,255,255,0.8);
}

.breadcrumbs a {
  color: white;
  text-decoration: none;
  transition: color 0.3s ease;
}

.breadcrumbs a:hover {
  color: rgba(255,255,255,0.9);
}

.separator {
  margin: 0 0.5rem;
  opacity: 0.6;
}

.current {
  opacity: 0.8;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: 4rem;
  align-items: center;
}

@media (min-width: 1024px) {
  .hero-content {
    grid-template-columns: 1.2fr 0.8fr;
  }
}

.hero-badge-top {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 8px 16px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.badge-icon {
  font-size: 16px;
}

.hero-text h1 {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 1.5rem;
}

.hero-subtitle {
  font-size: clamp(1.1rem, 3vw, 1.4rem);
  margin-bottom: 1rem;
  color: rgba(255,255,255,0.95);
  font-weight: 500;
}

.hero-description {
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
  color: rgba(255,255,255,0.9);
  line-height: 1.7;
  max-width: 600px;
}

.hero-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  margin: 2rem 0;
  padding: 2rem;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 2.5rem;
  font-weight: 800;
  color: white;
  line-height: 1;
}

.stat-label {
  font-size: 0.9rem;
  color: rgba(255,255,255,0.8);
  margin-top: 0.5rem;
}

.hero-cta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 2rem;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 28px;
  border-radius: 50px;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-button.primary {
  background: white;
  color: var(--brand-accent);
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.cta-button.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.cta-button.secondary {
  background: rgba(255, 255, 255, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: white;
  backdrop-filter: blur(10px);
}

.cta-button.secondary:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(-2px);
}

/* Hero Visual */
.hero-visual {
  position: relative;
}

.audit-dashboard {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: 20px;
  padding: 2rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: var(--shadow-medium);
}

.dashboard-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
}

.dashboard-title {
  font-size: 1.2rem;
  font-weight: 600;
  color: white;
}

.score-ring {
  position: relative;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: conic-gradient(#00d084 0deg 313deg, rgba(255,255,255,0.2) 313deg 360deg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.score-ring::before {
  content: '';
  position: absolute;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10px);
}

.score-number {
  font-size: 1.5rem;
  font-weight: 800;
  color: white;
  z-index: 1;
}

.score-label {
  position: absolute;
  bottom: -20px;
  font-size: 0.8rem;
  color: rgba(255,255,255,0.8);
  z-index: 1;
}

.dashboard-metrics {
  display: grid;
  gap: 1rem;
}

.metric-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.1);
}

.metric-item.good {
  border-left: 4px solid #00d084;
}

.metric-item.warning {
  border-left: 4px solid #ffd700;
}

.metric-item.error {
  border-left: 4px solid #ff4757;
}

.metric-label {
  font-size: 0.9rem;
  color: rgba(255,255,255,0.9);
}

.metric-value {
  font-weight: 700;
  color: white;
}

.audit-badge {
  position: absolute;
  top: -20px;
  right: -20px;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 16px 20px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  gap: 12px;
  box-shadow: var(--shadow-medium);
  transform: rotate(-5deg);
}

.audit-icon {
  font-size: 24px;
}

.audit-text span {
  display: block;
  font-size: 12px;
  opacity: 0.9;
}

.audit-text strong {
  font-size: 18px;
  font-weight: 700;
}

/********************
  Social Proof Banner
*********************/
.social-proof-banner {
  background: var(--brand-light);
  padding: 2rem 0;
  border-bottom: 1px solid #e5e7eb;
}

.proof-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap;
}

.proof-text {
  color: var(--brand-soft);
  font-weight: 600;
  text-align: center;
}

.proof-logos {
  display: flex;
  gap: 1rem;
}

.logo-item {
  width: 40px;
  height: 40px;
  background: white;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  box-shadow: var(--shadow-soft);
}

/********************
  Why Audit Section
*********************/
.why-audit-section {
  background: white;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.feature-card {
  background: white;
  border-radius: 16px;
  padding: 2.5rem;
  text-align: center;
  box-shadow: var(--shadow-soft);
  transition: all 0.3s ease;
  border: 1px solid #f0f0f0;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-accent);
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-medium);
}

.feature-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 1.5rem;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  color: white;
  position: relative;
}

.feature-icon.reveal {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.feature-icon.lightbulb {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
}

.feature-icon.roadmap {
  background: linear-gradient(135deg, #00d084, #00a86b);
}

.feature-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.feature-card p {
  color: var(--brand-soft);
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.feature-metric {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: var(--brand-light);
  padding: 12px 20px;
  border-radius: 50px;
  margin-top: 1rem;
}

.metric-value {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--brand-accent);
}

.metric-label {
  font-size: 0.9rem;
  color: var(--brand-soft);
}

/********************
  Coverage Section
*********************/
.coverage-section {
  background: #f8fafc;
}

.coverage-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
}

.coverage-card {
  background: white;
  border-radius: 16px;
  padding: 2.5rem;
  box-shadow: var(--shadow-soft);
  border: 1px solid #f0f0f0;
  transition: all 0.3s ease;
}

.coverage-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-medium);
}

.coverage-icon {
  width: 60px;
  height: 60px;
  border-radius: 15px;
  background: var(--gradient-accent);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: white;
  margin-bottom: 1.5rem;
}

.coverage-content h3 {
  font-size: 1.3rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.coverage-content p {
  color: var(--brand-soft);
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.coverage-checklist {
  display: grid;
  gap: 0.5rem;
}

.check-item {
  font-size: 0.9rem;
  color: var(--brand-soft);
  padding: 4px 0;
}

/********************
  Signs Section
*********************/
.signs-section {
  background: white;
}

.signs-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.sign-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  box-shadow: var(--shadow-soft);
  border: 1px solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.sign-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-medium);
}

.sign-card.urgent {
  border-left: 4px solid #ff4757;
}

.sign-card.warning {
  border-left: 4px solid #ffd700;
}

.sign-card.attention {
  border-left: 4px solid #4285F4;
}

.sign-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.sign-card h3 {
  font-size: 1.2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--brand-dark);
}

.sign-card p {
  color: var(--brand-soft);
  line-height: 1.6;
}

/********************
  Process Section
*********************/
.process-section {
  background: white;
}

.process-timeline {
  position: relative;
  max-width: 1000px;
  margin: 0 auto;
}

.timeline-line {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 3px;
  background: linear-gradient(to bottom, var(--brand-blue), var(--brand-accent));
  transform: translateX(-50%);
  z-index: 1;
}

@media (max-width: 768px) {
  .timeline-line {
    left: 30px;
  }
}

.step-card {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 2rem;
  align-items: center;
  margin-bottom: 4rem;
  position: relative;
  z-index: 2;
}

.step-card.reverse {
  grid-template-columns: 1fr auto 1fr;
}

.step-card.reverse .step-content {
  grid-column: 3;
  text-align: left;
}

.step-card.reverse .step-visual {
  grid-column: 1;
}

@media (max-width: 768px) {
  .step-card,
  .step-card.reverse {
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
  }
  
  .step-card .step-content,
  .step-card.reverse .step-content {
    grid-column: 2;
    text-align: left;
  }
  
  .step-card .step-visual,
  .step-card.reverse .step-visual {
    grid-column: 2;
    grid-row: 1;
  }
}

.step-number {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: var(--gradient-accent);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  font-size: 1.5rem;
  box-shadow: var(--shadow-medium);
  position: relative;
  z-index: 3;
}

.step-content {
  background: white;
  padding: 2.5rem;
  border-radius: 16px;
  box-shadow: var(--shadow-soft);
  border: 1px solid #f0f0f0;
}

.step-content h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.step-content p {
  color: var(--brand-soft);
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.step-details {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.detail-item {
  background: var(--brand-light);
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.9rem;
  color: var(--brand-soft);
}

.step-visual {
  width: 100px;
  height: 100px;
  background: var(--gradient-secondary);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-medium);
}

.visual-icon {
  font-size: 2.5rem;
}

/********************
  Deliverables Section
*********************/
.deliverables-section {
  background: var(--brand-light);
}

.feature-list {
  display: grid;
  gap: 2rem;
  max-width: 900px;
  margin: 0 auto;
}

.feature-item {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 2rem;
  align-items: center;
  background: white;
  padding: 2.5rem;
  border-radius: 16px;
  box-shadow: var(--shadow-soft);
  border: 1px solid #f0f0f0;
  transition: all 0.3s ease;
}

.feature-item:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-medium);
}

.feature-icon-large {
  width: 80px;
  height: 80px;
  border-radius: 20px;
  background: var(--gradient-accent);
  display: flex;
  align-items: center;

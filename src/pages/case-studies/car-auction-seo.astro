---
import MainLayout from "../../layouts/MainLayout.astro";
import LegacyHeader from "../../components/LegacyHeader.astro";
import Footer from "../../components/Footer.astro";
import ContactSection from "../../components/ContactSection.astro";
import Hero from "../../components/Hero.astro";
import ButtonPrimary from "../../components/ButtonPrimary.astro";
import ButtonSecondary from "../../components/ButtonSecondary.astro";

const caseStudyData = {
  title: "SEO Case Study: Expanding Organic Reach for a Car Auction Platform",
  client: "Car Auction Platform",
  industry: "Automotive",
  duration: "6 Months",
  heroImage: "/images/case-studies/SEO Case Study- Expanding Organic Reach for a Car Auction Platform .webp",
  challenge: "Highly competitive automotive auction market with diverse keyword requirements and the need to maintain visibility while scaling inventory.",
  solution: "Implemented a holistic SEO strategy encompassing keyword research, on-page optimisation, technical fixes and authoritative backlink acquisition to boost impressions and clicks.",
  keyMetrics: [
    { label: "Total Impressions", value: "+32%", description: "7.96 M 10.5 M" },
    { label: "Organic Clicks", value: "+5%", description: "398 k 419 k" },
    { label: "Avg. Position", value: "-20%", description: "31.7 39.7" },
    { label: "CTR", value: "-20%", description: "5% 4%" }
  ],
  strategySteps: [
    { title: "Keyword Research", description: "Identified high-intent auction and vehicle terms.", icon: "search" },
    { title: "On-Page Optimisation", description: "Optimised titles, meta and listing content.", icon: "edit" },
    { title: "Technical SEO", description: "Improved speed, mobile UX & crawlability.", icon: "cogs" },
    { title: "Backlink Building", description: "Secured links from automotive blogs and forums.", icon: "link" },
    { title: "Performance Monitoring", description: "Iterative improvements via GSC insights.", icon: "chart-line" }
  ],
  results: [
    { metric: "Total Clicks", before: "398,000", after: "419,000", improvement: "+5%" },
    { metric: "Total Impressions", before: "7.96 M", after: "10.5 M", improvement: "+32%" },
    { metric: "Average Position", before: "31.7", after: "39.7", improvement: "-20%" },
    { metric: "Click-Through Rate", before: "5%", after: "4%", improvement: "-20%" }
  ],
  keyTakeaways: [
    "Comprehensive keyword targeting drives wider auction visibility.",
    "Technical enhancements sustain performance as inventory scales.",
    "Continuous data-driven iteration supports steady growth."
  ]
};
---

<MainLayout title="Car Auction Platform SEO Results | Bright Forge SEO" description="We helped a car auction platform lift impressions by 32%. See how search targeting and content clean-up drove better visibility across Google.">
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    badgeIcon="fas fa-trophy"
    badgeText="Success Story"
    title="SEO Case Study: Expanding Organic Reach for a Car Auction Platform"
    breadcrumbCurrent="Car Auction Platform"
  >
    <Fragment slot="story">
      <div class="client-badge">
        <i class="fas fa-building"></i>
        <span>{caseStudyData.industry}</span>
        <div class="divider"></div>
        <i class="fas fa-calendar"></i>
        <span>{caseStudyData.duration}</span>
      </div>

      <p>Discover how we helped {caseStudyData.client} transform their digital presence and achieve exceptional growth through data-driven SEO strategies in the highly competitive automotive auction market.</p>

      <div class="primary-metric">
        <div class="metric-number">{caseStudyData.keyMetrics[0]?.value}</div>
        <div class="metric-label">{caseStudyData.keyMetrics[0]?.label}</div>
        <div class="metric-description">{caseStudyData.keyMetrics[0]?.description}</div>
      </div>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#results" text="View Full Results" />
      <ButtonSecondary href="/contact/" text="Discuss Your Project" />
    </Fragment>

    <Fragment slot="visual">
      <div class="hero-image-container">
        <div class="results-showcase">
          <img src={caseStudyData.heroImage} alt={`${caseStudyData.client} Performance Dashboard`} />
          <div class="showcase-overlay">
            <div class="growth-badge">
              <i class="fas fa-trending-up"></i>
              <span>Growth Achieved</span>
            </div>
          </div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Impact Results Section -->
  <section class="impact-results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="results-header">
        <h2>Impact & Results</h2>
        <p>The measurable transformation we delivered for {caseStudyData.client}</p>
      </div>

      <div class="achievement-grid">
        {caseStudyData.keyMetrics.map((metric, index) => (
          <div class="achievement-card">
            <div class="achievement-rank">#{index + 1}</div>
            <div class="achievement-icon">
              <i class="fas fa-medal"></i>
            </div>
            <div class="achievement-data">
              <div class="achievement-value">{metric.value}</div>
              <h3 class="achievement-title">{metric.label}</h3>
              <p class="achievement-desc">{metric.description}</p>
            </div>
            <div class="achievement-glow"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- The Challenge Story -->
  <section class="challenge-story">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="story-header">
        <h2>The Challenge</h2>
        <p>Every success story begins with overcoming obstacles</p>
      </div>

      <div class="timeline-container">
        <div class="timeline-line"></div>

        <div class="story-point initial-state">
          <div class="story-marker">
            <i class="fas fa-flag"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Initial State</div>
            <h3>The Situation</h3>
            <div class="challenge-narrative">{caseStudyData.challenge}</div>

            <div class="challenge-indicators">
              <div class="indicator negative">
                <i class="fas fa-trending-down"></i>
                <span>Declining Performance</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-search-minus"></i>
                <span>Poor Visibility</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-users-slash"></i>
                <span>Limited Reach</span>
              </div>
            </div>
          </div>
        </div>

        <div class="story-point turning-point">
          <div class="story-marker">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Turning Point</div>
            <h3>The Solution Approach</h3>
            <p>{caseStudyData.solution}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Strategic Methodology -->
  <section class="methodology-section">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="methodology-header">
        <h2>Our Strategic Methodology</h2>
        <p>The proven framework that delivered exceptional results for {caseStudyData.client}</p>
      </div>

      <div class="methodology-flow">
        {caseStudyData.strategySteps.map((step, index) => (
          <div class="methodology-step">
            <div class="step-connector"></div>
            <div class="method-card">
              <div class="card-header">
                <div class="step-count">
                  <span>Step</span>
                  <div class="step-num">{index + 1}</div>
                </div>
                <div class="step-icon-container">
                  <i class={`fas fa-${step.icon}`}></i>
                </div>
              </div>
              <div class="card-body">
                <h3 class="method-title">{step.title}</h3>
                <p class="method-description">{step.description}</p>
                <div class="completion-status">
                  <i class="fas fa-check-circle"></i>
                  <span>Completed Successfully</span>
                </div>
              </div>
              <div class="card-footer">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 100%"></div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Performance Transformation -->
  <section class="performance-transformation" id="results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="transformation-header">
        <h2>Performance Transformation</h2>
        <p>Dramatic improvements across all key metrics</p>
      </div>

      <div class="comparison-container">
        {caseStudyData.results.map((result) => (
          <div class="comparison-card">
            <div class="metric-header">
              <h3 class="metric-name">{result.metric}</h3>
            </div>

            <div class="comparison-visual">
              <div class="before-section">
                <div class="section-label">
                  <i class="fas fa-arrow-down"></i>
                  <span>Before</span>
                </div>
                <div class="metric-value before-value">{result.before}</div>
                <div class="value-indicator before"></div>
              </div>

              <div class="transformation-arrow">
                <div class="arrow-icon">
                  <i class="fas fa-arrow-right"></i>
                </div>
                <div class="transformation-label">Transformed</div>
              </div>

              <div class="after-section">
                <div class="section-label">
                  <i class="fas fa-arrow-up"></i>
                  <span>After</span>
                </div>
                <div class="metric-value after-value">{result.after}</div>
                <div class="value-indicator after"></div>
              </div>
            </div>

            <div class="improvement-highlight">
              <div class="improvement-badge">
                <i class="fas fa-trophy"></i>
                <span class="improvement-text">{result.improvement}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Strategic Insights -->
  <section class="strategic-insights">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="insights-header">
        <h2>Strategic Insights</h2>
        <p>Key lessons learned from {caseStudyData.client}'s transformation journey</p>
      </div>

      <div class="insights-intro">
        <div class="intro-content">
          <h3>What We Learned</h3>
          <p>Every successful project teaches us valuable lessons that can benefit future clients. Here are the strategic insights from {caseStudyData.client}'s transformation.</p>
        </div>
      </div>

      <div class="insights-grid">
        {caseStudyData.keyTakeaways.map((takeaway, index) => (
          <div class="insight-card">
            <div class="insight-header">
              <div class="insight-number">
                <span>{index + 1}</span>
              </div>
              <div class="insight-icon">
                <i class="fas fa-lightbulb"></i>
              </div>
            </div>
            <div class="insight-content">
              <h4>Strategic Insight</h4>
              <p class="insight-text">{takeaway}</p>
              <div class="insight-category">
                <i class="fas fa-tag"></i>
                <span>Lesson Learned</span>
              </div>
            </div>
            <div class="insight-glow"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>


  transition: all 0.3s ease;
  overflow: hidden;
  position: relative;
}

.comparison-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.15);
  border-color: rgba(66, 133, 244, 0.3);
}

.metric-header {
  text-align: center;
  margin-bottom: 40px;
}

.metric-name {
  font-size: 1.8rem;
  font-weight: 700;
  color: #1a1a1a;
  margin: 0;
}

.comparison-visual {
  display: grid;
  grid-template-columns: 1fr auto 1fr;

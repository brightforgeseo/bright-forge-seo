  background: linear-gradient(135deg, #f97316, #FF6B35);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateX(-50%);
  z-index: 2;
}

.story-marker i {
  color: white;
  font-size: 20px;
}

.story-content {
  background: white;
  padding: 40px;
  border-radius: 20px;

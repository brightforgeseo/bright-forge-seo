---
import MainLayout from '../../layouts/MainLayout.astro';
import LegacyHeader from '../../components/LegacyHeader.astro';
import Footer from '../../components/Footer.astro';
import ContactSection from '../../components/ContactSection.astro';
import Hero from '../../components/Hero.astro';
import ButtonPrimary from '../../components/ButtonPrimary.astro';
import ButtonSecondary from '../../components/ButtonSecondary.astro';
import CaseStudyTemplate from '../../components/CaseStudyTemplate.astro';

const caseStudyData = {
  title: "119% Increase in Organic Traffic for Speediance UK Fitness",
  client: "Speediance UK",
  industry: "Fitness",
  duration: "3 months",
  heroImage: "/images/case-studies/SEO Case Study- Increasing Organic Traffic for Speediance AU â€“ Fitness Equipment Supplier .webp",
  challenge: "Speediance UK operates in a highly competitive fitness market. In order to stand out, our primary goal was to bolster its organic visibility, drive higher-quality traffic, and improve overall SEO performance in the crowded fitness equipment space.",
  solution: "We implemented a comprehensive SEO strategy combining technical excellence, compelling content, and strategic off-page efforts to establish a solid foundation for both immediate and long-term growth.",
  keyMetrics: [
    {
      label: "Total Clicks",
      value: "4.74K",
      description: "119% increase from baseline"
    },
    {
      label: "Impressions",
      value: "111K",
      description: "135% growth in visibility"
    },
    {
      label: "Keyword Reach",
      value: "Expanded",
      description: "Broader market coverage"
    },
    {
      label: "Major Spike",
      value: "March 2025",
      description: "Peak performance period"
    }
  ],
  strategySteps: [
    {
      title: "Technical SEO Audit",
      description: "In-depth technical audit identifying opportunities to enhance page speed, mobile responsiveness, and structured data utilization.",
      icon: "fas fa-cogs"
    },
    {
      title: "Keyword Research & Analysis",
      description: "Extensive keyword research and competitor analyses to uncover areas where Speediance UK could gain a competitive advantage.",
      icon: "fas fa-search"
    },
    {
      title: "Content Optimization",
      description: "Crafted high-quality, keyword-focused content and refreshed existing pages to align with target audience search patterns.",
      icon: "fas fa-edit"
    },
    {
      title: "Strategic Link Building",
      description: "Executed a strategic link-building campaign centered on high-authority fitness industry publications.",
      icon: "fas fa-link"
    },
    {
      title: "User Experience Enhancement",
      description: "Restructured site navigation, made crucial information more accessible, and incorporated conversion rate optimization strategies.",
      icon: "fas fa-users"
    }
  ],
  results: [
    {
      metric: "Total Clicks",
      before: "2.16K",
      after: "4.74K",
      improvement: "+119%"
    },
    {
      metric: "Impressions",
      before: "47.2K",
      after: "111K",
      improvement: "+135%"
    },
    {
      metric: "Average Position",
      before: "9.7",
      after: "16.7",
      improvement: "Expanded keyword reach"
    },
    {
      metric: "Click-Through Rate",
      before: "4.6%",
      after: "4.3%",
      improvement: "Broader keyword footprint"
    },
    {
      metric: "Brand Visibility",
      before: "Limited",
      after: "Significant",
      improvement: "Major spike in March 2025"
    }
  ],
  testimonial: {
    quote: "Bright Forge SEO delivered exceptional results for our fitness equipment brand. Their strategic approach to SEO has significantly improved our online visibility and driven quality traffic to our site. The consistent uptick in engagement has reinforced our brand credibility in the competitive fitness market.",
    author: "Luke",
    position: "Marketing Director",
    company: "Speediance UK",
    avatar: "/images/testimonials/luke-speediance.jpg"
  },
  keyTakeaways: [
    "Technical SEO improvements provided a solid foundation for sustainable growth",
    "Strategic keyword targeting expanded the brand's reach to new potential customers",
    "High-quality content aligned with user search intent improved engagement metrics",
    "Authority-building through targeted link acquisition strengthened domain reputation",
    "User experience enhancements made crucial information more accessible and improved conversions"
  ],
  nextSteps: "Ready to achieve similar results for your fitness business? Our proven SEO strategies can help you stand out in the competitive fitness industry and drive sustainable growth."
};
---

<MainLayout title="Case Study: Speediance UK Fitness SEO Success | Bright Forge SEO" description="Speediance UK climbed the rankings fast. See how structured content, local intent, and smart SEO strategy helped them dominate UK fitness search.">
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    badgeIcon="fas fa-trophy"
    badgeText="Success Story"
    title={caseStudyData.title}
    breadcrumbCurrent="Speediance UK Case Study"
  >
    <Fragment slot="story">
      <div class="client-badge">
        <i class="fas fa-building"></i>
        <span>{caseStudyData.industry}</span>
        <div class="divider"></div>
        <i class="fas fa-calendar"></i>
        <span>{caseStudyData.duration}</span>
      </div>

      <p class="case-description">
        Discover how we helped {caseStudyData.client} transform their digital presence and achieve exceptional growth through data-driven SEO strategies.
      </p>

      <div class="primary-metric">
        <div class="metric-number">{caseStudyData.keyMetrics[0]?.value}</div>
        <div class="metric-label">{caseStudyData.keyMetrics[0]?.label}</div>
        <div class="metric-description">{caseStudyData.keyMetrics[0]?.description}</div>
      </div>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#results" text="View Full Results" icon="fas fa-chart-line" />
      <ButtonSecondary href="/contact" text="Discuss Your Project" icon="fas fa-comments" />
    </Fragment>

    <Fragment slot="visual">
      {caseStudyData.heroImage && (
        <div class="hero-image-container">
          <div class="results-showcase">
            <img src={caseStudyData.heroImage} alt={`${caseStudyData.client} Performance Dashboard`} />
            <div class="showcase-overlay">
              <div class="growth-badge">
                <i class="fas fa-trending-up"></i>
                <span>Growth Achieved</span>
              </div>
            </div>
          </div>
        </div>
      )}
    </Fragment>
  </Hero>

  <CaseStudyTemplate {...caseStudyData} />

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
/* Hero Visual Styles for Case Study */
.hero-image-container {
  position: relative;
  width: 100%;
  max-width: 500px;
}

.client-badge {
  display: inline-flex;
  align-items: center;
  gap: 15px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50px;
  padding: 15px 25px;
  margin-bottom: 30px;
  font-weight: 600;
  font-size: 14px;
  color: white;
}

.client-badge .divider {
  width: 1px;
  height: 20px;
  background: rgba(255, 255, 255, 0.4);
}

.case-description {
  font-size: 1.2rem;
  line-height: 1.6;
  margin-bottom: 30px;
  color: rgba(255, 255, 255, 0.9);
}

.primary-metric {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 30px;
  margin-bottom: 20px;
  text-align: center;
}

.metric-number {
  font-size: 3.5rem;
  font-weight: 900;
  color: white;
  margin-bottom: 10px;
}

.metric-label {
  font-size: 1.2rem;
  font-weight: 700;
  color: white;
  margin-bottom: 8px;
}

.metric-description {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.8);
}

.results-showcase {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 20px;
}

.results-showcase img {
  width: 100%;
  height: auto;
  border-radius: 15px;
}

.showcase-overlay {
  position: absolute;
  top: 30px;
  right: 30px;
}

.growth-badge {
  background: rgba(52, 168, 83, 0.9);
  color: white;
  padding: 12px 20px;
  border-radius: 50px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  font-size: 14px;
  backdrop-filter: blur(10px);
}

@media (max-width: 768px) {
  .metric-number {
    font-size: 2.5rem;
  }

  .case-description {
    font-size: 1.1rem;
  }

  .client-badge {
    font-size: 12px;
    padding: 12px 20px;
    gap: 10px;
  }
}

/* Hide the CaseStudyTemplate's built-in hero since we're using the standardized Hero component */
.case-hero {
  display: none;
}
</style>

---
import MainLayout from '../../layouts/MainLayout.astro';
import LegacyHeader from '../../components/LegacyHeader.astro';
import Footer from '../../components/Footer.astro';
import ContactSection from '../../components/ContactSection.astro';
import Hero from '../../components/Hero.astro';
import ButtonPrimary from '../../components/ButtonPrimary.astro';
import ButtonSecondary from '../../components/ButtonSecondary.astro';

const caseStudyData = {
  title: "119% Increase in Organic Traffic for Speediance UK Fitness",
  client: "Speediance UK",
  industry: "Fitness",
  duration: "3 months",
  heroImage: "/images/case-studies/SEO Case Study- Increasing Organic Traffic for Speediance AU – Fitness Equipment Supplier .webp",
  challenge: "Speediance UK operates in a highly competitive fitness market. In order to stand out, our primary goal was to bolster its organic visibility, drive higher-quality traffic, and improve overall SEO performance in the crowded fitness equipment space.",
  solution: "We implemented a comprehensive SEO strategy combining technical excellence, compelling content, and strategic off-page efforts to establish a solid foundation for both immediate and long-term growth.",
  keyMetrics: [
    {
      label: "Total Clicks",
      value: "4.74K",
      description: "119% increase from baseline"
    },
    {
      label: "Impressions",
      value: "111K",
      description: "135% growth in visibility"
    },
    {
      label: "Keyword Reach",
      value: "Expanded",
      description: "Broader market coverage"
    },
    {
      label: "Major Spike",
      value: "March 2025",
      description: "Peak performance period"
    }
  ],
  strategySteps: [
    {
      title: "Technical SEO Audit",
      description: "In-depth technical audit identifying opportunities to enhance page speed, mobile responsiveness, and structured data utilization.",
      icon: "fas fa-cogs"
    },
    {
      title: "Keyword Research & Analysis",
      description: "Extensive keyword research and competitor analyses to uncover areas where Speediance UK could gain a competitive advantage.",
      icon: "fas fa-search"
    },
    {
      title: "Content Optimization",
      description: "Crafted high-quality, keyword-focused content and refreshed existing pages to align with target audience search patterns.",
      icon: "fas fa-edit"
    },
    {
      title: "Strategic Link Building",
      description: "Executed a strategic link-building campaign centered on high-authority fitness industry publications.",
      icon: "fas fa-link"
    },
    {
      title: "User Experience Enhancement",
      description: "Restructured site navigation, made crucial information more accessible, and incorporated conversion rate optimization strategies.",
      icon: "fas fa-users"
    }
  ],
  results: [
    {
      metric: "Total Clicks",
      before: "2.16K",
      after: "4.74K",
      improvement: "+119%"
    },
    {
      metric: "Impressions",
      before: "47.2K",
      after: "111K",
      improvement: "+135%"
    },
    {
      metric: "Average Position",
      before: "9.7",
      after: "16.7",
      improvement: "Expanded keyword reach"
    },
    {
      metric: "Click-Through Rate",
      before: "4.6%",
      after: "4.3%",
      improvement: "Broader keyword footprint"
    },
    {
      metric: "Brand Visibility",
      before: "Limited",
      after: "Significant",
      improvement: "Major spike in March 2025"
    }
  ],
  testimonial: {
    quote: "Bright Forge SEO delivered exceptional results for our fitness equipment brand. Their strategic approach to SEO has significantly improved our online visibility and driven quality traffic to our site. The consistent uptick in engagement has reinforced our brand credibility in the competitive fitness market.",
    author: "Luke",
    position: "Marketing Director",
    company: "Speediance UK",
    avatar: "/images/testimonials/luke-speediance.jpg"
  },
  keyTakeaways: [
    "Technical SEO improvements provided a solid foundation for sustainable growth",
    "Strategic keyword targeting expanded the brand's reach to new potential customers",
    "High-quality content aligned with user search intent improved engagement metrics",
    "Authority-building through targeted link acquisition strengthened domain reputation",
    "User experience enhancements made crucial information more accessible and improved conversions"
  ],
  nextSteps: "Ready to achieve similar results for your fitness business? Our proven SEO strategies can help you stand out in the competitive fitness industry and drive sustainable growth."
};
---

<MainLayout title="Case Study: Speediance UK Fitness SEO Success | Bright Forge SEO" description="Speediance UK climbed the rankings fast. See how structured content, local intent, and smart SEO strategy helped them dominate UK fitness search.">
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    title={caseStudyData.client}
    breadcrumbCurrent="Speediance UK"
  >
    <Fragment slot="story">
      <div class="case-meta">
        <span class="meta-item">{caseStudyData.industry}</span>
        <span class="meta-divider">•</span>
        <span class="meta-item">{caseStudyData.duration}</span>
      </div>
      <p>Discover how we helped {caseStudyData.client} transform their digital presence and achieve exceptional growth through data-driven SEO strategies.</p>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#results" text="View Full Results" />
      <ButtonSecondary href="/contact/" text="Discuss Your Project" />
    </Fragment>
  </Hero>

  <!-- Key Metrics Section -->
  <section class="metrics-section">
    <div class="max-w-6xl mx-auto px-6 py-20">
      <div class="metrics-grid">
        {caseStudyData.keyMetrics.map((metric) => (
          <div class="metric-card">
            <div class="metric-value">{metric.value}</div>
            <div class="metric-label">{metric.label}</div>
            <div class="metric-description">{metric.description}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Hero Image Section -->
  <section class="image-section">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <div class="case-image-container">
        <img src={caseStudyData.heroImage} alt={`${caseStudyData.client} Performance Dashboard`} />
      </div>
    </div>
  </section>

  <!-- Challenge Section -->
  <section class="content-section">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <h2 class="section-title">The Challenge</h2>
      <p class="section-text">{caseStudyData.challenge}</p>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="content-section gray">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <h2 class="section-title">Our Approach</h2>
      <p class="section-text">{caseStudyData.solution}</p>
    </div>
  </section>

  <!-- Strategy Section -->
  <section class="content-section">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <h2 class="section-title">Strategy</h2>

      <div class="strategy-list">
        {caseStudyData.strategySteps.map((step, index) => (
          <div class="strategy-item">
            <div class="strategy-number">{index + 1}</div>
            <div class="strategy-content">
              <h3 class="strategy-title">{step.title}</h3>
              <p class="strategy-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Results Section -->
  <section class="content-section gray" id="results">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <h2 class="section-title">Results</h2>

      <div class="results-table">
        <table>
          <thead>
            <tr>
              <th>Metric</th>
              <th>Before</th>
              <th>After</th>
              <th>Change</th>
            </tr>
          </thead>
          <tbody>
            {caseStudyData.results.map((result) => (
              <tr>
                <td class="metric-name">{result.metric}</td>
                <td>{result.before}</td>
                <td>{result.after}</td>
                <td class="improvement">{result.improvement}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Key Takeaways Section -->
  <section class="content-section">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <h2 class="section-title">Key Takeaways</h2>

      <ul class="takeaways-list">
        {caseStudyData.keyTakeaways.map((takeaway) => (
          <li>{takeaway}</li>
        ))}
      </ul>
    </div>
  </section>

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
/* Case Study Meta */
.case-meta {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 24px;
  font-size: 16px;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}

.meta-item {
  color: rgba(255, 255, 255, 0.9);
}

.meta-divider {
  opacity: 0.5;
}

/* Metrics Section */
.metrics-section {
  background: #ffffff;
  border-bottom: 1px solid #e5e7eb;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 48px;
}

.metric-card {
  text-align: center;
  padding: 24px 0;
}

.metric-value {
  font-size: 3rem;
  font-weight: 800;
  color: #f97316;
  margin-bottom: 12px;
  letter-spacing: -0.02em;
}

.metric-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: #1e293b;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 8px;
}

.metric-description {
  font-size: 0.875rem;
  color: #64748b;
}

/* Image Section */
.image-section {
  background: #ffffff;
}

.case-image-container {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.case-image-container img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
  background: #f8fafc;
}

/* Content Sections */
.content-section {
  background: #ffffff;
  border-bottom: 1px solid #e5e7eb;
}

.content-section.gray {
  background: #f8fafc;
}

.section-title {
  font-size: 2rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24px;
  letter-spacing: -0.01em;
}

.section-text {
  font-size: 1.125rem;
  line-height: 1.8;
  color: #475569;
}

/* Strategy List */
.strategy-list {
  display: flex;
  flex-direction: column;
  gap: 32px;
  margin-top: 32px;
}

.strategy-item {
  display: flex;
  gap: 24px;
  align-items: flex-start;
}

.strategy-number {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  background: #f97316;
  color: white;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  font-weight: 700;
}

.strategy-content {
  flex: 1;
}

.strategy-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8px;
}

.strategy-description {
  font-size: 1rem;
  line-height: 1.6;
  color: #64748b;
}

/* Results Table */
.results-table {
  margin-top: 32px;
  overflow-x: auto;
}

.results-table table {
  width: 100%;
  border-collapse: collapse;
}

.results-table th {
  text-align: left;
  padding: 16px 20px;
  background: #f1f5f9;
  font-size: 0.875rem;
  font-weight: 600;
  color: #475569;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-bottom: 2px solid #e2e8f0;
}

.results-table td {
  padding: 20px;
  font-size: 1rem;
  color: #1e293b;
  border-bottom: 1px solid #e5e7eb;
}

.results-table tr:last-child td {
  border-bottom: none;
}

.results-table .metric-name {
  font-weight: 600;
}

.results-table .improvement {
  color: #f97316;
  font-weight: 600;
}

/* Takeaways List */
.takeaways-list {
  list-style: none;
  padding: 0;
  margin: 32px 0 0 0;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.takeaways-list li {
  font-size: 1.125rem;
  line-height: 1.7;
  color: #475569;
  padding-left: 32px;
  position: relative;
}

.takeaways-list li::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10px;
  width: 6px;
  height: 6px;
  background: #f97316;
  border-radius: 50%;
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }

  .metrics-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .metric-value {
    font-size: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
  }

  .strategy-item {
    gap: 16px;
  }

  .strategy-number {
    width: 40px;
    height: 40px;
    font-size: 1rem;
  }

  .results-table {
    font-size: 0.875rem;
  }

  .results-table th,
  .results-table td {
    padding: 12px;
  }
}

@media (max-width: 480px) {
  .metrics-grid {
    grid-template-columns: 1fr;
  }
}
</style>

---
import MainLayout from "../../layouts/MainLayout.astro";
import LegacyHeader from "../../components/LegacyHeader.astro";
import Footer from "../../components/Footer.astro";
import ContactSection from "../../components/ContactSection.astro";
import CaseStudyTemplate from "../../components/CaseStudyTemplate.astro";

const caseStudyData = {
  title: "SEO Case Study: 177% Organic Traffic Growth for Speediance NZ",
  client: "Speediance NZ",
  industry: "Fitness Equipment",
  duration: "6 Months",
  heroImage: "/images/case-studies/SEO Case Study- Boosting Organic Traffic for Speediance NZ – Gym Equipment Supplier .webp",
  challenge: "Competing in a saturated fitness equipment market while targeting both commercial gyms and individual consumers amid seasonal demand fluctuations.",
  solution: "Deep keyword research, on-page optimisation, technical improvements, and authoritative link building drove dramatic visibility and traffic gains.",
  keyMetrics: [
    { label: "Total Clicks", value: "+177%", description: "927 ➜ 2,570" },
    { label: "Total Impressions", value: "+84%", description: "46.6k ➜ 85.8k" },
    { label: "Avg. Position", value: "31.3 ➜ 25.0", description: "20% improvement" },
    { label: "CTR", value: "2% ➜ 3%", description: "+50%" }
  ],
  strategySteps: [
    { title: "Keyword Strategy", description: "Mapped commercial & consumer search intent across NZ.", icon: "fas fa-search" },
    { title: "Content Optimisation", description: "Enhanced product & category pages for target queries.", icon: "fas fa-edit" },
    { title: "Technical SEO", description: "Improved site speed, mobile UX & structured data.", icon: "fas fa-cogs" },
    { title: "Link Building", description: "Earned mentions from fitness blogs and local directories.", icon: "fas fa-link" },
    { title: "Performance Monitoring", description: "Refined tactics continuously using GSC insights.", icon: "fas fa-chart-line" }
  ],
  results: [
    { metric: "Total Clicks", before: "927", after: "2,570", improvement: "+177%" },
    { metric: "Total Impressions", before: "46,600", after: "85,800", improvement: "+84%" },
    { metric: "Average Position", before: "31.3", after: "25.0", improvement: "Improved" },
    { metric: "Click-Through Rate", before: "2%", after: "3%", improvement: "+50%" }
  ],
  keyTakeaways: [
    "Keyword & content alignment fuels growth.",
    "Technical excellence underpins ranking gains.",
    "Continuous monitoring adapts to seasonality."
  ]
};
---

<MainLayout title={caseStudyData.title + " | BrightForge"}>
  <LegacyHeader slot="header" />

  <CaseStudyTemplate {...caseStudyData} />

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

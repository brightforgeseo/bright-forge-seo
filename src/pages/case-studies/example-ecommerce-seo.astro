---
import MainLayout from '../../layouts/MainLayout.astro';
import LegacyHeader from '../../components/LegacyHeader.astro';
import Footer from '../../components/Footer.astro';
import ContactSection from '../../components/ContactSection.astro';
import CaseStudyTemplate from '../../components/CaseStudyTemplate.astro';

const caseStudyData = {
  title: "How We Increased E-commerce Revenue by 340% Through Strategic SEO",
  client: "Manila Fashion Hub",
  industry: "E-commerce Fashion",
  duration: "8 months",
  heroImage: "/images/case-studies/manila-fashion-hero.jpg",
  challenge: "Manila Fashion Hub was struggling with low organic visibility in a competitive fashion market. Their website had technical SEO issues, poor content structure, and was losing traffic to larger competitors. Monthly organic revenue was only ₱180,000 despite having a quality product catalog.",
  solution: "We implemented a comprehensive SEO strategy focusing on technical optimization, content restructuring, and strategic link building tailored for the Philippine fashion market.",
  keyMetrics: [
    {
      label: "Organic Revenue",
      value: "₱792,000/mo",
      description: "340% increase from baseline"
    },
    {
      label: "Keyword Rankings",
      value: "450+",
      description: "First page rankings achieved"
    },
    {
      label: "Organic Traffic",
      value: "285%",
      description: "Month-over-month growth"
    },
    {
      label: "Conversion Rate",
      value: "4.2%",
      description: "Up from 1.8% baseline"
    }
  ],
  strategySteps: [
    {
      title: "Technical SEO Audit",
      description: "Comprehensive analysis of site architecture, page speed, mobile optimization, and indexing issues.",
      icon: "fas fa-cogs"
    },
    {
      title: "Keyword Research & Strategy",
      description: "In-depth research into Filipino fashion search behavior and high-converting product keywords.",
      icon: "fas fa-search"
    },
    {
      title: "Content Optimization",
      description: "Restructured product descriptions, category pages, and created SEO-focused fashion guides.",
      icon: "fas fa-edit"
    },
    {
      title: "Link Building Campaign",
      description: "Strategic outreach to Philippine fashion blogs, influencers, and industry publications.",
      icon: "fas fa-link"
    },
    {
      title: "Performance Tracking",
      description: "Monthly reporting and strategy adjustments based on performance data and market changes.",
      icon: "fas fa-chart-line"
    }
  ],
  results: [
    {
      metric: "Monthly Organic Revenue",
      before: "₱180,000",
      after: "₱792,000",
      improvement: "+340%"
    },
    {
      metric: "Organic Search Traffic",
      before: "8,500 visits/mo",
      after: "32,750 visits/mo",
      improvement: "+285%"
    },
    {
      metric: "First Page Keywords",
      before: "45 keywords",
      after: "450+ keywords",
      improvement: "+900%"
    },
    {
      metric: "Average Order Value",
      before: "₱2,850",
      after: "₱3,650",
      improvement: "+28%"
    },
    {
      metric: "Conversion Rate",
      before: "1.8%",
      after: "4.2%",
      improvement: "+133%"
    }
  ],
  testimonial: {
    quote: "Bright Forge SEO transformed our online presence completely. We went from struggling to compete to becoming one of the top fashion retailers in organic search. The results speak for themselves - our revenue has more than tripled!",
    author: "Maria Santos",
    position: "Founder & CEO",
    company: "Manila Fashion Hub",
    avatar: "/images/testimonials/maria-santos.jpg"
  },
  keyTakeaways: [
    "Technical SEO fixes were crucial - site speed improvements alone increased conversions by 45%",
    "Philippines-specific keyword research revealed untapped opportunities in Tagalog fashion terms",
    "Content localization for Filipino fashion preferences significantly improved engagement rates",
    "Strategic link building with local fashion influencers generated high-quality referral traffic",
    "Monthly optimization cycles allowed us to capitalize on seasonal fashion trends quickly"
  ],
  nextSteps: "Ready to see similar results for your e-commerce business? Our proven SEO strategies can help you dominate your market and achieve sustainable growth."
};
---

<MainLayout title="Case Study: E-commerce SEO Success | Bright Forge SEO Philippines">
  <LegacyHeader />
  
  <CaseStudyTemplate {...caseStudyData} />
  
  <ContactSection />
  <Footer />
</MainLayout>

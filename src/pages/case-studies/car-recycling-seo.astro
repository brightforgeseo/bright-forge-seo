---
import MainLayout from "../../layouts/MainLayout.astro";
import LegacyHeader from "../../components/LegacyHeader.astro";
import Footer from "../../components/Footer.astro";
import ContactSection from "../../components/ContactSection.astro";
import CaseStudyTemplate from "../../components/CaseStudyTemplate.astro";
import Hero from "../../components/Hero.astro";
import ButtonPrimary from "../../components/ButtonPrimary.astro";
import ButtonSecondary from "../../components/ButtonSecondary.astro";

const caseStudyData = {
  title: "SEO Case Study: 29% Organic Traffic Growth for Car Recycling Company",
  client: "Confidential Car Recycler",
  industry: "Car Recycling",
  duration: "3 Months",
  heroImage: "/images/case-studies/SEO Case Study- Boosting Organic Traffic for a Car Recycling Client.webp",
  challenge: "Competing in a crowded car recycling market with limited brand recognition and inconsistent prior SEO efforts.",
  solution: "Comprehensive keyword research, on-page improvements, technical fixes and quality backlink acquisition delivered quick traffic gains.",
  keyMetrics: [
    { label: "Total Clicks", value: "+29%", description: "4,960 ➜ 6,380" },
    { label: "Total Impressions", value: "+78%", description: "120k ➜ 213k" },
    { label: "Average Position", value: "29.1 ➜ 24.9", description: "Improved" },
    { label: "CTR", value: "4.1% ➜ 3%", description: "Broader visibility" }
  ],
  strategySteps: [
    { title: "Keyword Research", description: "Identified high-intent car recycling terms.", icon: "fas fa-search" },
    { title: "On-Page Optimisation", description: "Enhanced meta titles, descriptions & content relevance.", icon: "fas fa-file-alt" },
    { title: "Technical SEO", description: "Fixed site speed, crawlability & mobile usability issues.", icon: "fas fa-cogs" },
    { title: "Backlink Outreach", description: "Secured links from automotive & environmental sites.", icon: "fas fa-link" },
    { title: "Performance Monitoring", description: "Iterated tactics using analytics & GSC data.", icon: "fas fa-chart-line" }
  ],
  results: [
    { metric: "Total Clicks", before: "4,960", after: "6,380", improvement: "+29%" },
    { metric: "Total Impressions", before: "120,000", after: "213,000", improvement: "+78%" },
    { metric: "Average Position", before: "29.1", after: "24.9", improvement: "Improved" },
    { metric: "Click-Through Rate", before: "4.1%", after: "3%", improvement: "Slight decrease" }
  ],
  keyTakeaways: [
    "Targeted SEO can drive quick wins in competitive niches.",
    "Technical health underpins sustainable performance.",
    "Quality niche backlinks build authority & trust."
  ]
};
---

<MainLayout title="Car Recycling Company SEO Case Study | Bright Forge SEO" description="We helped a car recycling company grow search reach through better local signals, optimised content, and link-building that actually worked.">
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    badgeIcon="fas fa-trophy"
    badgeText="Success Story"
    title="SEO Case Study: 29% Organic Traffic Growth for Car Recycling Company"
    breadcrumbCurrent="Car Recycling SEO Case Study"
  >
    <Fragment slot="story">
      <p>Competing in a crowded car recycling market with limited brand recognition and inconsistent prior SEO efforts presented significant challenges for our client. Through comprehensive keyword research, on-page improvements, technical fixes and quality backlink acquisition, we delivered quick traffic gains that transformed their online presence.</p>
      <p>Discover how we helped this car recycling company achieve exceptional growth through data-driven SEO strategies, increasing their total clicks by 29% and impressions by 78% in just 3 months.</p>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#results" text="View Full Results" icon="fas fa-chart-line" />
      <ButtonSecondary href="/contact/" text="Discuss Your Project" />
    </Fragment>

    <Fragment slot="visual">
      <div class="hero-image-container">
        <div class="results-showcase">
          <img src={caseStudyData.heroImage} alt={`${caseStudyData.client} Performance Dashboard`} />
          <div class="showcase-overlay">
            <div class="growth-badge">
              <i class="fas fa-trending-up"></i>
              <span>Growth Achieved</span>
            </div>
          </div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <CaseStudyTemplate {...caseStudyData} />
  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
/* Hero Visual Styles */
.hero-image-container {
  position: relative;
  width: 100%;
  max-width: 500px;
}

.results-showcase {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 20px;
}

.results-showcase img {
  width: 100%;
  height: auto;
  border-radius: 15px;
}

.showcase-overlay {
  position: absolute;
  top: 30px;
  right: 30px;
}

.growth-badge {
  background: rgba(52, 168, 83, 0.9);
  color: white;
  padding: 12px 20px;
  border-radius: 50px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  font-size: 14px;
  backdrop-filter: blur(10px);
}

@media (max-width: 768px) {
  .hero-image-container {
    max-width: 100%;
  }

  .showcase-overlay {
    top: 15px;
    right: 15px;
  }

  .growth-badge {
    padding: 8px 12px;
    font-size: 12px;
  }
}
</style>

---
import MainLayout from '../../layouts/MainLayout.astro';
import LegacyHeader from '../../components/LegacyHeader.astro';
import Footer from '../../components/Footer.astro';
import ContactSection from '../../components/ContactSection.astro';
import Hero from '../../components/Hero.astro';
import ButtonPrimary from '../../components/ButtonPrimary.astro';
import ButtonSecondary from '../../components/ButtonSecondary.astro';
import CaseStudyTemplate from '../../components/CaseStudyTemplate.astro';

const caseStudyData = {
  title: "How We Boosted Organic Traffic by 19% for a Consulting Firm",
  client: "Professional Consulting Firm",
  industry: "Business Consulting",
  duration: "6 months",
  heroImage: "/images/case-studies/SEO Case Study- Increasing Organic Traffic for a Consulting Firm .webp",
  challenge: "Our client is a professional consulting firm offering expert advice and solutions across various industries. They faced significant challenges in a competitive consulting landscape with many established firms. They needed to target diverse consulting service keywords while improving visibility for both branded and non-branded search queries.",
  solution: "We developed a comprehensive SEO strategy focused on content optimization, technical improvements, and authority building to increase organic search visibility and attract more qualified leads.",
  keyMetrics: [
    {
      label: "Organic Traffic",
      value: "+19%",
      description: "Increase in total clicks from search"
    },
    {
      label: "Search Visibility",
      value: "+86%",
      description: "Growth in total impressions"
    },
    {
      label: "Keyword Rankings",
      value: "Improved",
      description: "Average position from 23.3 to 21.7"
    }
  ],
  strategySteps: [
    {
      title: "In-depth Keyword Research",
      description: "Conducted comprehensive keyword research focused on consulting services and industry-specific queries to identify high-value opportunities.",
      icon: "fa-search"
    },
    {
      title: "Content Optimization",
      description: "Optimized website content, meta tags, and service pages to match search intent and improve relevancy for target keywords.",
      icon: "fa-file-alt"
    },
    {
      title: "Site Architecture Improvements",
      description: "Enhanced site architecture and internal linking structure for better crawlability and improved user experience.",
      icon: "fa-sitemap"
    },
    {
      title: "Authority Building",
      description: "Built authoritative backlinks from industry publications and relevant websites to strengthen domain authority.",
      icon: "fa-link"
    },
    {
      title: "Performance Monitoring",
      description: "Continuously monitored Google Search Console data for performance insights and ongoing optimization opportunities.",
      icon: "fa-chart-line"
    }
  ],
  results: [
    {
      metric: "Total Clicks",
      before: "13,200",
      after: "15,700",
      improvement: "+19%"
    },
    {
      metric: "Total Impressions",
      before: "398,000",
      after: "742,000",
      improvement: "+86%"
    },
    {
      metric: "Average Position",
      before: "23.3",
      after: "21.7",
      improvement: "+1.6"
    },
    {
      metric: "Click-Through Rate",
      before: "3.3%",
      after: "2.1%",
      improvement: "-1.2%"
    }
  ],
  testimonial: {
    quote: "The SEO strategy implemented by Bright Forge has significantly improved our online visibility. We're seeing more qualified leads coming through our website, and our consultants are spending less time prospecting and more time delivering value to clients.",
    author: "Sarah Thompson",
    position: "Marketing Director",
    company: "Professional Consulting Firm",
    avatar: "/images/testimonials/sarah-thompson.jpg"
  },
  keyTakeaways: [
    "Strategic keyword targeting across different consulting services drove significant impression growth",
    "Content optimization focused on search intent improved relevancy and organic traffic",
    "Technical SEO improvements enhanced crawlability and indexation of important service pages",
    "Authority-building efforts strengthened domain reputation in the competitive consulting space",
    "Ongoing performance monitoring allowed for continuous optimization and improvement"
  ],
  nextSteps: "Moving forward, our strategy will focus on improving click-through rates for high-impression keywords and enhancing conversion pathways to turn more visitors into qualified leads."
};
---

<MainLayout title="Organic Gains for Consultant Firm | Bright Forge SEO" description="A 19% organic traffic increase for this consulting firm started with structure, keyword clarity, and fixes that made their SEO finally work.">
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    badgeIcon="fas fa-trophy"
    badgeText="Success Story"
    title={caseStudyData.title}
    breadcrumbCurrent={caseStudyData.client}
  >
    <Fragment slot="story">
      <div class="client-info">
        <div class="info-badge">
          <i class="fas fa-building"></i>
          <span>{caseStudyData.industry}</span>
          <div class="divider"></div>
          <i class="fas fa-calendar"></i>
          <span>{caseStudyData.duration}</span>
        </div>
      </div>

      <p>Discover how we helped {caseStudyData.client} transform their digital presence and achieve exceptional growth through data-driven SEO strategies.</p>

      <div class="primary-metric">
        <div class="metric-number">{caseStudyData.keyMetrics[0]?.value}</div>
        <div class="metric-label">{caseStudyData.keyMetrics[0]?.label}</div>
        <div class="metric-description">{caseStudyData.keyMetrics[0]?.description}</div>
      </div>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="#results" text="View Full Results" />
      <ButtonSecondary href="/contact/" text="Discuss Your Project" />
    </Fragment>

    <Fragment slot="visual">
      {caseStudyData.heroImage && (
        <div class="hero-image-container">
          <div class="results-showcase">
            <img src={caseStudyData.heroImage} alt={`${caseStudyData.client} Performance Dashboard`} />
            <div class="showcase-overlay">
              <div class="growth-badge">
                <i class="fas fa-trending-up"></i>
                <span>Growth Achieved</span>
              </div>
            </div>
          </div>
        </div>
      )}
    </Fragment>
  </Hero>

  <!-- Impact Results Section -->
  <section class="impact-results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="results-header">
        <h2>Impact & Results</h2>
        <p>The measurable transformation we delivered for {caseStudyData.client}</p>
      </div>

      <div class="achievement-grid">
        {caseStudyData.keyMetrics.map((metric, index) => (
          <div class="achievement-card">
            <div class="achievement-rank">#{index + 1}</div>
            <div class="achievement-icon">
              <i class="fas fa-medal"></i>
            </div>
            <div class="achievement-data">
              <div class="achievement-value">{metric.value}</div>
              <h3 class="achievement-title">{metric.label}</h3>
              <p class="achievement-desc">{metric.description}</p>
            </div>
            <div class="achievement-glow"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- The Challenge Story -->
  <section class="challenge-story">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="story-header">
        <h2>The Challenge</h2>
        <p>Every success story begins with overcoming obstacles</p>
      </div>

      <div class="timeline-container">
        <div class="timeline-line"></div>

        <div class="story-point initial-state">
          <div class="story-marker">
            <i class="fas fa-flag"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Initial State</div>
            <h3>The Situation</h3>
            <div class="challenge-narrative">{caseStudyData.challenge}</div>

            <div class="challenge-indicators">
              <div class="indicator negative">
                <i class="fas fa-trending-down"></i>
                <span>Declining Performance</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-search-minus"></i>
                <span>Poor Visibility</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-users-slash"></i>
                <span>Limited Reach</span>
              </div>
            </div>
          </div>
        </div>

        <div class="story-point turning-point">
          <div class="story-marker">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Turning Point</div>
            <h3>The Solution Approach</h3>
            <p>We identified the core issues and developed a comprehensive strategy to transform {caseStudyData.client}'s digital presence through strategic SEO implementation.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Strategic Methodology -->
  <section class="methodology-section">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="methodology-header">
        <h2>Our Strategic Methodology</h2>
        <p>The proven framework that delivered exceptional results for {caseStudyData.client}</p>
      </div>

      <div class="methodology-flow">
        {caseStudyData.strategySteps.map((step, index) => (
          <div class="methodology-step">
            <div class="step-connector"></div>
            <div class="method-card">
              <div class="card-header">
                <div class="step-count">
                  <span>Step</span>
                  <div class="step-num">{index + 1}</div>
                </div>
                <div class="step-icon-container">
                  <i class={`fas ${step.icon}`}></i>
                </div>
              </div>
              <div class="card-body">
                <h3 class="method-title">{step.title}</h3>
                <p class="method-description">{step.description}</p>
                <div class="completion-status">
                  <i class="fas fa-check-circle"></i>
                  <span>Completed Successfully</span>
                </div>
              </div>
              <div class="card-footer">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 100%"></div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Performance Transformation -->
  <section class="performance-transformation" id="results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="transformation-header">
        <h2>Performance Transformation</h2>
        <p>Dramatic improvements across all key metrics</p>
      </div>

      <div class="comparison-container">
        {caseStudyData.results.map((result) => (
          <div class="comparison-card">
            <div class="metric-header">
              <h3 class="metric-name">{result.metric}</h3>
            </div>

            <div class="comparison-visual">
              <div class="before-section">
                <div class="section-label">
                  <i class="fas fa-arrow-down"></i>
                  <span>Before</span>
                </div>
                <div class="metric-value before-value">{result.before}</div>
                <div class="value-indicator before"></div>
              </div>

              <div class="transformation-arrow">
                <div class="arrow-icon">
                  <i class="fas fa-arrow-right"></i>
                </div>
                <div class="transformation-label">Transformed</div>
              </div>

              <div class="after-section">
                <div class="section-label">
                  <i class="fas fa-arrow-up"></i>
                  <span>After</span>
                </div>
                <div class="metric-value after-value">{result.after}</div>
                <div class="value-indicator after"></div>
              </div>
            </div>

            <div class="improvement-highlight">
              <div class="improvement-badge">
                <i class="fas fa-trophy"></i>
                <span class="improvement-text">{result.improvement}</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="transformation-footer">
        <div class="footer-content">
          <h3>Exceptional Growth Achieved</h3>
          <p>These results demonstrate the power of strategic SEO implementation tailored specifically for {caseStudyData.client}'s industry and market position.</p>

          <div class="success-indicators">
            <div class="success-item">
              <i class="fas fa-chart-line"></i>
              <span>Sustainable Growth</span>
            </div>
            <div class="success-item">
              <i class="fas fa-target"></i>
              <span>Goals Exceeded</span>
            </div>
            <div class="success-item">
              <i class="fas fa-rocket"></i>
              <span>Market Leadership</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  {caseStudyData.testimonial && (
    <section class="client-spotlight">
      <div class="max-w-7xl mx-auto px-4 py-20">
        <div class="spotlight-container">
          <div class="spotlight-header">
            <h2>Client Spotlight</h2>
            <p>Hear directly from {caseStudyData.client} about their transformation journey</p>
          </div>

          <div class="testimonial-showcase">
            <div class="quote-section">
              <div class="quote-mark">
                <i class="fas fa-quote-left"></i>
              </div>
              <blockquote class="testimonial-text">
                "{caseStudyData.testimonial.quote}"
              </blockquote>
            </div>

            <div class="author-section">
              <div class="author-profile">
                {caseStudyData.testimonial.avatar && (
                  <div class="author-avatar">
                    <img src={caseStudyData.testimonial.avatar} alt={caseStudyData.testimonial.author} />
                  </div>
                )}
                <div class="author-details">
                  <h4 class="author-name">{caseStudyData.testimonial.author}</h4>
                  <p class="author-title">{caseStudyData.testimonial.position}</p>
                  <p class="author-company">{caseStudyData.testimonial.company}</p>
                </div>
              </div>

              <div class="satisfaction-metrics">
                <div class="satisfaction-item">
                  <i class="fas fa-star"></i>
                  <span>5-Star Partnership</span>
                </div>
                <div class="satisfaction-item">
                  <i class="fas fa-handshake"></i>
                  <span>Ongoing Collaboration</span>
                </div>
                <div class="satisfaction-item">
                  <i class="fas fa-thumbs-up"></i>
                  <span>Highly Recommended</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Strategic Insights -->
  <section class="strategic-insights">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="insights-header">
        <h2>Strategic Insights</h2>
        <p>Key lessons learned from {caseStudyData.client}'s transformation journey</p>
      </div>

      <div class="insights-intro">
        <div class="intro-content">
          <h3>What We Learned</h3>
          <p>Every successful project teaches us valuable lessons that can benefit future clients. Here are the strategic insights from {caseStudyData.client}'s transformation.</p>
        </div>
      </div>

      <div class="insights-grid">
        {caseStudyData.keyTakeaways.map((takeaway, index) => (
          <div class="insight-card">
            <div class="insight-header">
              <div class="insight-number">
                <span>{index + 1}</span>
              </div>
              <div class="insight-icon">
                <i class="fas fa-lightbulb"></i>
              </div>
            </div>
            <div class="insight-content">
              <h4>Strategic Insight</h4>
              <p class="insight-text">{takeaway}</p>
              <div class="insight-category">
                <i class="fas fa-tag"></i>
                <span>Lesson Learned</span>
              </div>
            </div>
            <div class="insight-glow"></div>
          </div>
        ))}
      </div>

      <div class="insights-conclusion">
        <div class="conclusion-card">
          <h3>The Bottom Line</h3>
          <p>These insights demonstrate that successful SEO requires a strategic, data-driven approach tailored to each client's unique challenges and market position.</p>
          <div class="conclusion-cta">
            <a href="/contact/" class="insights-btn">
              <i class="fas fa-arrow-right"></i>
              <span>Apply These Insights to Your Business</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Next Steps CTA -->
  {caseStudyData.nextSteps && (
    <section class="next-steps-section">
      <div class="max-w-7xl mx-auto px-4">
        <div class="cta-container">
          <h3>Ready for Similar Results?</h3>
          <p>{caseStudyData.nextSteps}</p>
          <div class="hero-actions">
            <a href="/contact/" class="cta-button primary">
              <span>Get Started Today</span>
              <i class="fas fa-arrow-right"></i>
            </a>
            <a href="/" class="cta-button secondary">
              <i class="fas fa-info-circle"></i>
              <span>Learn More</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  )}

  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
/* Hero Visual Styles - Case Study Specific */
.client-info {
  margin-bottom: 1.5rem;
}

.info-badge {
  display: inline-flex;
  align-items: center;
  gap: 15px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50px;
  padding: 15px 25px;
  font-weight: 600;
  font-size: 14px;
  color: white;
}

.info-badge .divider {
  width: 1px;
  height: 20px;
  background: rgba(255, 255, 255, 0.4);
}

.primary-metric {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 30px;
  margin-top: 30px;
  text-align: center;
}

.metric-number {
  font-size: 3.5rem;
  font-weight: 900;
  color: white;
  margin-bottom: 10px;
}

.metric-label {
  font-size: 1.2rem;
  font-weight: 700;
  color: white;
  margin-bottom: 8px;
}

.metric-description {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.8);
}

.hero-image-container {
  position: relative;
  width: 100%;
  max-width: 500px;
}

.results-showcase {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 20px;
}

.results-showcase img {
  width: 100%;
  height: auto;
  border-radius: 15px;
}

.showcase-overlay {
  position: absolute;
  top: 30px;
  right: 30px;
}

.growth-badge {
  background: rgba(52, 168, 83, 0.9);
  color: white;
  padding: 12px 20px;
  border-radius: 50px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  font-size: 14px;
  backdrop-filter: blur(10px);
}

/* Impact Results Section */
.impact-results {
  background: #f8fafc;
  padding: 100px 0;
}

.results-header {
  text-align: center;
  margin-bottom: 60px;
}

.results-header h2 {
  font-size: 3rem;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 1rem;
}

.achievement-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  margin-bottom: 60px;
}

.achievement-card {
  background: white;
  border-radius: 20px;
  padding: 40px;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.achievement-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  border-color: rgba(66, 133, 244, 0.3);
}

.achievement-rank {
  position: absolute;
  top: 20px;
  right: 20px;
  background: linear-gradient(135deg, #f97316 0%, #FF6B35 50%, #4285F4 100%);
  color: white;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 14px;
}

.achievement-icon {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
}

.achievement-icon i {
  font-size: 24px;
  color: white;
}

.achievement-value {
  font-size: 3rem;
  font-weight: 900;
  background: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10px;
}

.achievement-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 10px;
}

.achievement-desc {
  color: #666;
  line-height: 1.6;
}

.achievement-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 68, 56, 0.07), rgba(255, 107, 53, 0.07));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.achievement-card:hover .achievement-glow {
  opacity: 1;
}

/* Challenge Story Timeline */
.challenge-story {
  background: white;
  padding: 100px 0;
}

.story-header {
  text-align: center;
  margin-bottom: 80px;
}

.story-header h2 {
  font-size: 3rem;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 1rem;
}

.timeline-container {
  max-width: 1000px;
  margin: 0 auto;
  position: relative;
}

.timeline-container::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 4px;
  background: linear-gradient(to bottom, #f97316, #FF6B35);
  transform: translateX(-50%);
}

.story-point {
  position: relative;
  margin-bottom: 60px;
}

.story-point:nth-child(odd) .story-content {
  margin-right: 60%;
  text-align: right;
}

.story-point:nth-child(even) .story-content {
  margin-left: 60%;
  text-align: left;
}

.story-marker {
  position: absolute;
  left: 50%;
  top: 30px;
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateX(-50%);
  z-index: 2;
}

.story-marker i {
  color: white;
  font-size: 20px;
}

.story-content {
  background: white;
  padding: 40px;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 2px solid #f1f5f9;
}

.story-badge {
  display: inline-block;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  color: white;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 20px;
}

.challenge-narrative {
  background: #f8fafc;
  padding: 30px;
  border-radius: 15px;
  margin: 20px 0;
  border-left: 4px solid #f97316;
  font-style: italic;
  line-height: 1.8;
}

.challenge-indicators {
  display: flex;
  gap: 15px;
  margin-top: 20px;
  flex-wrap: wrap;
}

.indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
}

.indicator.negative {
  background: rgba(220, 38, 38, 0.1);
  color: #dc2626;
}

/* Strategic Methodology */
.methodology-section {
  background: #f8fafc;
}

.methodology-header {
  text-align: center;
  margin-bottom: 80px;
}

.methodology-header h2 {
  font-size: 3rem;
  font-weight: 800;
  color: #1a1a1a;

---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ReviewsSection from '../components/ReviewsSection.astro';
import AwardsSection from '../components/AwardsSection.astro';
import ProcessSection from '../components/ProcessSection.astro';
import PartnersSection from '../components/PartnersSection.astro';
import TopAgencySection from '../components/TopAgencySection.astro';
import { getAllBlogPosts } from '../lib/contentful.js';

// Fetch latest blog posts from Contentful
const allPosts = await getAllBlogPosts();
const latestPosts = allPosts.slice(0, 3); // Get latest 3 posts for homepage

const title = "Bright Forge SEO - Top Rated SEO Agency Philippines";
const description = "Bright Forge SEO is a leading SEO agency in the Philippines, helping businesses achieve sustainable growth through data-driven strategies.";
const type = "company";
const image = "/images/og-image.jpg";
const breadcrumbs = [
  { name: 'Home', url: '/' }
];

---

<MainLayout 
  title="Bright Forge SEO - Top Rated SEO Agency Philippines"
  description="Bright Forge SEO is a leading SEO agency in the Philippines, helping businesses achieve sustainable growth through data-driven strategies."
  type="company"
  image="/images/og-image.jpg"
  breadcrumbs={[
    { name: 'Home', url: '/' }
  ]}
>
  <LegacyHeader slot="header" />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-gradient-to-br from-[#FF4438] via-[#FF6B35] to-[#4285F4] overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 left-20 w-64 h-64 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-white/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-white/3 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-20">
      <div class="min-h-[90vh] flex items-center">
        <div class="w-full grid lg:grid-cols-12 gap-8 items-center">
          
          <!-- Left Content -->
          <div class="lg:col-span-7 space-y-10 text-center lg:text-left">
            <!-- Badge with Animation -->
            <div class="flex justify-center lg:justify-start">
              <div class="inline-flex items-center px-6 py-3 bg-white/15 backdrop-blur-md border border-white/30 rounded-full text-white text-sm font-semibold shadow-lg hover:bg-white/20 transition-all duration-300 transform hover:scale-105">
                <svg class="w-5 h-5 mr-3 text-yellow-300 animate-spin-slow" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                #1 SEO Agency in the Philippines
              </div>
            </div>

            <!-- Main Headline with Enhanced Typography -->
            <div class="space-y-6">
              <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black leading-tight tracking-tight">
                <span class="block text-white drop-shadow-lg">Forge Your Path to</span>
                <span class="block text-white drop-shadow-lg mt-2">
                  <span class="relative">
                    SEO Success
                    <div class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-yellow-300 to-white rounded-full"></div>
                  </span>
                </span>
              </h1>
              <p class="text-xl lg:text-2xl text-white/95 max-w-3xl leading-relaxed font-light">
                Partner with the Philippines' most trusted SEO experts. We help businesses achieve sustainable growth through data-driven strategies and proven results.
              </p>
            </div>

            <!-- Enhanced Stats Grid -->
            <div class="grid grid-cols-3 gap-4 lg:gap-8 py-8">
              <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 text-center border border-white/20 hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-1">
                <div class="text-4xl lg:text-5xl font-black text-white mb-2">1,000+</div>
                <div class="text-sm lg:text-base text-white/90 font-medium">Sites Ranked</div>
              </div>
              <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 text-center border border-white/20 hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-1">
                <div class="text-4xl lg:text-5xl font-black text-white mb-2">15+</div>
                <div class="text-sm lg:text-base text-white/90 font-medium">Years Experience</div>
              </div>
              <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 text-center border border-white/20 hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-1">
                <div class="text-4xl lg:text-5xl font-black text-white mb-2">100%</div>
                <div class="text-sm lg:text-base text-white/90 font-medium">White-Hat SEO</div>
              </div>
            </div>

            <!-- Enhanced CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 lg:gap-6 pt-6">
              <a href="/seo-audit-services" class="group relative inline-flex items-center justify-center px-10 py-5 bg-white text-[#FF4438] font-bold text-lg rounded-2xl shadow-2xl hover:shadow-white/25 transform hover:-translate-y-2 hover:scale-105 transition-all duration-300 border-2 border-white/20">
                <span class="relative z-10 flex items-center">
                  <svg class="w-6 h-6 mr-3 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  Get Free SEO Audit
                </span>
                <div class="absolute inset-0 bg-gradient-to-r from-white/0 to-white/20 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </a>
              
              <a href="/contact" class="inline-flex items-center justify-center px-10 py-5 bg-white/15 backdrop-blur-md border-2 border-white/30 text-white font-bold text-lg rounded-2xl hover:bg-white/25 hover:border-white/50 transform hover:-translate-y-1 transition-all duration-300 shadow-lg">
                <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Schedule Consultation
              </a>
            </div>
          </div>

          <!-- Right Content - Enhanced Hero Image -->
          <div class="lg:col-span-5 relative">
            <div class="relative mx-auto w-full max-w-lg">
              <!-- Main Image Container with Enhanced Glassmorphism -->
              <div class="relative overflow-hidden rounded-3xl bg-white/15 backdrop-blur-xl border border-white/30 p-8 shadow-2xl transform hover:scale-105 transition-all duration-500">
                <img 
                  src="/images/Hero-SEO-Agency-In-The-Philippines.webp" 
                  alt="Sassin Lowe - Bright Forge SEO Expert Philippines" 
                  class="w-full h-auto rounded-2xl shadow-2xl"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Client/Partner Logo Carousel Section -->
  <section class="partners-section py-12">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="section-header text-center mb-10">
        <span class="section-label">TRUSTED BY</span>
        <h2 class="section-title">Companies We've <span>Worked With</span></h2>
        <p class="section-subtitle">See how we've helped businesses achieve remarkable growth through tailored SEO strategies</p>
      </div>
      
      <div class="client-logos-container">
        <div class="client-logo">
          <img src="/images/clients/Ai-1.webp" alt="ThermoPest" loading="lazy" width="120" height="50" decoding="async">
        </div>
        <div class="client-logo">
          <img src="/images/clients/EcoSpa1080x700px6-640w.webp" alt="EcoSpa" loading="lazy" width="120" height="50" decoding="async">
        </div>
        <div class="client-logo">
          <img src="/images/clients/Logo-Matthew-Jeffery-1.svg" alt="Matthew Jeffery" loading="lazy" width="120" height="50" decoding="async">
        </div>
        <div class="client-logo">
          <img src="/images/clients/WF_Logo-color .webp" alt="WF Logo" loading="lazy" width="120" height="50" decoding="async">
        </div>
        <div class="client-logo">
          <img src="/images/clients/cropped-apple-touch-icon (1).webp" alt="Apple Touch Icon" loading="lazy" width="120" height="50" decoding="async">
        </div>
      </div>
    </div>
  </section>

  <ReviewsSection />

  <!-- Our Process Steps Section -->
  <ProcessSection />

  <AwardsSection />

  <!-- Awards & Recognition Section -->

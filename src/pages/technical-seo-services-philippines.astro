<script>
document.addEventListener('DOMContentLoaded', function() {
  const processSteps = document.querySelectorAll('.process-step-interactive');
  const progressFill = document.querySelector('.progress-fill');
  const progressText = document.querySelector('.progress-text');
  
  let activeStep = 0;
  
  // Initialize first step as active
  if (processSteps.length > 0) {
    processSteps[0].classList.add('active');
    updateProgress(0);
  }
  
  // Add hover effects
  processSteps.forEach((step, index) => {
    step.addEventListener('mouseenter', function() {
      // Remove active class from all steps
      processSteps.forEach(s => s.classList.remove('active'));
      
      // Add active class to current step
      this.classList.add('active');
      activeStep = index;
      updateProgress(index);
      
      // Update progress text
      const stepTitle = this.querySelector('h3').textContent;
      progressText.textContent = `Step ${index + 1}: ${stepTitle}`;
    });
    
    step.addEventListener('mouseleave', function() {
      progressText.textContent = 'Hover over steps to see details';
    });
  });
  
  // Auto-cycle through steps every 5 seconds
  let autoCycle = setInterval(() => {
    activeStep = (activeStep + 1) % processSteps.length;
    
    // Remove active from all
    processSteps.forEach(s => s.classList.remove('active'));
    
    // Add active to current
    processSteps[activeStep].classList.add('active');
    updateProgress(activeStep);
    
    // Smooth scroll to active step
    processSteps[activeStep].scrollIntoView({
      behavior: 'smooth',
      block: 'center'
    });
  }, 5000);
  
  // Pause auto-cycle on hover
  processSteps.forEach(step => {
    step.addEventListener('mouseenter', () => clearInterval(autoCycle));
    step.addEventListener('mouseleave', () => {
      autoCycle = setInterval(() => {
        activeStep = (activeStep + 1) % processSteps.length;
        processSteps.forEach(s => s.classList.remove('active'));
        processSteps[activeStep].classList.add('active');
        updateProgress(activeStep);
        processSteps[activeStep].scrollIntoView({
          behavior: 'smooth',
          block: 'center'
        });
      }, 5000);
    });
  });
  
  function updateProgress(stepIndex) {
    const progress = ((stepIndex + 1) / processSteps.length) * 100;
    if (progressFill) {
      progressFill.style.width = progress + '%';
    }
  }
  
  // Add click handlers for better mobile interaction
  processSteps.forEach((step, index) => {
    step.addEventListener('click', function() {
      processSteps.forEach(s => s.classList.remove('active'));
      this.classList.add('active');
      activeStep = index;
      updateProgress(index);
      
      const stepTitle = this.querySelector('h3').textContent;
      progressText.textContent = `Step ${index + 1}: ${stepTitle}`;
    });
  });
});
</script>

---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';

// Blog posts - only the actual published articles
const blogPosts = [
  {
    title: "The AI Reckoning: Transformation, Not Termination, for Search Engine Optimisation",
    excerpt: "Rapid AI advancements integrated into the digital landscape ignite debate about the future of Search Engine Optimisation (SEO). This report examines whether AI will make traditional SEO obsolete, concluding that AI is not killing SEO but fundamentally transforming it, demanding significant adaptation.",
    image: "/images/blog/ai-seo-transformation.png",
    date: "April 23, 2025",
    author: "Bright Forge SEO Team",
    readTime: "25 min read",
    categories: ["ai", "seo", "future"],
    slug: "ai-seo-transformation"
  },
  {
    title: "The Importance of Local SEO for Small Businesses",
    excerpt: "Discover why local SEO is crucial for small businesses looking to expand their visibility and connect with local customers in today's competitive digital landscape.",
    image: "/images/blog/local-seo-small-businesses.jpg",
    date: "June 8, 2025",
    author: "Bright Forge SEO Team",
    readTime: "7 min read",
    categories: ["local", "seo", "small business"],
    slug: "importance-of-local-seo-for-small-businesses"
  }
];

// Popular categories based on actual content
const categories = ["SEO", "AI & Technology", "Local SEO", "Small Business", "Content Marketing"];

// Popular posts
const popularPosts = blogPosts.slice(0, 3);

// Recent posts for sidebar
const recentPosts = [...blogPosts].sort(() => 0.5 - Math.random()).slice(0, 4);
---

<MainLayout 
  title="SEO Blog - Expert Insights & Industry Updates | Bright Forge SEO Philippines"
  description="Stay updated with the latest SEO insights, AI trends, and digital marketing strategies from Bright Forge SEO Philippines. Expert advice for growing your business online."
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Blog", url: "/blog" }
  ]}
>
  <LegacyHeader slot="header" />
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-background"></div>
    <div class="max-w-7xl mx-auto px-4 relative z-10">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">â€º</span>
        <span class="current">Blog</span>
      </nav>
      
      <div class="hero-content">
        <span class="hero-badge">Bright Forge Blog</span>
        <h1>Digital Marketing Insights</h1>
        <p>Expert analysis, case studies, and actionable strategies to help your business dominate search results and grow online.</p>
        
        <!-- Search Bar -->
        <div class="search-container">
          <input 
            type="text" 
            id="blogSearch"
            placeholder="Search for topics, strategies, or case studies..." 
            class="search-input"
          >
          <button class="search-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="blog-section">
    <div class="max-w-7xl mx-auto px-4">
      <div class="blog-layout">
        <!-- Main Content Area -->
        <div class="blog-main">
          <!-- Featured Article -->
          <div class="featured-article">
            <div class="featured-content">
              <div class="featured-image">
                <img src={blogPosts[0].image} alt={blogPosts[0].title} width="600" height="350" loading="eager">
                <div class="featured-overlay">
                  <span class="featured-badge">Featured</span>
                </div>
              </div>
              <div class="featured-text">
                <div class="article-meta">
                  <span class="category">{blogPosts[0].categories[0]}</span>
                  <div class="meta-divider"></div>
                  <span class="date">{blogPosts[0].date}</span>
                  <div class="meta-divider"></div>
                  <span class="read-time">{blogPosts[0].readTime}</span>
                </div>
                <h2><a href={`/blog/${blogPosts[0].slug}`}>{blogPosts[0].title}</a></h2>
                <p>{blogPosts[0].excerpt}</p>
                <a href={`/blog/${blogPosts[0].slug}`} class="read-more-btn">Continue Reading</a>
              </div>
            </div>
          </div>

          <!-- All Articles Grid -->
          <div class="articles-section">
            <div class="section-header">
              <h2>All Articles</h2>
              <p>Deep insights into SEO, AI technology, and digital marketing strategies</p>
            </div>
            
            <!-- Filter Buttons -->
            <div class="filter-container">
              <button class="filter-btn active" data-category="all">All Topics</button>
              <button class="filter-btn" data-category="seo">SEO</button>
              <button class="filter-btn" data-category="ai">AI & Technology</button>
              <button class="filter-btn" data-category="local">Local SEO</button>
              <button class="filter-btn" data-category="business">Small Business</button>
            </div>
            
            <!-- Articles Grid -->
            <div class="articles-grid">
              {blogPosts.slice(1).map((post) => (
                <div class="article-card" data-categories={post.categories.join(" ")}>
                  <div class="article-image">
                    <a href={`/blog/${post.slug}`} class="image-link">
                      <img src={post.image} alt={post.title} width="400" height="225" loading="lazy">
                    </a>
                  </div>
                  <div class="article-content">
                    <div class="article-meta">
                      <span class="category">{post.categories[0]}</span>
                      <div class="meta-divider"></div>
                      <span class="date">{post.date}</span>
                    </div>
                    <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                    <p>{post.excerpt}</p>
                    <a href={`/blog/${post.slug}`} class="read-article-link">Read Article</a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <!-- About Section -->
          <div class="sidebar-widget">
            <h3>About Our Blog</h3>
            <p>Get expert SEO insights, AI technology updates, and proven strategies from the Bright Forge SEO team. We share practical tips that actually work for growing your business online.</p>
            <a href="/contact" class="cta-button">Get SEO Consultation</a>
          </div>
          
          <!-- Categories Widget -->
          <div class="sidebar-widget">
            <h3>Topics</h3>
            <ul class="categories-list">
              {categories.map((category) => (
                <li>
                  <a href="#" class="category-link" data-filter={category.toLowerCase().replace(' & ', '-').replace(' ', '-')}>
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Recent Articles Widget -->
          <div class="sidebar-widget">
            <h3>Recent Articles</h3>
            <div class="recent-articles">
              {blogPosts.map((post) => (
                <div class="recent-article">
                  <div class="recent-image">
                    <img src={post.image} alt={post.title} width="80" height="60" loading="lazy">
                  </div>
                  <div class="recent-content">
                    <h4><a href={`/blog/${post.slug}`}>{post.title}</a></h4>
                    <span class="recent-date">{post.date}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Newsletter Widget -->
          <div class="sidebar-widget newsletter-widget">
            <h3>Stay Updated</h3>
            <p>Get the latest SEO insights delivered to your inbox</p>
            <form class="newsletter-form">
              <input type="email" placeholder="Your email address" required>
              <button type="submit">Subscribe</button>
            </form>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="cta-section">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2>Ready to Implement These SEO Strategies?</h2>
      <p>Our expert team can help you apply these insights to your business and achieve measurable results in search rankings and organic traffic.</p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-primary">Start Your SEO Journey</a>
        <a href="/philippines-seo-services" class="cta-secondary">View Our Services</a>
      </div>
    </div>
  </section>
  
  <ContactSection />
  <Footer slot="footer" />
</MainLayout>

<style>
/* Hero Section */
.hero-section {
  background: #0f172a;
  padding: 120px 0 100px;
  color: white;
  position: relative;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,68,56,0.8) 0%, rgba(37,99,235,0.8) 100%);
  clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  z-index: 1;
}

.hero-badge {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  padding: 8px 16px;
  border-radius: 50px;
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.hero-section .max-w-7xl {
  position: relative;
  z-index: 3;
}

.breadcrumbs {
  display: flex;
  align-items: center;
  margin-bottom: 30px;
  font-size: 14px;
}

.breadcrumbs a {
  color: rgba(255,255,255,0.8);
  text-decoration: none;
  transition: color 0.3s;
}

.breadcrumbs a:hover {
  color: white;
}

.separator {
  margin: 0 10px;
  color: rgba(255,255,255,0.6);
}

.current {
  color: white;
  font-weight: 500;
}

.hero-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.hero-content h1 {
  font-size: clamp(3rem, 5vw, 4.5rem);
  font-weight: 800;
  margin-bottom: 20px;
  line-height: 1.1;
  background: linear-gradient(to right, #ffffff, #e0e7ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-content p {
  font-size: 1.2rem;
  margin-bottom: 40px;
  opacity: 0.95;
  line-height: 1.6;
}

.search-container {
  position: relative;
  max-width: 550px;
  margin: 40px auto 0;
  border-radius: 50px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.search-container:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
}

.search-input {
  width: 100%;
  padding: 18px 65px 18px 25px;
  border: none;
  border-radius: 50px;
  font-size: 1rem;
  background: rgba(255,255,255,1);
  color: #333;
  outline: none;
  font-weight: 500;
}

.search-input:focus {
  outline: none;
  background: white;
  box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

.search-button {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: #FF4438;
  border: none;
  width: 45px;
  height: 45px;
  border-radius: 50%;
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-button:hover {
  transform: translateY(-50%) scale(1.05);
}

/* Blog Section */
.blog-section {
  padding: 100px 0;
  background: linear-gradient(180deg, #ffffff 0%, #f9faff 100%);
  position: relative;
  overflow: hidden;
}

.blog-section::before {
  content: '';
  position: absolute;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(66,133,244,0.05) 0%, rgba(255,255,255,0) 70%);
  top: -100px;
  right: -100px;
  border-radius: 50%;
  z-index: 0;
}

.blog-section::after {
  content: '';
  position: absolute;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(255,68,56,0.05) 0%, rgba(255,255,255,0) 70%);
  bottom: -100px;
  left: -100px;
  border-radius: 50%;
  z-index: 0;
}

.blog-layout {
  display: grid;
  grid-template-columns: 1fr 350px;
  gap: 60px;
}

.blog-main {
  min-width: 0;
}

/* Featured Article */
.featured-article {
  margin-bottom: 70px;
  background: white;
  position: relative;
  border-bottom: 2px solid #eaeaea;
  padding-bottom: 50px;
}

.featured-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30px 20px 20px;
  background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
  z-index: 2;
}

.featured-badge {
  display: inline-block;
  background: #FF4438;
  color: white;
  padding: 6px 15px;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.featured-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: start;
}

.featured-image {
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
  border-radius: 0;
  aspect-ratio: 16/9;
}

.featured-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.featured-image:hover img {
  transform: scale(1.05);
}

.featured-text {
  padding: 0;
  display: flex;
  flex-direction: column;
}

.featured-text h2 {
  font-size: 2.2rem;
  font-weight: 800;
  margin-bottom: 18px;
  line-height: 1.25;
}

.featured-text p {
  color: #555;
  margin-bottom: 25px;
  line-height: 1.7;
  font-size: 1.15rem;
}

.read-more-btn {
  color: white;
  font-weight: 600;
  background: #FF4438;
  padding: 12px 24px;
  border-radius: 4px;
  text-decoration: none;
  transition: all 0.3s ease;
  margin-top: auto;
  width: fit-content;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 10px rgba(255, 68, 56, 0.2);
}

.featured-article:hover .featured-image img {
  transform: scale(1.03);
}

/* Articles Section */
.articles-section {
  margin-top: 40px;
}

.section-header {
  text-align: center;
  margin-bottom: 40px;
}

.section-header h2 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 10px;
}

.section-header p {
  color: #666;
  font-size: 1.1rem;
}

/* Filter Buttons */
.filter-container {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 10px 20px;
  border: 2px solid #e5e7eb;
  background: white;
  border-radius: 25px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #666;
}

.filter-btn.active,
.filter-btn:hover {
  background: linear-gradient(135deg, #FF4438, #ff6b5a);
  color: white;
  border-color: transparent;
}

/* Articles Grid */
.articles-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px;
  width: 100%;
}

@media (max-width: 768px) {
  .articles-grid {
    grid-template-columns: 1fr;
  }
}

.article-card {
  background: white;
  border-radius: 0;
  overflow: hidden;
  box-shadow: none;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  border-bottom: 1px solid #eaeaea;
  padding-bottom: 30px;
  margin-bottom: 30px;
}

.article-card:hover {
  transform: translateY(-3px);
}

.article-card:hover .article-image img {
  transform: scale(1.04);
}

.article-card:hover h3 a {
  color: #FF4438;
  text-decoration: underline;
  text-decoration-thickness: 2px;
  text-underline-offset: 4px;
}

.article-image {
  position: relative;
  overflow: hidden;
  aspect-ratio: 16/9;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  margin-bottom: 20px;
}

.article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 12px;
}

.article-meta .category {
  background: rgba(255,68,56,0.1);
  color: #FF4438;
  padding: 4px 12px;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.75rem;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.article-card:hover .article-overlay {
  opacity: 1;
}

.article-card:hover .article-image img {
  transform: scale(1.05);
}

.read-link {
  color: white;
  background: rgba(255,255,255,0.2);
  padding: 10px 20px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  backdrop-filter: blur(10px);
}

.article-content {
  padding: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.article-content h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 12px;
  line-height: 1.3;
}

.article-content h3 a {
  color: #1a1a1a;
  text-decoration: none;
  transition: color 0.3s ease;
  transition: all 0.3s ease;
}

.article-content h3 a:hover {
  color: #FF4438;
}

.article-content p {
  color: #666;
  line-height: 1.6;
  margin-bottom: 20px;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-footer {
  border-top: 1px solid #f0f0f0;
  padding-top: 15px;
}

.author-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.9rem;
  color: #666;
}

/* Sidebar */
.blog-sidebar {
  position: sticky;
  top: 20px;
  height: fit-content;
}

.sidebar-widget {
  background: #f8f9fa;
  border-radius: 15px;
  padding: 30px;
  margin-bottom: 30px;
}

.sidebar-widget h3 {
  font-size: 1.4rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20px;
}

.sidebar-widget p {
  color: #666;
  line-height: 1.6;
  margin-bottom: 20px;
}

.cta-button {
  display: inline-block;
  background: linear-gradient(135deg, #FF4438, #ff6b5a);
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255,68,56,0.3);
}

.categories-list {
  list-style: none;
  padding: 0;
}

.categories-list li {
  margin-bottom: 10px;
}

.category-link {
  color: #666;
  text-decoration: none;
  padding: 8px 0;
  display: block;
  transition: color 0.3s ease;
}

.category-link:hover {
  color: #FF4438;
}

.recent-articles {
  space-y: 20px;
}

.recent-article {
  display: flex;
  gap: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid #e5e7eb;
  margin-bottom: 15px;
}

.recent-article:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.recent-image {
  flex-shrink: 0;
  border-radius: 8px;
  overflow: hidden;
}

.recent-content h4 {
  font-size: 0.95rem;
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 5px;
}

.recent-content h4 a {
  color: #1a1a1a;
  text-decoration: none;
  transition: color 0.3s ease;
}

.recent-content h4 a:hover {
  color: #FF4438;
}

.recent-date {
  font-size: 0.8rem;
  color: #666;
}

/* Newsletter Widget */
.newsletter-widget {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.newsletter-widget h3 {
  color: white;
}

.newsletter-widget p {
  color: rgba(255,255,255,0.9);
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.newsletter-form input {
  padding: 12px;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
}

.newsletter-form button {
  background: rgba(255,255,255,0.2);
  color: white;
  border: none;
  padding: 12px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s ease;
}

.newsletter-form button:hover {
  background: rgba(255,255,255,0.3);
}

/* CTA Section */
.cta-section {
  padding: 80px 0;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
}

.cta-section h2 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20px;
}

.cta-section p {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 40px;
  line-height: 1.6;
}

.cta-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.cta-primary {
  background: linear-gradient(135deg, #FF4438, #ff6b5a);
  color: white;
  padding: 15px 30px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cta-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255,68,56,0.3);
}

.cta-secondary {
  background: transparent;
  color: #FF4438;
  border: 2px solid #FF4438;
  padding: 15px 30px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cta-secondary:hover {
  background: #FF4438;
  color: white;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .blog-layout {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .featured-content {
    grid-template-columns: 1fr;
  }
  

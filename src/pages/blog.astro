---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';

// Blog posts - only the actual published articles
const blogPosts = [
  {
    title: "The AI Reckoning: Transformation, Not Termination, for Search Engine Optimisation",
    excerpt: "Rapid AI advancements integrated into the digital landscape ignite debate about the future of Search Engine Optimisation (SEO). This report examines whether AI will make traditional SEO obsolete, concluding that AI is not killing SEO but fundamentally transforming it, demanding significant adaptation.",
    image: "/images/blog/ai-seo-transformation.png",
    date: "April 23, 2025",
    author: "Bright Forge SEO Team",
    readTime: "25 min read",
    categories: ["ai", "seo", "future"],
    slug: "ai-seo-transformation"
  },
  {
    title: "The Importance of Local SEO for Small Businesses",
    excerpt: "Discover why local SEO is crucial for small businesses looking to expand their visibility and connect with local customers in today's competitive digital landscape.",
    image: "/images/blog/local-seo-small-businesses.jpg",
    date: "June 8, 2025",
    author: "Bright Forge SEO Team",
    readTime: "7 min read",
    categories: ["local", "seo", "small business"],
    slug: "importance-of-local-seo-for-small-businesses"
  }
];

// Popular categories based on actual content
const categories = ["SEO", "AI & Technology", "Local SEO", "Small Business", "Content Marketing"];

// Popular posts
const popularPosts = blogPosts.slice(0, 3);

// Recent posts for sidebar
const recentPosts = [...blogPosts].sort(() => 0.5 - Math.random()).slice(0, 4);
---

<MainLayout 
  title="SEO Blog - Expert Insights & Industry Updates | Bright Forge SEO Philippines"
  description="Stay updated with the latest SEO insights, AI trends, and digital marketing strategies from Bright Forge SEO Philippines. Expert advice for growing your business online."
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Blog", url: "/blog" }
  ]}
>
  <LegacyHeader slot="header" />
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">›</span>
        <span class="current">Blog</span>
      </nav>
      
      <div class="hero-content">
        <h1>SEO Insights & Digital Marketing Resources</h1>
        <p>Expert analysis, case studies, and actionable strategies to help your business dominate search results and grow online.</p>
        
        <!-- Search Bar -->
        <div class="search-container">
          <input 
            type="text" 
            id="blogSearch"
            placeholder="Search articles..." 
            class="search-input"
          >
          <button class="search-button">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="blog-section">
    <div class="max-w-7xl mx-auto px-4">
      <div class="blog-layout">
        <!-- Main Content Area -->
        <div class="blog-main">
          <!-- Featured Article -->
          <div class="featured-article">
            <div class="featured-badge">Featured Article</div>
            <div class="featured-content">
              <div class="featured-image">
                <img src={blogPosts[0].image} alt={blogPosts[0].title} width="600" height="350" loading="eager">
              </div>
              <div class="featured-text">
                <div class="article-meta">
                  <span class="category">{blogPosts[0].categories[0]}</span>
                  <span class="date">{blogPosts[0].date}</span>
                  <span class="read-time">{blogPosts[0].readTime}</span>
                </div>
                <h2><a href={`/blog/${blogPosts[0].slug}`}>{blogPosts[0].title}</a></h2>
                <p>{blogPosts[0].excerpt}</p>
                <a href={`/blog/${blogPosts[0].slug}`} class="read-more-btn">Read Full Article →</a>
              </div>
            </div>
          </div>

          <!-- All Articles Grid -->
          <div class="articles-section">
            <div class="section-header">
              <h2>All Articles</h2>
              <p>Deep insights into SEO, AI technology, and digital marketing strategies</p>
            </div>
            
            <!-- Filter Buttons -->
            <div class="filter-container">
              <button class="filter-btn active" data-category="all">All Topics</button>
              <button class="filter-btn" data-category="seo">SEO</button>
              <button class="filter-btn" data-category="ai">AI & Technology</button>
              <button class="filter-btn" data-category="local">Local SEO</button>
              <button class="filter-btn" data-category="business">Small Business</button>
            </div>
            
            <!-- Articles Grid -->
            <div class="articles-grid">
              {blogPosts.map((post) => (
                <article class="article-card" data-categories={post.categories.join(" ")}>
                  <div class="article-image">
                    <img src={post.image} alt={post.title} width="400" height="250" loading="lazy">
                    <div class="article-overlay">
                      <a href={`/blog/${post.slug}`} class="read-link">Read Article</a>
                    </div>
                  </div>
                  <div class="article-content">
                    <div class="article-meta">
                      <span class="category">{post.categories[0]}</span>
                      <span class="read-time">{post.readTime}</span>
                    </div>
                    <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                    <p>{post.excerpt}</p>
                    <div class="article-footer">
                      <div class="author-info">
                        <span>By {post.author}</span>
                        <span class="date">{post.date}</span>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <!-- About Section -->
          <div class="sidebar-widget">
            <h3>About Our Blog</h3>
            <p>Get expert SEO insights, AI technology updates, and proven strategies from the Bright Forge SEO team. We share practical tips that actually work for growing your business online.</p>
            <a href="/contact" class="cta-button">Get SEO Consultation</a>
          </div>
          
          <!-- Categories Widget -->
          <div class="sidebar-widget">
            <h3>Topics</h3>
            <ul class="categories-list">
              {categories.map((category) => (
                <li>
                  <a href="#" class="category-link" data-filter={category.toLowerCase().replace(' & ', '-').replace(' ', '-')}>
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Recent Articles Widget -->
          <div class="sidebar-widget">
            <h3>Recent Articles</h3>
            <div class="recent-articles">
              {blogPosts.map((post) => (
                <div class="recent-article">
                  <div class="recent-image">
                    <img src={post.image} alt={post.title} width="80" height="60" loading="lazy">
                  </div>
                  <div class="recent-content">
                    <h4><a href={`/blog/${post.slug}`}>{post.title}</a></h4>
                    <span class="recent-date">{post.date}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Newsletter Widget -->
          <div class="sidebar-widget newsletter-widget">
            <h3>Stay Updated</h3>
            <p>Get the latest SEO insights delivered to your inbox</p>
            <form class="newsletter-form">
              <input type="email" placeholder="Your email address" required>
              <button type="submit">Subscribe</button>
            </form>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="cta-section">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2>Ready to Implement These SEO Strategies?</h2>
      <p>Our expert team can help you apply these insights to your business and achieve measurable results in search rankings and organic traffic.</p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-primary">Start Your SEO Journey</a>
        <a href="/philippines-seo-services" class="cta-secondary">View Our Services</a>
      </div>
    </div>
  </section>
  
  <ContactSection />
  <Footer slot="footer" />
</MainLayout>


---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';
import Hero from '../components/Hero.astro';
import ButtonPrimary from '../components/ButtonPrimary.astro';
import ButtonSecondary from '../components/ButtonSecondary.astro';
---

<MainLayout title="SEO Services Philippines | Bright Forge SEO" description="Transparent, results-focused SEO services in the Philippines. We combine technical excellence, strategic content, and ethical link building to drive rankings, traffic, and revenue.">
  <Fragment slot="head">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://brightforgeseo.com/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "SEO Services Philippines",
            "item": "https://brightforgeseo.com/seo-services-philippines/"
          }
        ]
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "SEO Services Philippines | Bright Forge SEO",
        "url": "https://brightforgeseo.com/seo-services-philippines/",
        "inLanguage": "en",
        "description": "Transparent, results-focused SEO services in the Philippines. We combine technical excellence, strategic content, and ethical link building to drive rankings, traffic, and revenue.",
        "publisher": {
          "@type": "Organization",
          "name": "Bright Forge SEO",
          "url": "https://brightforgeseo.com/"
        },
        "mainEntity": {
          "@type": "ItemList",
          "itemListOrder": "http://schema.org/ItemListOrderAscending",
          "itemListElement": [
            {"@type": "ListItem", "position": 1, "name": "Technical SEO", "url": "https://brightforgeseo.com/technical-seo-services-philippines/"},
            {"@type": "ListItem", "position": 2, "name": "On-Page SEO", "url": "https://brightforgeseo.com/on-page-seo-services-philippines/"},
            {"@type": "ListItem", "position": 3, "name": "Content SEO", "url": "https://brightforgeseo.com/content-seo-services-philippines/"},
            {"@type": "ListItem", "position": 4, "name": "Local SEO", "url": "https://brightforgeseo.com/local-seo-services-philippines/"},
            {"@type": "ListItem", "position": 5, "name": "SEO Audits", "url": "https://brightforgeseo.com/seo-audit-services/"},
            {"@type": "ListItem", "position": 6, "name": "Keyword Research", "url": "https://brightforgeseo.com/keyword-research-services/"},
            {"@type": "ListItem", "position": 7, "name": "Link Building", "url": "https://brightforgeseo.com/backlink-seo-services-philippines/"},
            {"@type": "ListItem", "position": 8, "name": "Answer Engine Optimization", "url": "https://brightforgeseo.com/answer-engine-optimization-services-philippines/"},
            {"@type": "ListItem", "position": 9, "name": "Astro Website Development", "url": "https://brightforgeseo.com/development/astro/"},
            {"@type": "ListItem", "position": 10, "name": "Website Migration", "url": "https://brightforgeseo.com/website-migration-services/"},
            {"@type": "ListItem", "position": 11, "name": "White Label SEO", "url": "https://brightforgeseo.com/white-label-seo-services-philippines/"}
          ]
        }
      }
    </script>
  </Fragment>
  <LegacyHeader slot="header" />

  <!-- Hero -->
  <Hero
    badgeIcon="fas fa-chart-line"
    badgeText="Complete SEO Solutions"
    title="SEO Services <span>Philippines</span>"
    breadcrumbCurrent="SEO Services Philippines"
  >
    <Fragment slot="story">
      <p>Transform your online presence with comprehensive SEO services from the Philippines' trusted digital partner. We deliver measurable growth through technical excellence, strategic content, and ethical optimization.</p>
      <p>From Fortune 500 companies to local startups, we've helped businesses across industries dominate search results and drive sustainable revenue growth. Our proven frameworks adapt to your unique goals while maintaining the highest standards of quality and transparency.</p>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="/contact/" text="Get Started" />
      <ButtonSecondary href="#services" text="Explore Services" />
    </Fragment>

    <Fragment slot="stats">
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-number">150+</span>
          <span class="stat-label">Websites Ranked</span>
        </div>
        <div class="stat">
          <span class="stat-number">15+</span>
          <span class="stat-label">Years Experience</span>
        </div>
        <div class="stat">
          <span class="stat-number">98%</span>
          <span class="stat-label">Client Retention</span>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Services Overview -->
  <section id="services" class="services-overview">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <div class="section-badge">Our Expertise</div>
        <h2>Fully-Managed <span>SEO Services</span></h2>
        <p>Everything you need to improve technical health, build topical authority, and earn trust with search engines and users.</p>
      </div>

      <div class="services-grid">
        <!-- Core SEO -->
        <a class="service-card" href="/technical-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Technical SEO</h3>
            <p>Fix crawl, indexation, Core Web Vitals, and site architecture issues that hold rankings back.</p>
          </div>
        </a>
        <a class="service-card" href="/on-page-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>On-Page SEO</h3>
            <p>Optimize titles, headings, internal links, and page experience to lift relevance and engagement.</p>
          </div>
        </a>
        <a class="service-card" href="/content-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Content SEO</h3>
            <p>Research-driven content planning and optimization that builds topical authority and conversions.</p>
          </div>
        </a>
        <a class="service-card" href="/local-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Local SEO</h3>
            <p>Dominate maps and local pack with GBP optimization, citations, and geo-targeted content.</p>
          </div>
        </a>

        <!-- Strategy & Growth -->
        <a class="service-card" href="/seo-audit-services/">
          <div class="service-card-inner">
            <h3>SEO Audits</h3>
            <p>Clear, prioritized action plans that diagnose technical, content, and authority gaps.</p>
          </div>
        </a>
        <a class="service-card" href="/keyword-research-services/">
          <div class="service-card-inner">
            <h3>Keyword Research</h3>
            <p>Intent-led keyword mapping to guide pages, internal links, and content calendars.</p>
          </div>
        </a>
        <a class="service-card" href="/backlink-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Link Building</h3>
            <p>Quality-first outreach and digital PR to earn links that move rankings safely.</p>
          </div>
        </a>
        <a class="service-card" href="/answer-engine-optimization-services-philippines/">
          <div class="service-card-inner">
            <h3>Answer Engine Optimization</h3>
            <p>Optimize for featured snippets, AI-overviews, and voice search with structured, concise answers.</p>
          </div>
        </a>

        <!-- Development & Partnerships -->
        <a class="service-card" href="/development/astro/">
          <div class="service-card-inner">
            <h3>Astro Website Development</h3>
            <p>Lightning-fast, SEO-first sites built on Astro with best-in-class page experience.</p>
          </div>
        </a>
        <a class="service-card" href="/website-migration-services/">
          <div class="service-card-inner">
            <h3>Website Migration</h3>
            <p>Protect hard-earned rankings during redesigns, replatforming, and domain changes.</p>
          </div>
        </a>
        <a class="service-card" href="/white-label-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>White Label SEO</h3>
            <p>Reliable fulfillment partner for agencies needing expert SEO delivery under your brand.</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="why-us">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <div class="section-badge">Why Bright Forge</div>
        <h2>Performance-Driven <span>SEO Excellence</span></h2>
        <p>We combine data-driven strategies with proven methodologies to deliver consistent, measurable results for businesses of all sizes.</p>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <i class="fas fa-chart-bar"></i>
          </div>
          <h3>Data-Driven Strategies</h3>
          <p>Every decision backed by comprehensive analytics, competitor research, and market insights to maximize your ROI.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h3>White-Hat Excellence</h3>
          <p>Sustainable growth through ethical SEO practices that build long-term authority and protect your brand reputation.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <i class="fas fa-tachometer-alt"></i>
          </div>
          <h3>Rapid Implementation</h3>
          <p>Quick turnaround on critical fixes and optimizations with clear priorities and measurable impact tracking.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <i class="fas fa-users"></i>
          </div>
          <h3>Expert Team</h3>
          <p>Senior SEO specialists with 15+ years combined experience delivering results for global brands and local businesses.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-final">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2>Ready to Grow with <span>SEO</span>?</h2>
      <p>Tell us about your goals and we’ll recommend the right mix of audits, content, and optimization to get you there.</p>
      <div class="hero-actions" style="justify-content:center;">
        <a href="/contact/" class="cta-button primary">Request a Free Consultation</a>
      </div>
    </div>
  </section>

  <ContactSection id="contact" />
  <Footer slot="footer" />
</MainLayout>

<style>
/********************
  CSS Variables
*********************/
:root {
  --brand-accent: #f97316;
  --brand-dark: #1E2022;
  --brand-soft: #52575D;
  --brand-light: #F8F9FA;
  --gradient-primary: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  --gradient-secondary: linear-gradient(135deg, #FF6B35 0%, #f97316 100%);
  --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
}

/********************
  Hero Stats (for stats slot)
*********************/
.hero-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  padding: 2rem;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 2.5rem;
  font-weight: 800;
  color: white !important;
  line-height: 1;
  margin-bottom: 0.5rem;
}

.stat-label {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.9) !important;
}

/********************
  Services Overview
*********************/
.services-overview {
  background: var(--brand-light);
  padding: 5rem 0;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.service-card {
  position: relative;
  display: block;
  text-decoration: none;
  background: white;
  border-radius: 16px;
  padding: 2rem;
  border: 1px solid #f0f0f0;
  box-shadow: var(--shadow-soft);
  transition: all 0.3s ease;
  overflow: hidden;
}

.service-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-secondary);
}

.service-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-medium);
}

.service-card h3 {
  color: var(--brand-dark);
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
}

.service-card p {
  color: var(--brand-soft);
  line-height: 1.6;
}

/********************
  Why Choose Us
*********************/
.why-us {
  background: white;
  padding: 5rem 0;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
}

.benefit-card {
  position: relative;
  background: white;
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  border: 1px solid #f0f0f0;
  box-shadow: var(--shadow-soft);
  transition: all 0.3s ease;
  overflow: hidden;
}

.benefit-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-secondary);
}

.benefit-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-medium);
}

.benefit-icon {
  width: 70px;
  height: 70px;
  margin: 0 auto 1.5rem;
  background: var(--gradient-primary);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.75rem;
  color: white;
}

.benefit-card h3 {
  color: var(--brand-dark);
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
}

.benefit-card p {
  color: var(--brand-soft);
  line-height: 1.6;
}

/********************
  Final CTA
*********************/
.cta-final {
  background: var(--brand-light);
  padding: 5rem 0;
}

.cta-final h2 {
  font-size: clamp(2rem, 4.5vw, 3rem);
  font-weight: 900;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.cta-final h2 span {
  background: var(--gradient-secondary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.cta-final p {
  color: var(--brand-soft);
  font-size: 1.1rem;
  max-width: 700px;
  margin: 0 auto 2rem;
  line-height: 1.6;
}

.section-header {
  text-align: center;
  margin-bottom: 3rem;
}

.section-badge {
  display: inline-block;
  background: var(--gradient-secondary);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 50px;
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.section-header h2 {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 800;
  margin-bottom: 1rem;
  color: var(--brand-dark);
}

.section-header h2 span {
  background: var(--gradient-secondary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-header p {
  color: var(--brand-soft);
  font-size: 1.1rem;
  max-width: 700px;
  margin: 0 auto;
}

/********************
  Responsive
*********************/
@media (max-width: 768px) {
  .hero-stats {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .services-grid {
    grid-template-columns: 1fr;
  }

  .benefits-grid {
    grid-template-columns: 1fr;
  }
}
</style>

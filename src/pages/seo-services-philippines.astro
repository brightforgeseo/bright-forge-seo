---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';
---

<MainLayout title="SEO Services Philippines | Bright Forge SEO" description="Transparent, results-focused SEO services in the Philippines. We combine technical excellence, strategic content, and ethical link building to drive rankings, traffic, and revenue.">
  <LegacyHeader slot="header" />

  <!-- Hero -->
  <section class="hero-seo-services">
    <div class="container mx-auto px-4">
      <nav class="hero-breadcrumbs">
        <a href="/" class="breadcrumb-link">Home</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-current">SEO Services Philippines</span>
      </nav>

      <div class="hero-wrap">
        <h1>SEO Services <span>Philippines</span></h1>
        <p class="hero-subtitle">Win more rankings, traffic, and customers with a Philippine-based SEO partner that blends hands-on expertise with a transparent, action-first approach.</p>
        <div class="hero-actions">
          <a href="/contact/" class="cta-button primary">Get Started</a>
          <a href="#services" class="cta-button secondary">Explore Services</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section id="services" class="services-overview">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <div class="section-badge">Our Expertise</div>
        <h2>Fully-Managed <span>SEO Services</span></h2>
        <p>Everything you need to improve technical health, build topical authority, and earn trust with search engines and users.</p>
      </div>

      <div class="services-grid">
        <!-- Core SEO -->
        <a class="service-card" href="/technical-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Technical SEO</h3>
            <p>Fix crawl, indexation, Core Web Vitals, and site architecture issues that hold rankings back.</p>
          </div>
        </a>
        <a class="service-card" href="/on-page-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>On-Page SEO</h3>
            <p>Optimize titles, headings, internal links, and page experience to lift relevance and engagement.</p>
          </div>
        </a>
        <a class="service-card" href="/content-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Content SEO</h3>
            <p>Research-driven content planning and optimization that builds topical authority and conversions.</p>
          </div>
        </a>
        <a class="service-card" href="/local-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Local SEO</h3>
            <p>Dominate maps and local pack with GBP optimization, citations, and geo-targeted content.</p>
          </div>
        </a>

        <!-- Strategy & Growth -->
        <a class="service-card" href="/seo-audit-services/">
          <div class="service-card-inner">
            <h3>SEO Audits</h3>
            <p>Clear, prioritized action plans that diagnose technical, content, and authority gaps.</p>
          </div>
        </a>
        <a class="service-card" href="/keyword-research-services/">
          <div class="service-card-inner">
            <h3>Keyword Research</h3>
            <p>Intent-led keyword mapping to guide pages, internal links, and content calendars.</p>
          </div>
        </a>
        <a class="service-card" href="/backlink-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>Link Building</h3>
            <p>Quality-first outreach and digital PR to earn links that move rankings safely.</p>
          </div>
        </a>
        <a class="service-card" href="/answer-engine-optimization-services-philippines/">
          <div class="service-card-inner">
            <h3>Answer Engine Optimization</h3>
            <p>Optimize for featured snippets, AI-overviews, and voice search with structured, concise answers.</p>
          </div>
        </a>

        <!-- Development & Partnerships -->
        <a class="service-card" href="/astro-seo-website-development/">
          <div class="service-card-inner">
            <h3>Astro Website Development</h3>
            <p>Lightning-fast, SEO-first sites built on Astro with best-in-class page experience.</p>
          </div>
        </a>
        <a class="service-card" href="/website-migration-services/">
          <div class="service-card-inner">
            <h3>Website Migration</h3>
            <p>Protect hard-earned rankings during redesigns, replatforming, and domain changes.</p>
          </div>
        </a>
        <a class="service-card" href="/white-label-seo-services-philippines/">
          <div class="service-card-inner">
            <h3>White Label SEO</h3>
            <p>Reliable fulfillment partner for agencies needing expert SEO delivery under your brand.</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="why-us">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <div class="section-badge">Why Bright Forge</div>
        <h2>Human-Led, <span>Results-Driven</span> SEO</h2>
        <p>We’re a Philippine-based team with global standards. No fluff—just focused execution and steady growth.</p>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card">
          <h3>Proven Playbooks</h3>
          <p>We bring repeatable frameworks for audits, keyword strategy, content ops, and technical fixes—customized to your goals.</p>
        </div>
        <div class="benefit-card">
          <h3>Transparent Reporting</h3>
          <p>Know what we shipped, why it matters, and how it impacted visibility, traffic, and pipeline—every single month.</p>
        </div>
        <div class="benefit-card">
          <h3>Ethical SEO</h3>
          <p>We focus on user value, quality links, and sustainability. No shortcuts that risk penalties or brand trust.</p>
        </div>
        <div class="benefit-card">
          <h3>Philippine-Based Team</h3>
          <p>Work directly with senior SEOs in the Philippines who understand your market and deliver to international standards.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-final">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2>Ready to Grow with <span>SEO</span>?</h2>
      <p>Tell us about your goals and we’ll recommend the right mix of audits, content, and optimization to get you there.</p>
      <div class="hero-actions" style="justify-content:center;">
        <a href="/contact/" class="cta-button primary">Request a Free Consultation</a>
      </div>
    </div>
  </section>

  <ContactSection id="contact" />
  <Footer slot="footer" />
</MainLayout>

<style>
/********************
  Hero
*********************/
.hero-seo-services {
  min-height: 70vh;
  display: flex;
  align-items: center;
  color: white;
  padding: 4rem 0 3rem;
}
.hero-wrap { max-width: 800px; }
.hero-wrap h1 {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 900;
  line-height: 1.1;
  margin-bottom: 1rem;
}
.hero-wrap h1 span {
  background: linear-gradient(135deg, #ffffff, #f0f9ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.hero-subtitle { color: rgba(255,255,255,.9); font-size: 1.15rem; margin-bottom: 1.75rem; }
.hero-actions { display: flex; gap: 1rem; flex-wrap: wrap; }

/********************
  Services Overview
*********************/
.services-overview { background: #fff; }
.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.25rem;
}
.service-card {
  position: relative;
  display: block;
  text-decoration: none;
  padding: 0; /* inner wrapper handles spacing */
}
.service-card .service-card-inner {
  background: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 16px;
  padding: 1.75rem;
  box-shadow: 0 10px 30px rgba(0,0,0,.06);
  transition: transform .25s ease, box-shadow .25s ease;
}
.service-card::before {
  content: '';
  position: absolute; top: 0; left: 0; right: 0; height: 4px;
  background: var(--gradient-secondary);
  border-top-left-radius: 16px; border-top-right-radius: 16px;
}
.service-card h3 { color: var(--brand-dark); margin-bottom: .5rem; font-size: 1.15rem; font-weight: 800; }
.service-card p { color: var(--brand-soft); line-height: 1.6; }
.service-card:hover .service-card-inner { transform: translateY(-4px); box-shadow: 0 16px 40px rgba(0,0,0,.10); }

/********************
  Why Us
*********************/
.why-us { background: var(--brand-light); }
.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.25rem;
}
.benefit-card {
  background: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 16px;
  padding: 1.75rem;
  box-shadow: 0 10px 30px rgba(0,0,0,.06);
}
.benefit-card h3 { color: var(--brand-dark); margin-bottom: .5rem; font-weight: 800; }
.benefit-card p { color: var(--brand-soft); }

/********************
  Final CTA
*********************/
.cta-final { background: #fff; }
.cta-final h2 { font-size: clamp(2rem, 4.5vw, 3rem); font-weight: 900; margin-bottom: .75rem; color: var(--brand-dark); }
.cta-final h2 span { background: var(--gradient-secondary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; }
.cta-final p { color: var(--brand-soft); max-width: 700px; margin: 0 auto 1.5rem; }

/********************
  Responsive
*********************/
@media (max-width: 768px) {
  .hero-seo-services { min-height: auto; padding: 3rem 0 2rem; }
}
</style>

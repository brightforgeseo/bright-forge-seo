---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout 
  title="Page Not Found - Bright Forge SEO"
  description="The page you're looking for doesn't exist. Let us help you find what you need."
  type="website"
  image="/images/og-image.jpg"
>
  <LegacyHeader slot="header" />
  
  <div class="min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="content-container px-4 py-16 text-center">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-6xl md:text-8xl font-bold text-brand-accent mb-4">404</h1>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Page Not Found</h2>
        <p class="text-lg text-gray-600 mb-8">
          The page you're looking for doesn't exist or has been moved. 
          Let us help you find what you're looking for.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href="/" 
            class="px-8 py-3 bg-brand-accent text-white font-semibold rounded-lg hover:bg-brand-accent/90 transition-colors duration-300"
          >
            Back to Homepage
          </a>
          <a 
            href="/contact" 
            class="px-8 py-3 bg-white text-brand-accent font-semibold rounded-lg border-2 border-brand-accent hover:bg-brand-accent/10 transition-colors duration-300"
          >
            Contact Support
          </a>
        </div>

        <div class="mt-12 grid md:grid-cols-2 gap-6 text-left">
          <div class="p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
            <h3 class="text-xl font-bold text-gray-800 mb-3">Popular Services</h3>
            <ul class="space-y-2">
              <li>
                <a href="/philippines-seo-services" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ Philippines SEO Services
                </a>
              </li>
              <li>
                <a href="/technical-seo-services-philippines" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ Technical SEO Services
                </a>
              </li>
              <li>
                <a href="/content-seo-services-philippines" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ Content SEO Services
                </a>
              </li>
            </ul>
          </div>
          
          <div class="p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
            <h3 class="text-xl font-bold text-gray-800 mb-3">Quick Links</h3>
            <ul class="space-y-2">
              <li>
                <a href="/case-studies" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ Case Studies
                </a>
              </li>
              <li>
                <a href="/blog" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ Blog
                </a>
              </li>
              <li>
                <a href="/about-us" class="text-gray-600 hover:text-brand-accent transition-colors duration-300">
                  ➔ About Us
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</MainLayout> 
---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';

const knowledgeBaseCategories = [
  {
    title: "Fitness & Health",
    description: "SEO strategies for gyms, fitness centers, and health businesses",
    articles: [
      { title: "Fitness SEO Guide", slug: "fitness-seo", icon: "dumbbell" },
      { title: "Healthcare SEO", slug: "healthcare-seo", icon: "stethoscope" }
    ]
  },
  {
    title: "Beauty & Wellness",
    description: "Attract more clients to beauty salons, spas, and wellness centers",
    articles: [
      { title: "Beauty Salon & Spa SEO", slug: "beauty-salon-spa-seo", icon: "spa" }
    ]
  },
  {
    title: "Business Services",
    description: "SEO for professional services and B2B companies",
    articles: [
      { title: "Consulting SEO", slug: "consulting-seo", icon: "briefcase" },
      { title: "Legal SEO", slug: "legal-seo", icon: "balance-scale" },
      { title: "Technology & SaaS SEO", slug: "technology-seo", icon: "laptop-code" }
    ]
  },
  {
    title: "Retail & E-commerce",
    description: "Drive more sales through search optimization",
    articles: [
      { title: "E-commerce SEO", slug: "ecommerce-seo", icon: "shopping-cart" },
      { title: "Car Recycling SEO", slug: "car-recycling-seo", icon: "recycle" }
    ]
  },
  {
    title: "Food & Hospitality",
    description: "Fill more tables and attract hungry customers",
    articles: [
      { title: "Restaurant SEO", slug: "restaurant-seo", icon: "utensils" }
    ]
  }
];

// FAQs for the Knowledge Base index page (used for centralized FAQPage schema via SEO.astro)
const faqs = [
  {
    question: 'How long does SEO take to work?',
    answer:
      'Most businesses see initial improvements in 3-6 months, with significant results in 6-12 months depending on competition and strategy. SEO is a long-term investment that builds momentum over time.'
  },
  {
    question: 'How much does SEO cost?',
    answer:
      'SEO investment varies by business size and goals. We offer customized packages starting from affordable monthly retainers, with pricing based on your specific needs and competitive landscape.'
  },
  {
    question: 'How do you measure SEO success?',
    answer:
      'We track multiple metrics including search rankings, organic traffic growth, lead generation, conversion rates, and revenue attribution to demonstrate clear ROI from SEO efforts.'
  }
];
---

<MainLayout title="SEO Knowledge Base | Expert Guidance by Industry | Bright Forge SEO" description="Access our comprehensive SEO knowledge base with expert guidance for every industry. Get answers to your SEO questions from our team of specialists." faqs={faqs}>
  <LegacyHeader slot="header" />

  <!-- Hero Section with Integrated Breadcrumbs -->
  <section class="hero-section bg-gradient-to-r from-brand-primary to-brand-accent text-white py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <!-- Breadcrumb Navigation -->
      <nav class="breadcrumbs mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-white/80">
          <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
          <li class="text-white/60">/</li>
          <li class="text-white">Knowledge Base</li>
        </ol>
      </nav>
      
      <div class="text-center">
        <div class="inline-flex items-center bg-white/20 backdrop-blur-sm rounded-full px-6 py-2 mb-6">
          <i class="fas fa-book-open mr-2"></i>
          <span class="font-semibold">Expert SEO Knowledge Center</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">SEO Knowledge Base</h1>
        <p class="text-xl max-w-3xl mx-auto mb-8">Get expert answers to your SEO questions with our comprehensive guides tailored to your specific industry and business needs</p>
        
        <!-- Search Box -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input 
              type="search" 
              placeholder="Search knowledge base articles..." 
              class="w-full px-6 py-4 pr-12 rounded-full text-gray-800 text-lg focus:outline-none focus:ring-2 focus:ring-white/50"
              id="knowledge-search"
            />
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-brand-primary">
              <i class="fas fa-search text-xl"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Knowledge Base Grid -->
  <section class="knowledge-grid py-20 bg-white">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">SEO Knowledge by Industry</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Expert guidance tailored to your specific business needs</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {knowledgeBaseCategories.flatMap(category => 
          category.articles.map((article) => (
            <a 
              href={`/knowledge-base/${article.slug}`}
              class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-brand-primary/20"
            >
              <div class="p-6">
                <div class="w-14 h-14 bg-gradient-to-r from-brand-primary to-brand-accent rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                  <i class={`fas fa-${article.icon} text-white text-xl`}></i>
                </div>
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-brand-primary transition-colors">{article.title}</h3>
                <p class="text-gray-600 text-sm mb-4">Expert answers and strategies for {article.title.toLowerCase()} success</p>
                <div class="flex items-center text-brand-primary font-semibold text-sm">
                  <span>Learn More</span>
                  <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                </div>
              </div>
            </a>
          ))
        )}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section bg-gradient-to-r from-brand-primary to-brand-accent text-white py-20">
    <div class="container max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Dominate Your Industry?</h2>
      <p class="text-xl mb-8 opacity-90">Get expert SEO guidance tailored to your specific business needs</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-brand-primary px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Get Free SEO Consultation
        </a>
        <a href="/" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-brand-primary transition-colors">
          View Our Services
        </a>
      </div>
    </div>
  </section>
    </div>
  </section>

  <!-- Still Have Questions -->
  <section class="cta-section bg-white py-20">
    <div class="container max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Still Have Questions?</h2>
      <p class="text-xl text-gray-600 mb-8">Can't find what you're looking for? Our SEO experts are here to help with personalized guidance for your business.</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-brand-primary text-white px-8 py-4 rounded-lg font-semibold hover:bg-brand-accent transition-colors">
          Get Free Consultation
        </a>
        <a href="/seo-audit-services" class="border-2 border-brand-primary text-brand-primary px-8 py-4 rounded-lg font-semibold hover:bg-brand-primary hover:text-white transition-colors">
          Request SEO Audit
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <ContactSection />
  
  <Footer slot="footer" />
</MainLayout>

<!-- Knowledge Base Search Script -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const searchInput = document.getElementById('knowledge-search');
  
  if (searchInput) {
    searchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const query = e.target.value.toLowerCase();
        // Simple search logic - in production you'd want more sophisticated search
        const articles = document.querySelectorAll('.category-group a');
        
        articles.forEach(article => {
          const title = article.querySelector('h4').textContent.toLowerCase();
          if (title.includes(query)) {
            article.style.backgroundColor = '#FEF3C7';
            article.scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else {
            article.style.backgroundColor = '';
          }
        });
      }
    });
  }
});
</script>

<!-- FAQ JSON-LD is now generated by SEO.astro via the `faqs` prop passed from MainLayout. -->

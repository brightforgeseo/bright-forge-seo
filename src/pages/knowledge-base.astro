---
import MainLayout from '../layouts/MainLayout.astro';
import LegacyHeader from '../components/LegacyHeader.astro';
import Footer from '../components/Footer.astro';
import ContactSection from '../components/ContactSection.astro';

const knowledgeBaseCategories = [
  {
    title: "Fitness & Health",
    description: "SEO strategies for gyms, fitness centers, and health businesses",
    articles: [
      { title: "Fitness SEO Guide", slug: "fitness-seo", icon: "dumbbell" },
      { title: "Australian Fitness SEO", slug: "australian-fitness-seo", icon: "map-marker-alt" },
      { title: "Healthcare SEO", slug: "healthcare-seo", icon: "stethoscope" }
    ]
  },
  {
    title: "Beauty & Wellness",
    description: "Attract more clients to beauty salons, spas, and wellness centers",
    articles: [
      { title: "Beauty Salon & Spa SEO", slug: "beauty-salon-spa-seo", icon: "spa" }
    ]
  },
  {
    title: "Business Services",
    description: "SEO for professional services and B2B companies",
    articles: [
      { title: "Consulting SEO", slug: "consulting-seo", icon: "briefcase" },
      { title: "Legal SEO", slug: "legal-seo", icon: "balance-scale" },
      { title: "Technology & SaaS SEO", slug: "technology-seo", icon: "laptop-code" }
    ]
  },
  {
    title: "Retail & E-commerce",
    description: "Drive more sales through search optimization",
    articles: [
      { title: "E-commerce SEO", slug: "ecommerce-seo", icon: "shopping-cart" },
      { title: "Car Recycling SEO", slug: "car-recycling-seo", icon: "recycle" }
    ]
  },
  {
    title: "Food & Hospitality",
    description: "Fill more tables and attract hungry customers",
    articles: [
      { title: "Restaurant SEO", slug: "restaurant-seo", icon: "utensils" }
    ]
  }
];
---

<MainLayout title="SEO Knowledge Base | Expert Guidance by Industry | Bright Forge SEO" description="Access our comprehensive SEO knowledge base with expert guidance for every industry. Get answers to your SEO questions from our team of specialists.">
  <LegacyHeader slot="header" />

  <!-- Breadcrumb Navigation -->
  <nav class="breadcrumbs bg-gray-50 py-4">
    <div class="container max-w-7xl mx-auto px-4">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-brand-primary hover:text-brand-accent transition-colors">Home</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-600">Knowledge Base</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero-section bg-gradient-to-r from-brand-primary to-brand-accent text-white py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="text-center">
        <div class="inline-flex items-center bg-white/20 backdrop-blur-sm rounded-full px-6 py-2 mb-6">
          <i class="fas fa-book-open mr-2"></i>
          <span class="font-semibold">Expert SEO Knowledge Center</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">SEO Knowledge Base</h1>
        <p class="text-xl max-w-3xl mx-auto mb-8">Get expert answers to your SEO questions with our comprehensive guides tailored to your specific industry and business needs</p>
        
        <!-- Search Box -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input 
              type="search" 
              placeholder="Search knowledge base articles..." 
              class="w-full px-6 py-4 pr-12 rounded-full text-gray-800 text-lg focus:outline-none focus:ring-2 focus:ring-white/50"
              id="knowledge-search"
            />
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-brand-primary">
              <i class="fas fa-search text-xl"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Knowledge Base Categories -->
  <section class="categories-section py-20 bg-white">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Browse by Industry</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Choose your industry to get specific SEO guidance and best practices tailored to your business type</p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        {knowledgeBaseCategories.map((category) => (
          <div class="category-group bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow">
            <h3 class="text-2xl font-bold mb-3 text-gray-800">{category.title}</h3>
            <p class="text-gray-600 mb-6">{category.description}</p>
            
            <div class="space-y-4">
              {category.articles.map((article) => (
                <a 
                  href={`/knowledge-base/${article.slug}`}
                  class="flex items-center p-4 bg-white rounded-lg hover:bg-brand-primary hover:text-white transition-all group"
                >
                  <div class="w-10 h-10 bg-brand-primary group-hover:bg-white rounded-lg flex items-center justify-center mr-4">
                    <i class={`fas fa-${article.icon} text-white group-hover:text-brand-primary`}></i>
                  </div>
                  <div class="flex-1">
                    <h4 class="font-semibold">{article.title}</h4>
                  </div>
                  <i class="fas fa-arrow-right opacity-50 group-hover:opacity-100"></i>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Popular Topics -->
  <section class="popular-topics bg-gray-50 py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Most Popular SEO Questions</h2>
        <p class="text-xl text-gray-600">Quick answers to the questions we get asked most often</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-gradient-to-r from-brand-primary to-brand-accent rounded-lg flex items-center justify-center mb-4">
            <i class="fas fa-clock text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">How long does SEO take?</h3>
          <p class="text-gray-600 mb-4">Most businesses see initial improvements in 3-6 months, with significant results in 6-12 months depending on competition and strategy.</p>
          <a href="/knowledge-base/fitness-seo#how-long" class="text-brand-primary hover:text-brand-accent font-semibold">Read More →</a>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-gradient-to-r from-brand-primary to-brand-accent rounded-lg flex items-center justify-center mb-4">
            <i class="fas fa-dollar-sign text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">What does SEO cost?</h3>
          <p class="text-gray-600 mb-4">SEO investment varies by business size and goals. We offer customized packages starting from affordable monthly retainers.</p>
          <a href="/contact" class="text-brand-primary hover:text-brand-accent font-semibold">Get Quote →</a>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-gradient-to-r from-brand-primary to-brand-accent rounded-lg flex items-center justify-center mb-4">
            <i class="fas fa-chart-line text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">How do you measure SEO success?</h3>
          <p class="text-gray-600 mb-4">We track rankings, organic traffic, leads, conversions, and revenue attribution to show clear ROI from SEO efforts.</p>
          <a href="/knowledge-base/ecommerce-seo#results" class="text-brand-primary hover:text-brand-accent font-semibold">Learn More →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Free Resources -->
  <section class="resources-section bg-gradient-to-r from-brand-primary to-brand-accent text-white py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Free SEO Resources</h2>
        <p class="text-xl">Download our expert guides and checklists to improve your SEO</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <i class="fas fa-download text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-3">SEO Audit Checklist</h3>
          <p class="mb-6">25-point comprehensive SEO audit checklist to evaluate your website's performance</p>
          <a href="/contact" class="bg-white text-brand-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Download Free
          </a>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <i class="fas fa-book text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-3">Local SEO Guide</h3>
          <p class="mb-6">Complete guide to dominating local search results and attracting nearby customers</p>
          <a href="/contact" class="bg-white text-brand-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Get Guide
          </a>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-center">
          <i class="fas fa-chart-bar text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-3">SEO ROI Calculator</h3>
          <p class="mb-6">Calculate potential return on investment from SEO for your specific business</p>
          <a href="/contact" class="bg-white text-brand-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Access Tool
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Still Have Questions -->
  <section class="cta-section bg-white py-20">
    <div class="container max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Still Have Questions?</h2>
      <p class="text-xl text-gray-600 mb-8">Can't find what you're looking for? Our SEO experts are here to help with personalized guidance for your business.</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-brand-primary text-white px-8 py-4 rounded-lg font-semibold hover:bg-brand-accent transition-colors">
          Get Free Consultation
        </a>
        <a href="/seo-audit-services" class="border-2 border-brand-primary text-brand-primary px-8 py-4 rounded-lg font-semibold hover:bg-brand-primary hover:text-white transition-colors">
          Request SEO Audit
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <ContactSection />
  
  <Footer slot="footer" />
</MainLayout>

<!-- Knowledge Base Search Script -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const searchInput = document.getElementById('knowledge-search');
  
  if (searchInput) {
    searchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const query = e.target.value.toLowerCase();
        // Simple search logic - in production you'd want more sophisticated search
        const articles = document.querySelectorAll('.category-group a');
        
        articles.forEach(article => {
          const title = article.querySelector('h4').textContent.toLowerCase();
          if (title.includes(query)) {
            article.style.backgroundColor = '#FEF3C7';
            article.scrollIntoView({ behavior: 'smooth', block: 'center' });
          } else {
            article.style.backgroundColor = '';
          }
        });
      }
    });
  }
});
</script>

<!-- Organization Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How long does SEO take to work?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most businesses see initial improvements in 3-6 months, with significant results in 6-12 months depending on competition and strategy. SEO is a long-term investment that builds momentum over time."
      }
    },
    {
      "@type": "Question",
      "name": "How much does SEO cost?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "SEO investment varies by business size and goals. We offer customized packages starting from affordable monthly retainers, with pricing based on your specific needs and competitive landscape."
      }
    },
    {
      "@type": "Question",
      "name": "How do you measure SEO success?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We track multiple metrics including search rankings, organic traffic growth, lead generation, conversion rates, and revenue attribution to demonstrate clear ROI from SEO efforts."
      }
    }
  ]
}
</script>

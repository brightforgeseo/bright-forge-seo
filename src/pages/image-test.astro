---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Image Test Page">
  <div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-8">Image Test Page</h1>
    
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">Design Rush Logo</h2>
      <img 
        src="/images/proud/design-rush-logo.png" 
        alt="Design Rush" 
        class="border border-gray-300 p-2"
      />
    </div>
    
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">Upwork Logo</h2>
      <img 
        src="/images/proud/2021-upwork-new-logo-design.png" 
        alt="Upwork" 
        class="border border-gray-300 p-2"
      />
    </div>
    
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">Clutch Logo</h2>
      <img 
        src="/images/proud/66ede09890c1d16a8ccb2d2c_1.png" 
        alt="Clutch" 
        class="border border-gray-300 p-2"
      />
    </div>
  </div>
</MainLayout>

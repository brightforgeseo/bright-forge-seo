---
import MainLayout from '../../layouts/MainLayout.astro';
import LegacyHeader from '../../components/LegacyHeader.astro';
import Footer from '../../components/Footer.astro';
import ContactSection from '../../components/ContactSection.astro';
import Hero from '../../components/Hero.astro';
import ButtonPrimary from '../../components/ButtonPrimary.astro';
import ButtonSecondary from '../../components/ButtonSecondary.astro';
---

<MainLayout
  title="React Development Services Philippines | Bright Forge SEO"
  description="Expert React development services in the Philippines. Build scalable, interactive web applications with React.js. Custom components, state management, and SEO optimization."
>
  <LegacyHeader slot="header" />

  <!-- Hero Section -->
  <Hero
    badgeIcon="fab fa-react"
    badgeText="React Experts"
    title="React Development Philippines"
    breadcrumbCurrent="React Development"
  >
    <Fragment slot="story">
      <p>Fast, interactive, and scalable frontends powered by React.</p>

      <p>At Bright Forge SEO, we specialize in React development Philippines that combines cutting-edge technology with SEO best practices. From simple landing pages to complex web applications, we deliver solutions that engage users and rank well.</p>
    </Fragment>

    <Fragment slot="actions">
      <ButtonPrimary href="/contact" text="Start Your React Project" />
      <ButtonSecondary href="#approach" text="Our React Approach" />
    </Fragment>

    <Fragment slot="visual">
      <div class="hero-image-container">
        <div class="technical-icon-grid">
          <div class="tech-icon"><i class="fab fa-react"></i></div>
          <div class="tech-icon"><i class="fas fa-code"></i></div>
          <div class="tech-icon"><i class="fas fa-layer-group"></i></div>
          <div class="tech-icon"><i class="fas fa-mobile-alt"></i></div>
          <div class="tech-icon"><i class="fas fa-tachometer-alt"></i></div>
          <div class="tech-icon"><i class="fas fa-cogs"></i></div>
        </div>
      </div>
    </Fragment>
  </Hero>

  <!-- Why Choose Us -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Why Choose Our React Development Services</h2>
        <p class="text-xl text-gray-600">Expertise that delivers results</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-puzzle-piece"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">Component-Based Architecture</h3>
          <p class="text-gray-600">Reusable, modular components that make your application maintainable, scalable, and easy to update.</p>
        </div>

        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-bolt"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">Lightning-Fast Performance</h3>
          <p class="text-gray-600">Virtual DOM and optimized rendering ensure smooth, responsive user experiences even with complex UIs.</p>
        </div>

        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-database"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">Advanced State Management</h3>
          <p class="text-gray-600">Redux, Zustand, or Context APIâ€”we implement the right state management solution for your needs.</p>
        </div>

        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">Mobile-Responsive Design</h3>
          <p class="text-gray-600">Every React application we build works flawlessly across all devices and screen sizes.</p>
        </div>

        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-search"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">SEO-Optimized</h3>
          <p class="text-gray-600">Server-side rendering (SSR) and proper meta tags ensure your React app ranks well in search engines.</p>
        </div>

        <div class="bg-white border-2 border-gray-200 rounded-lg p-8 hover:border-brand-accent hover:shadow-xl transition-all">
          <div class="text-brand-accent text-4xl mb-4">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3">Secure & Tested</h3>
          <p class="text-gray-600">Comprehensive testing, security best practices, and clean code that you can trust.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Approach with React -->
  <section id="approach" class="py-20 bg-brand-bg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Our Approach with React</h2>
        <p class="text-xl text-gray-600">How we build world-class React applications</p>
      </div>

      <div class="space-y-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-lg p-8 border-l-4 border-brand-accent shadow-lg">
          <div class="flex items-start gap-4">
            <div class="text-3xl font-bold text-brand-accent">01</div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Discovery & Planning</h3>
              <p class="text-gray-600">We start by understanding your business goals, user needs, and technical requirements. This shapes our architecture and component design.</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-8 border-l-4 border-brand-accent shadow-lg">
          <div class="flex items-start gap-4">
            <div class="text-3xl font-bold text-brand-accent">02</div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Component Architecture</h3>
              <p class="text-gray-600">We design a scalable component hierarchy, breaking down the UI into reusable, testable pieces that follow React best practices.</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-8 border-l-4 border-brand-accent shadow-lg">
          <div class="flex items-start gap-4">
            <div class="text-3xl font-bold text-brand-accent">03</div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Development & Testing</h3>
              <p class="text-gray-600">We build with TypeScript for type safety, implement unit and integration tests, and follow strict code quality standards.</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-8 border-l-4 border-brand-accent shadow-lg">
          <div class="flex items-start gap-4">
            <div class="text-3xl font-bold text-brand-accent">04</div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Performance Optimization</h3>
              <p class="text-gray-600">Code splitting, lazy loading, memoization, and other techniques ensure your app loads fast and runs smoothly.</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-8 border-l-4 border-brand-accent shadow-lg">
          <div class="flex items-start gap-4">
            <div class="text-3xl font-bold text-brand-accent">05</div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Deployment & Support</h3>
              <p class="text-gray-600">We deploy to modern hosting platforms, set up CI/CD pipelines, and provide ongoing maintenance and support.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Example Use Cases -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Example Use Cases</h2>
        <p class="text-xl text-gray-600">What we can build with React</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-brand-bg rounded-lg p-8">
          <h3 class="text-2xl font-bold mb-4">
            <i class="fas fa-shopping-cart text-brand-accent mr-3"></i>
            E-Commerce Platforms
          </h3>
          <p class="text-gray-700 mb-4">Build feature-rich online stores with real-time inventory, shopping carts, payment integration, and admin dashboards.</p>
          <ul class="space-y-2 text-gray-600">
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Product catalogs with filtering and search</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Secure checkout and payment processing</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>User accounts and order tracking</li>
          </ul>
        </div>

        <div class="bg-brand-bg rounded-lg p-8">
          <h3 class="text-2xl font-bold mb-4">
            <i class="fas fa-chart-line text-brand-accent mr-3"></i>
            SaaS Dashboards
          </h3>
          <p class="text-gray-700 mb-4">Create data-rich dashboards and admin panels with real-time updates, charts, and complex data visualization.</p>
          <ul class="space-y-2 text-gray-600">
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Interactive charts and analytics</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Role-based access control</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Real-time data synchronization</li>
          </ul>
        </div>

        <div class="bg-brand-bg rounded-lg p-8">
          <h3 class="text-2xl font-bold mb-4">
            <i class="fas fa-comments text-brand-accent mr-3"></i>
            Social Platforms
          </h3>
          <p class="text-gray-700 mb-4">Develop social features like feeds, messaging, notifications, and user profiles with real-time interactions.</p>
          <ul class="space-y-2 text-gray-600">
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Real-time messaging and notifications</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>User-generated content feeds</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Social authentication integration</li>
          </ul>
        </div>

        <div class="bg-brand-bg rounded-lg p-8">
          <h3 class="text-2xl font-bold mb-4">
            <i class="fas fa-graduation-cap text-brand-accent mr-3"></i>
            Learning Management Systems
          </h3>
          <p class="text-gray-700 mb-4">Build interactive educational platforms with courses, quizzes, progress tracking, and student management.</p>
          <ul class="space-y-2 text-gray-600">
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Video lessons and interactive content</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Progress tracking and certificates</li>
            <li><i class="fas fa-check text-brand-accent mr-2"></i>Quizzes and assessments</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to Hub CTA -->
  <section class="py-16 bg-brand-accent">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Explore Our Other Development Services</h2>
      <p class="text-xl mb-8 text-gray-800">We specialize in multiple modern frameworks to meet your specific needs.</p>
      <a href="/development/" class="inline-block bg-white text-brand-accent px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors">
        <i class="fas fa-arrow-left mr-2"></i>
        View All Development Services
      </a>
    </div>
  </section>

  <!-- Contact CTA -->
  <ContactSection />

  <Footer slot="footer" />
</MainLayout>

<style>
/********************
  CSS Variables & Reset
*********************/
:root {
  --brand-accent: #f97316;
  --brand-dark: #1E2022;
  --brand-soft: #52575D;
  --brand-light: #F8F9FA;
  --gradient-primary: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  --gradient-secondary: linear-gradient(135deg, #FF6B35 0%, #f97316 100%);
  --gradient-accent: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
  --shadow-strong: 0 15px 50px rgba(0, 0, 0, 0.15);
}

/********************
  Technical Icon Grid (Hero Visual)
*********************/
.hero-image-container {
  position: relative;
  width: 100%;
  max-width: 500px;
}

.technical-icon-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  padding: 2rem;
}

.tech-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  animation: iconFloat 4s ease-in-out infinite;
}

.tech-icon:nth-child(even) {
  animation-delay: -2s;
}

.tech-icon:hover {
  transform: translateY(-5px) scale(1.1);
  background: rgba(255, 255, 255, 0.25);
}

.tech-icon i {
  font-size: 1.75rem;
  color: white;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@media (max-width: 768px) {
  .technical-icon-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .tech-icon {
    width: 60px;
    height: 60px;
  }

  .tech-icon i {
    font-size: 1.5rem;
  }
}

/********************
  Tech Card Section (Modern Tool Cards)
*********************/
.tech-card {
  position: relative;
  background: white;
  border-radius: 16px;
  padding: 2.5rem 2rem;
  text-align: center;
  border: 1px solid #e5e7eb;
  transition: all 0.3s ease;
  overflow: hidden;
}

.tech-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
}

.tech-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(249, 115, 22, 0.15);
  border-color: #f97316;
}

.tech-card .tech-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  box-shadow: 0 8px 20px rgba(249, 115, 22, 0.25);
  transition: all 0.3s ease;
}

.tech-card:hover .tech-icon {
  transform: scale(1.1);
  box-shadow: 0 12px 30px rgba(249, 115, 22, 0.35);
}

.tech-card .tech-icon i {
  font-size: 2rem;
  color: white;
}

.tech-card h4 {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
  color: #1a1a1a;
}

.tech-card p {
  color: #666;
  line-height: 1.7;
  font-size: 0.95rem;
  margin: 0;
}

/********************
  Feature Item Section (Enhanced Design)
*********************/
.feature-item {
  position: relative;
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 2rem;
  align-items: start;
  background: white;
  padding: 2.5rem;
  border-radius: 20px;
  border: 2px solid #f0f0f0;
  transition: all 0.4s ease;
  overflow: hidden;
}

.feature-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.feature-item:hover::before {
  opacity: 1;
}

.feature-item:hover {
  transform: translateY(-8px);
  box-shadow: 0 15px 40px rgba(249, 115, 22, 0.15);
  border-color: rgba(249, 115, 22, 0.3);
}

.feature-icon-large {
  width: 90px;
  height: 90px;
  border-radius: 20px;
  background: linear-gradient(135deg, #f97316, #FF6B35);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.25rem;
  color: white;
  flex-shrink: 0;
  box-shadow: 0 8px 20px rgba(249, 115, 22, 0.25);
  transition: all 0.4s ease;
}

.feature-item:hover .feature-icon-large {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 12px 30px rgba(249, 115, 22, 0.35);
}

.feature-content {
  padding-top: 0.5rem;
}

.feature-content h3 {
  font-size: 1.625rem;
  font-weight: 800;
  margin-bottom: 0.75rem;
  color: #1a1a1a;
  line-height: 1.3;
}

.feature-content p {
  color: #666;
  line-height: 1.7;
  margin-bottom: 1rem;
  font-size: 1rem;
}

.feature-benefit {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(255, 107, 53, 0.1));
  color: #f97316;
  padding: 0.625rem 1.25rem;
  border-radius: 50px;
  font-size: 0.95rem;
  font-weight: 700;
  border: 1px solid rgba(249, 115, 22, 0.2);
  transition: all 0.3s ease;
}

.feature-item:hover .feature-benefit {
  background: linear-gradient(135deg, #f97316, #FF6B35);
  color: white;
  border-color: transparent;
  transform: translateX(5px);
}

@media (max-width: 768px) {
  .feature-item {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 2rem;
    text-align: center;
  }

  .feature-icon-large {
    margin: 0 auto;
  }

  .feature-content {
    padding-top: 0;
  }
}
</style>

/********************
  CSS Variables & Reset
*********************/
:root {
  --brand-accent: #f97316;
  --brand-blue: #4285F4; /* legacy var (unused after red theme) */
  --brand-dark: #1E2022;
  --brand-soft: #52575D;
  --brand-light: #F8F9FA;
  --gradient-primary: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  --gradient-secondary: linear-gradient(135deg, #FF6B35 0%, #f97316 100%);
  --gradient-accent: linear-gradient(135deg, #f97316 0%, #FF6B35 100%);
  --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
  --shadow-strong: 0 15px 50px rgba(0, 0, 0, 0.15);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', 'DM Sans', sans-serif;
  line-height: 1.6;
  color: var(--brand-dark);
  overflow-x: hidden;
}

/* Page centering fix */
.container,
.max-w-7xl,
.max-w-4xl {
  max-width: 80rem;
  width: 100%;
  margin-left: auto !important;
  margin-right: auto !important;
  padding-left: 1rem;
  padding-right: 1rem;
}

.max-w-4xl {
  max-width: 56rem;
}

@media (min-width: 640px) {
  .container,
  .max-w-7xl,
  .max-w-4xl {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }
}

@media (min-width: 1024px) {
  .container,
  .max-w-7xl,
  .max-w-4xl {

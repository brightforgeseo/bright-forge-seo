  }

  .service-header {
    background: linear-gradient(135deg, #f97316, #FF6B35);
    color: white;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .service-icon {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
  }

  .service-header h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0;
  }

  .service-content {
    padding: 2rem;
  }

  .service-content p {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    color: #4a5568;
    padding: 0.5rem 0;
    position: relative;

import '../styles/global.css';

export interface Props {
  title: string;
  excerpt: string;
  author: {
    name: string;
    bio: string;
    avatar?: string;
    linkedin?: string;
  };
  publishDate: string;
  modifiedDate?: string;
  readTime: string;
  category: string;
  tags: string[];
  featuredImage?: string;
  content?: string;
  relatedArticles?: Array<{
    title: string;
    excerpt: string;
    slug: string;
    image?: string;
    publishDate: string;
  }>;
  tableOfContents?: Array<{
    id: string;
    title: string;
    level: number;
  }>;
}

import MainLayout from '../layouts/MainLayout.astro';

const {
  title,
  excerpt,
  author,
  publishDate,
  modifiedDate,
  readTime,
  category,
  tags,
  featuredImage,
  content,
  relatedArticles,
  tableOfContents
} = Astro.props;

// Generate article schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": excerpt,
  "image": featuredImage ? (featuredImage.startsWith('http') ? featuredImage : `https://brightforgeseo.com${featuredImage}`) : undefined,
  "author": {
    "@type": "Person",
    "name": author.name,
    "url": author.linkedin
  },
  "publisher": {
    "@type": "Organization",
    "name": "Bright Forge SEO",
    "logo": {
      "@type": "ImageObject",
      "url": "https://brightforgeseo.com/images/logo.png"
    }
  },
  "datePublished": publishDate,
  "dateModified": modifiedDate || publishDate,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  },
  "articleSection": category,
  "keywords": tags.join(", ")
};

// Generate breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://brightforgeseo.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://brightforgeseo.com/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": Astro.url.href
    }
  ]
};

// Current URL for canonical
const canonicalUrl = Astro.url.href;

// Format date
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

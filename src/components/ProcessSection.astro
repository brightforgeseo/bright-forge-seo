---
// Props with defaults
const {
  badge = "OUR METHOD",
  title = "Step-by-Step",
  titleHighlight = "Process"
} = Astro.props;

const steps = [
  {
    number: "01",
    title: "In-Depth Website Audit",
    description: "We assess your website's structure, technical health, and content quality to uncover areas of improvement."
  },
  {
    number: "02",
    title: "Custom Strategy Development",
    description: "We build a detailed roadmap aligned with your business goalsâ€”from improving local visibility to capturing a global audience."
  },
  {
    number: "03",
    title: "Execution & Optimization",
    description: "We implement SEO enhancements, create targeted content, and build high-quality backlinks to strengthen your online presence."
  },
  {
    number: "04",
    title: "Continuous Performance Monitoring",
    description: "SEO is dynamic, and so are we. We analyze results, refine strategies, and ensure consistent progress over time."
  }
];
---

<div class="bg-gray-50 py-16 px-4">
  <div class="max-w-7xl mx-auto">

    <!-- Header -->
    <div class="text-center mb-12">
      <span class="inline-block bg-orange-500 text-white px-5 py-2 rounded-full text-sm font-semibold tracking-wide mb-4">
        {badge}
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        {title} <span class="text-orange-500">{titleHighlight}</span>
      </h2>
    </div>

    <!-- Process Steps - 2 Column Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {steps.map((step) => (
        <div
          class="bg-white rounded-lg p-10 shadow-sm hover:shadow-xl transition-all duration-300 cursor-pointer group hover:bg-orange-50"
        >
          <!-- Orange top border -->
          <div class="h-1 bg-gradient-to-r from-orange-500 to-orange-400 -mx-10 -mt-10 mb-6 rounded-t-lg"></div>

          <!-- Step number circle -->
          <div class="mb-6">
            <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center text-white font-bold text-xl group-hover:bg-orange-600 transition-colors">
              {step.number}
            </div>
          </div>

          <!-- Icon and Title -->
          <div class="mb-4">
            <h3 class="text-xl font-bold text-gray-900">
              {step.title}
            </h3>
          </div>

          <!-- Description -->
          <p class="text-gray-700 leading-relaxed text-base">
            {step.description}
          </p>
        </div>
      ))}
    </div>

  </div>
</div>

<script>
  // Add hover effects with JavaScript
  document.addEventListener('DOMContentLoaded', () => {
    const processCards = document.querySelectorAll('.group');

    processCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.backgroundColor = '#fff7ed';
        this.style.transform = 'scale(1.02)';
      });

      card.addEventListener('mouseleave', function() {
        this.style.backgroundColor = 'white';
        this.style.transform = 'scale(1)';
      });
    });
  });
</script>

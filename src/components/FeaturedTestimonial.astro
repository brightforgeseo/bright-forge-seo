        <div class="mt-8 pt-8 border-t border-orange-200">
          <div class="grid grid-cols-3 gap-3 md:gap-6 text-center">
            <div class="stat-highlight">
              <div class="text-2xl md:text-4xl font-bold text-orange-500 mb-1 md:mb-2">1,000</div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Starting Traffic</div>
            </div>
            <div class="stat-highlight">
              <div class="text-2xl md:text-4xl font-bold text-orange-500 mb-1 md:mb-2">
                <i class="fas fa-arrow-right text-lg md:text-2xl"></i>
              </div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Growth</div>
            </div>
            <div class="stat-highlight">
              <div class="text-2xl md:text-4xl font-bold text-orange-500 mb-1 md:mb-2">64,000</div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Current Traffic</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .stat-highlight {
    transition: transform 0.3s ease;
  }

  .stat-highlight:hover {
    transform: translateY(-5px);
  }
</style>

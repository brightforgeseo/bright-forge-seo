<script is:inline slot="head">
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const navMenu = document.querySelector('.nav-menu');
    const dropdownBtns = document.querySelectorAll('.nav-link[data-dropdown]');
    let activeDropdown = null;

    function closeAllDropdowns() {
      dropdownBtns.forEach(btn => {
        const dropdown = btn.nextElementSibling;
        if (dropdown?.classList.contains('active')) {
          dropdown.classList.remove('active');
          btn.classList.remove('active');
        }
      });
      activeDropdown = null;
    }

    // Toggle mobile menu
    if (mobileMenuBtn && navMenu) {
      mobileMenuBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        mobileMenuBtn.classList.toggle('active');
        navMenu.classList.toggle('active');
        document.body.classList.toggle('menu-open');
        closeAllDropdowns();
      });
    }

    // Handle dropdowns
    dropdownBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const dropdown = btn.nextElementSibling;
        const isActive = dropdown?.classList.contains('active');

        // Close previously active dropdown if it's different
        if (activeDropdown && activeDropdown !== dropdown) {
          activeDropdown.classList.remove('active');
          activeDropdown.previousElementSibling?.classList.remove('active');
        }

        // Toggle current dropdown
        if (dropdown) {
          dropdown.classList.toggle('active');
          btn.classList.toggle('active');
          activeDropdown = isActive ? null : dropdown;
        }
      });
    });

    // Close menu and dropdowns when clicking outside
    document.addEventListener('click', (e) => {
      const clickedElement = e.target;
      const isMenuClick = clickedElement.closest('.nav-menu');
      const isMenuBtnClick = clickedElement.closest('.mobile-menu-btn');
      const isDropdownClick = clickedElement.closest('.dropdown, .mega-dropdown');

      if (!isMenuClick && !isMenuBtnClick && !isDropdownClick) {
        navMenu?.classList.remove('active');
        mobileMenuBtn?.classList.remove('active');
        document.body.classList.remove('menu-open');
        closeAllDropdowns();
      }
    });

    // Handle touch events for better mobile experience
    let touchStartY = 0;
    let touchEndY = 0;

    navMenu?.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    }, { passive: true });

    navMenu?.addEventListener('touchmove', (e) => {
      touchEndY = e.touches[0].clientY;
      const scrollTop = navMenu.scrollTop;
      const scrollHeight = navMenu.scrollHeight;
      const clientHeight = navMenu.clientHeight;

      // Prevent overscroll only at boundaries
      if (scrollTop <= 0 && touchEndY > touchStartY) {
        e.preventDefault();
      }
      if (scrollTop + clientHeight >= scrollHeight && touchEndY < touchStartY) {
        e.preventDefault();
      }
    }, { passive: false });
  });
</script>

<style>
  /* Mobile Menu Styles */
  body.menu-open {
    overflow: hidden;
    position: fixed;
    width: 100%;
  }

  /* Hide mobile menu button on desktop - highest priority */
  .navbar .mobile-menu-btn {
    display: none !important;
    visibility: hidden !important;
  }

  /* Only show on mobile */
  @media only screen and (max-width: 768px) {
    .navbar .mobile-menu-btn {
      display: flex !important;
      visibility: visible !important;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      cursor: pointer;
      padding: 10px;
      width: 44px;
      height: 44px;
      position: relative;
      z-index: 1001;
      transition: all 0.3s ease;
    }
  }

  /* Ensure it's hidden on desktop */
  @media only screen and (min-width: 769px) {
    .navbar .mobile-menu-btn {
      display: none !important;
      visibility: hidden !important;
      opacity: 0 !important;
      pointer-events: none !important;
      position: absolute !important;
      left: -9999px !important;
    }
  }

  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }

    .nav-menu.active {
      display: block;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      bottom: 0;
      background: #f9fafb;
      z-index: 999;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
      animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-100%);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .nav-item {
      display: block;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 18px 20px;
      color: #333;
      font-size: 16px;
      font-weight: 600;
      text-decoration: none;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      position: relative;
    }
    
    .nav-link .dropdown-toggle {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      padding: 5px;
      margin-left: auto;
    }
    
    .nav-link span {
      padding-right: 40px;
    }

    .nav-link i {
      transition: transform 0.3s ease;
      color: #ff4438;
      font-size: 14px;
      flex-shrink: 0;
    }

    .nav-link.active i {
      transform: rotate(180deg);
    }

    .nav-link:hover,
    .nav-link.active {
      background: rgba(255, 68, 56, 0.05);
      color: #ff4438;
    }

    .dropdown,
    .mega-dropdown {
      position: relative;
      background: white;
      padding: 15px;
      margin: 10px 15px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      display: none;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 68, 56, 0.1);
      max-width: calc(100% - 30px);
      overflow-x: hidden;
    }

    .dropdown.active,
    .mega-dropdown.active {
      display: block !important;
      opacity: 1;
      transform: translateY(0);
    }

    .mega-dropdown {
      display: none;
    }

    .dropdown-image {
      display: none;
    }

    .dropdown-column {
      margin-bottom: 25px;
    }

    .dropdown-column:last-child {
      margin-bottom: 0;
    }

    .dropdown-title {
      font-size: 14px;
      font-weight: 700;
      color: #ff4438;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid rgba(255, 68, 56, 0.1);
    }

    .dropdown-item {
      margin-bottom: 12px;
    }

    .dropdown-link {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      padding: 12px 15px;
      border-radius: 8px;
      text-decoration: none;
      transition: all 0.3s ease;
      background: #f8f9fa;
      width: 100%;
      box-sizing: border-box;
    }

    .dropdown-link:hover {
      background: rgba(255, 68, 56, 0.05);
      transform: translateX(5px);
    }

    .dropdown-icon {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, #ff4438 0%, #ff6b35 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      box-shadow: 0 4px 12px rgba(255, 68, 56, 0.15);
    }

    .dropdown-icon i {
      color: white;
      font-size: 16px;
    }

    .dropdown-content {
      flex: 1;
      min-width: 0;
      overflow-wrap: break-word;
      word-break: break-word;
    }

    .dropdown-link-title {
      font-size: 16px;
      font-weight: 600;
      color: #333;
      margin-bottom: 4px;
      line-height: 1.3;
      overflow-wrap: break-word;
      word-break: break-word;
    }

    .dropdown-link-desc {
      font-size: 13px;
      color: #666;
      line-height: 1.4;
      word-wrap: break-word;
      overflow-wrap: break-word;
      word-break: break-word;
      hyphens: auto;
    }

    .cta-button {
      display: none;
    }
  }
</style>

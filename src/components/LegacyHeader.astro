      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      bottom: 0;
      background: #f9fafb;
      z-index: 999;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
      animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-100%);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .nav-item {
      display: block;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 18px 20px;
      color: #333;
      font-size: 16px;
      font-weight: 600;
      text-decoration: none;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      position: relative;
    }
    
    .nav-link .dropdown-toggle {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      padding: 5px;
      margin-left: auto;
    }
    
    .nav-link span {
      padding-right: 40px;
    }

    .nav-link i {
      transition: transform 0.3s ease;
      color: #ff4438;
      font-size: 14px;
      flex-shrink: 0;
    }

    .nav-link.active i {
      transform: rotate(180deg);
    }

    .nav-link:hover,
    .nav-link.active {
      background: rgba(255, 68, 56, 0.05);
      color: #ff4438;
    }

    .dropdown,
    .mega-dropdown {
      position: relative;
      background: white;
      padding: 15px;
      margin: 10px 15px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      display: none;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 68, 56, 0.1);
      max-width: calc(100% - 30px);
      overflow-x: hidden;
    }

    .dropdown.active,
    .mega-dropdown.active {
      display: block !important;
      opacity: 1;
      transform: translateY(0);
    }

    .mega-dropdown {
      display: none;
    }

    .dropdown-image {
      display: none;
    }

    .dropdown-column {
      margin-bottom: 25px;
    }

    .dropdown-column:last-child {
      margin-bottom: 0;
    }

    .dropdown-title {
      font-size: 14px;
      font-weight: 700;
      color: #ff4438;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid rgba(255, 68, 56, 0.1);
    }

    .dropdown-item {
      margin-bottom: 12px;
    }

    .dropdown-link {

      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 68, 56, 0.1);
      max-width: calc(100% - 30px);
      overflow-x: hidden;
    }

    .dropdown.active,
    .mega-dropdown.active {

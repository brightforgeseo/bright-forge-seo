    .navbar .mobile-menu-btn {
      display: none !important;
      visibility: hidden !important;
      opacity: 0 !important;
      pointer-events: none !important;
      position: absolute !important;
      left: -9999px !important;
    }
  }

  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }

    .nav-menu.active {

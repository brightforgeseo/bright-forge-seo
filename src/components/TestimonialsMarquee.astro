---

<div class="mt-10 relative overflow-x-clip py-16">
  <!-- Background gradient blurs -->
  <div class="absolute w-96 h-96 blur-3xl -z-10 bg-gradient-radial from-indigo-100 right-1/3 -top-10"></div>
  <div class="absolute w-96 h-96 blur-3xl -z-10 bg-gradient-radial from-purple-100 right-1/3 translate-x-2/3 top-10"></div>

  <!-- Optional heading -->
  {heading && (
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900">{heading}</h2>
    </div>
  )}

  <!-- Marquee Container -->
  <div class="relative overflow-hidden py-5">
    <div class="flex gap-10">
      <!-- First set of testimonials (scrolling) -->
      <div class="flex animate-marquee gap-10 shrink-0">
        {testimonials.map((testimonial) => (
          <a
            href={testimonial.reviewLink}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-2xl relative p-8 bg-gray-50/60 backdrop-blur-md transition-all ring-1 ring-gray-200/50 shadow hover:shadow-lg w-96 flex flex-col justify-between shrink-0 no-underline"
          >
            <blockquote class="text-lg md:text-xl leading-relaxed mb-10 text-gray-800">
              {testimonial.quote}
            </blockquote>

            <div class="flex items-center gap-3">
              <div class="shrink-0">
                <div class="rounded-full w-12 h-12 flex items-center justify-center bg-gradient-to-br from-orange-500 to-purple-600 text-white font-semibold text-lg">
                  {testimonial.initial}
                </div>
              </div>
              <div>
                <h3 class="font-medium text-slate-800">{testimonial.name}</h3>
                <p class="text-sm text-slate-600">{testimonial.role}</p>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Duplicate set for seamless loop -->
      <div class="flex animate-marquee gap-10 shrink-0" aria-hidden="true">
        {testimonials.map((testimonial) => (
          <a
            href={testimonial.reviewLink}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-2xl relative p-8 bg-gray-50/60 backdrop-blur-md transition-all ring-1 ring-gray-200/50 shadow hover:shadow-lg w-96 flex flex-col justify-between shrink-0 no-underline"
          >
            <blockquote class="text-lg md:text-xl leading-relaxed mb-10 text-gray-800">
              {testimonial.quote}
            </blockquote>

            <div class="flex items-center gap-3">
              <div class="shrink-0">
                <div class="rounded-full w-12 h-12 flex items-center justify-center bg-gradient-to-br from-orange-500 to-purple-600 text-white font-semibold text-lg">
                  {testimonial.initial}
                </div>
              </div>
              <div>
                <h3 class="font-medium text-slate-800">{testimonial.name}</h3>
                <p class="text-sm text-slate-600">{testimonial.role}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-marquee {
    animation: marquee 40s linear infinite;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }

  .bg-gradient-radial {
    background: radial-gradient(circle, var(--tw-gradient-from) 0%, transparent 70%);
  }
</style>

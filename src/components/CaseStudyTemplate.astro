---
import { getImage } from 'astro:assets';

export interface Props {
  title: string;
  client: string;
  industry: string;
  duration: string;
  heroImage?: string;
  challenge: string;
  solution: string;
  keyMetrics: Array<{
    label: string;
    value: string;
    description: string;
  }>;
  strategySteps: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  results: Array<{
    metric: string;
    before: string;
    after: string;
    improvement: string;
  }>;
  testimonial?: {
    quote: string;
    author: string;
    position: string;
    company: string;
    avatar?: string;
  };
  keyTakeaways: string[];
  nextSteps?: string;
  publishDate?: string;
  modifiedDate?: string;
}

const {
  title,
  client,
  industry,
  duration,
  heroImage,
  challenge,
  solution,
  keyMetrics,
  strategySteps,
  results,
  testimonial,
  keyTakeaways,
  nextSteps,
  publishDate = new Date().toISOString().split('T')[0],
  modifiedDate
} = Astro.props;

// Generate schema for the case study
const caseStudySchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": challenge,
  "image": heroImage ? (heroImage.startsWith('http') ? heroImage : `https://brightforgeseo.com${heroImage}`) : undefined,
  "author": {
    "@type": "Organization",
    "name": "Bright Forge SEO",
    "url": "https://brightforgeseo.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Bright Forge SEO",
    "logo": {
      "@type": "ImageObject",
      "url": "https://brightforgeseo.com/images/logo.png"
    }
  },
  "datePublished": publishDate,
  "dateModified": modifiedDate || publishDate,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  },
  "articleSection": "Case Study",
  "keywords": [industry, "SEO", "Case Study", client, "Digital Marketing"].join(", ")
};

// Generate schema for the service provided
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "SEO Services",
  "provider": {
    "@type": "Organization",
    "name": "Bright Forge SEO",
    "url": "https://brightforgeseo.com"
  },
  "description": solution,
  "name": `SEO Services for ${industry}`,
  "review": testimonial ? {
    "@type": "Review",
    "reviewBody": testimonial.quote,
    "author": {
      "@type": "Person",
      "name": testimonial.author
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "5",
      "bestRating": "5"
    }
  } : undefined
};

// Generate breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://brightforgeseo.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Case Studies",
      "item": "https://brightforgeseo.com/case-studies"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": Astro.url.href
    }
  ]
};

// Generate FAQPage schema from key takeaways
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": keyTakeaways.map((takeaway, index) => ({
    "@type": "Question",
    "name": `What is key takeaway #${index + 1} from this ${industry} SEO case study?`,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": takeaway
    }
  }))
};

// Current URL for canonical
const canonicalUrl = Astro.url.href;
---

<!-- SEO Schema Markup -->
<script type="application/ld+json" set:html={JSON.stringify(caseStudySchema)} slot="head" />
<script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} slot="head" />
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />

<article class="case-study">
  <!-- Hero Section -->
  <section class="hero-seo">
    <!-- Animated Background Elements -->
    <div class="hero-bg-elements">
      <div class="floating-circle circle-1"></div>
      <div class="floating-circle circle-2"></div>
      <div class="floating-circle circle-3"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4">
      <!-- Breadcrumbs -->
      <nav class="hero-breadcrumbs">
        <a href="/" class="breadcrumb-link">Home</a>
        <span class="breadcrumb-separator">›</span>
        <a href="/case-studies/" class="breadcrumb-link">Case Studies</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-current">{client}</span>
      </nav>
      
      <div class="hero-container">
        <div class="hero-content">
          <div class="hero-badge">
            <i class="fas fa-chart-line"></i>
            <span>{industry} • {duration}</span>
          </div>
          
          <h1>{title}</h1>
          
          <p class="hero-description">A comprehensive SEO transformation case study showcasing measurable results and strategic implementation.</p>
          
          <div class="hero-actions">
            <a href="/contact" class="cta-button primary">
              <span>Get Similar Results</span>
              <i class="fas fa-arrow-right"></i>
            </a>
            <a href="#metrics" class="cta-button secondary">
              <i class="fas fa-chart-bar"></i>
              <span>View Results</span>
            </a>
          </div>
        </div>
        
        {heroImage && (
          <div class="hero-visual">
            <div class="hero-image-container">
              <img src={heroImage} alt={`${client} case study results`} width="500" height="350" loading="eager" decoding="sync" />
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Key Metrics Overview -->
  <section class="metrics-overview">
    <div class="max-w-7xl mx-auto px-4">
      <div class="metrics-grid">
        {keyMetrics.map((metric) => (
          <div class="metric-card">
            <div class="metric-value">{metric.value}</div>
            <div class="metric-label">{metric.label}</div>
            <div class="metric-description">{metric.description}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Challenge Section -->
  <section class="challenge-section">
    <div class="max-w-4xl mx-auto px-4">
      <div class="section-header">
        <h2>The <span>Challenge</span></h2>
      </div>
      <div class="challenge-content">
        <div class="challenge-icon">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="challenge-text">
          <p>{challenge}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Strategy -->
  <section class="solution-section">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <h2>Our <span>Solution Strategy</span></h2>
        <p>{solution}</p>
      </div>
      
      <div class="strategy-grid">
        {strategySteps.map((step, index) => (
          <div class="strategy-card">
            <div class="strategy-number">{index + 1}</div>
            <div class="strategy-icon">
              <i class={step.icon}></i>
            </div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Results Section -->
  <section class="results-section">
    <div class="max-w-7xl mx-auto px-4">
      <div class="section-header">
        <h2>Measurable <span>Results</span></h2>
      </div>
      
      <div class="results-table">
        <div class="results-header">
          <div>Metric</div>
          <div>Before</div>
          <div>After</div>
          <div>Improvement</div>
        </div>
        {results.map((result) => (
          <div class="results-row">
            <div class="metric-name">{result.metric}</div>
            <div class="before-value">{result.before}</div>
            <div class="after-value">{result.after}</div>
            <div class="improvement-value">{result.improvement}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  {testimonial && (
    <section class="testimonial-section">
      <div class="max-w-4xl mx-auto px-4">
        <div class="testimonial-card">
          <div class="testimonial-quote">
            <i class="fas fa-quote-left"></i>
            <p>"{testimonial.quote}"</p>
          </div>
          <div class="testimonial-author">
            {testimonial.avatar && (
              <img src={testimonial.avatar} alt={testimonial.author} width="80" height="80" loading="lazy" decoding="async" />
            )}
            <div class="author-info">
              <div class="author-name">{testimonial.author}</div>
              <div class="author-position">{testimonial.position}</div>
              <div class="author-company">{testimonial.company}</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Key Takeaways -->
  <section class="takeaways-section">
    <div class="max-w-4xl mx-auto px-4">
      <div class="section-header">
        <h2>Key <span>Takeaways</span></h2>
      </div>
      
      <div class="takeaways-list">
        {keyTakeaways.map((takeaway) => (
          <div class="takeaway-item">
            <div class="takeaway-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <p>{takeaway}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Next Steps CTA -->
  {nextSteps && (
    <section class="next-steps-section">
      <div class="max-w-4xl mx-auto px-4">
        <div class="next-steps-card">
          <h3>Ready for Similar Results?</h3>
          <p>{nextSteps}</p>
          <a href="/contact/" class="cta-button">Start Your SEO Journey</a>
        </div>
      </div>
    </section>
  )}
</article>

<style>
/* Hero Section - Matching Service Pages */
.hero-seo {
  background: linear-gradient(135deg, #FF4438 0%, #FF6B35 50%, #4285F4 100%);
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  color: white;
  overflow: hidden;
}

.hero-seo::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.hero-seo .max-w-7xl {
  position: relative;
  z-index: 2;
}

/* Floating Background Elements */
.hero-bg-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.floating-circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 120px;
  height: 120px;
  top: 20%;
  right: 15%;
  animation-delay: 0s;
}

.circle-2 {
  width: 80px;
  height: 80px;
  top: 60%;
  right: 25%;
  animation-delay: 2s;
}

.circle-3 {
  width: 60px;
  height: 60px;
  top: 40%;
  left: 10%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* Breadcrumbs */
.hero-breadcrumbs {
  display: inline-block !important;
  margin-bottom: 3rem;
  font-size: 14px;
  font-weight: 500;
  line-height: 1;
}

.hero-breadcrumbs * {
  display: inline !important;
  vertical-align: baseline !important;
}

.breadcrumb-link {
  color: white !important;
  text-decoration: none;
  transition: all 0.3s ease;
  opacity: 0.9;
}

.breadcrumb-link:hover {
  opacity: 1;
  text-decoration: underline;
}

.breadcrumb-separator {
  color: white !important;
  margin: 0 8px;
  opacity: 0.7;
}

.breadcrumb-current {
  color: white !important;
  font-weight: 600;
}

/* Hero Container */
.hero-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

/* Hero Content */
.hero-content {
  max-width: none;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 10px 20px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 1.5rem;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.hero-badge i {
  font-size: 14px;
}

.hero-content h1 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 800;
  margin-bottom: 20px;
  line-height: 1.2;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.hero-description {
  font-size: 1.3rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  max-width: 600px;
  margin-bottom: 30px;
}

/* Hero Actions */
.hero-actions {
  display: flex;
  gap: 20px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 16px 32px;
  border-radius: 50px;
  font-weight: 700;
  font-size: 1.1rem;
  text-decoration: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.cta-button.primary {
  background: white;
  color: #FF4438;
  box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
}

.cta-button.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(255, 255, 255, 0.4);
  background: #f8f9fa;
}

.cta-button.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
}

.cta-button.secondary:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
}

/* Hero Stats */
.hero-stats {
  display: flex;
  gap: 40px;
  flex-wrap: wrap;
}

.stat {
  text-align: center;
}

.stat-number {
  font-size: 2.5rem;
  font-weight: 800;
  color: white;
  line-height: 1;
  margin-bottom: 5px;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* Hero Visual */
.hero-visual {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-image-container {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.hero-image-container img {
  width: 500px;
  height: 350px;
  object-fit: cover;
  display: block;
}

/* Mobile Responsiveness */
@media (max-width: 1024px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: 40px;
    text-align: center;
  }
  
  .hero-image-container img {
    width: 400px;
    height: 280px;
  }
}

@media (max-width: 768px) {
  .case-study-hero {
    min-height: auto;
    padding: 100px 0 60px;
  }
  
  .hero-actions {
    justify-content: center;
  }
  
  .hero-stats {
    justify-content: center;
  }
  
  .hero-image-container img {
    width: 100%;
    max-width: 350px;
    height: 250px;
  }
  
  .cta-button {
    padding: 14px 28px;
    font-size: 1rem;
  }
  
  .stat-number {
    font-size: 2rem;
  }
}

/* Metrics Overview */
.metrics-overview {
  padding: 80px 0;
  background: #f8fafc;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
}

.metric-card {
  background: white;
  padding: 40px 30px;
  border-radius: 15px;
  text-align: center;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(66, 133, 244, 0.1);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.metric-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(135deg, #FF4438, #FF6B35, #4285F4);
}

.metric-value {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, #FF4438, #4285F4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10px;
}

.metric-label {
  font-size: 1.2rem;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8px;
}

.metric-description {
  color: #666;
  font-size: 0.9rem;
}

/* Section Headers */
.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.section-header h2 {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 16px;
  line-height: 1.2;
}

.section-header h2 span {
  background: linear-gradient(135deg, #FF4438, #4285F4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-header p {
  font-size: 1.2rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

/* Challenge Section */
.challenge-section {
  padding: 80px 0;
  background: white;
}

.challenge-content {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 30px;
  align-items: center;
  background: #f8fafc;
  padding: 40px;
  border-radius: 15px;
  border-left: 5px solid #FF4438;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
}

.challenge-icon {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #FF4438, #FF6B35);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2rem;
  box-shadow: 0 10px 30px rgba(255, 68, 56, 0.3);
}

.challenge-text p {
  font-size: 1.2rem;
  line-height: 1.7;
  color: #374151;
  margin: 0;
}

/* Solution Section */
.solution-section {
  padding: 80px 0;
  background: #f8fafc;
}

.strategy-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  margin-top: 60px;
}

.strategy-card {
  background: white;
  padding: 40px 30px;
  border-radius: 15px;
  text-align: center;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(66, 133, 244, 0.1);
}

.strategy-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
}

.strategy-number {
  position: absolute;
  top: -15px;
  left: 30px;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #FF4438, #FF6B35, #4285F4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 700;
  font-size: 1.2rem;
  box-shadow: 0 5px 15px rgba(255, 68, 56, 0.3);
}

.strategy-icon {
  background: linear-gradient(135deg, #4285F4, #6AB7FF);
  color: white;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px auto 25px;
  font-size: 2rem;
  box-shadow: 0 5px 20px rgba(66, 133, 244, 0.3);
}

.strategy-card h3 {
  font-size: 1.4rem;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 15px;
}

.strategy-card p {
  color: #666;
  line-height: 1.6;
  margin: 0;
}

/* Results Section */
.results-section {
  padding: 80px 0;
  background: white;
}

.results-table {
  background: white;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(66, 133, 244, 0.1);
}

.results-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 20px;
  background: linear-gradient(135deg, #FF4438, #FF6B35, #4285F4);
  color: white;
  padding: 25px 30px;
  font-weight: 700;
  font-size: 1.1rem;
}

.results-row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 20px;
  padding: 25px 30px;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
}

.results-row:last-child {
  border-bottom: none;
}

.metric-name {
  font-weight: 600;
  color: #1a1a1a;
}

.before-value {
  color: #666;
}

.after-value {
  font-weight: 600;
  color: #4285F4;
}

.improvement-value {
  font-weight: 700;
  background: linear-gradient(135deg, #FF4438, #4285F4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Testimonial Section */
.testimonial-section {
  padding: 80px 0;
  background: #f8fafc;
}

.testimonial-card {
  background: white;
  padding: 50px 40px;
  border-radius: 15px;

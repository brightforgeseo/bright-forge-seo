    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
  }

  .step-count {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .step-count span {
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 5px;
  }

  .step-num {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #FF4438, #FF6B35);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 700;
  }

  .step-icon-container {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4285F4, #34A853);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .step-icon-container i {
    color: white;
    font-size: 24px;
  }

  .method-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 15px;
  }

  .method-description {
    color: #666;
    line-height: 1.7;
    margin-bottom: 20px;
  }

  .completion-status {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #34A853;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .progress-bar {
    width: 100%;
    height: 6px;
    background: #e2e8f0;
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(135deg, #FF4438, #4285F4);
    transition: width 0.8s ease;
  }


---
import MainLayout from '../layouts/MainLayout.astro';
import ContactSection from '../components/ContactSection.astro';

export interface Props {
  title: string;
  client: string;
  industry: string;
  duration: string;
  heroImage?: string;
  challenge: string;
  solution: string;
  keyMetrics: Array<{
    label: string;
    value: string;
    description: string;
  }>;
  strategySteps: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  results: Array<{
    metric: string;
    before: string;
    after: string;
    improvement: string;
  }>;
  testimonial?: {
    quote: string;
    author: string;
    position: string;
    company: string;
    avatar?: string;
  };
  keyTakeaways: string[];
  nextSteps?: string;
}

const {
  title,
  client,
  industry,
  duration,
  heroImage,
  challenge,
  solution,
  keyMetrics,
  strategySteps,
  results,
  testimonial,
  keyTakeaways,
  nextSteps
} = Astro.props;
---

<MainLayout title={`${title} - ${client} Case Study | Bright Forge SEO`} description={`See how Bright Forge SEO helped ${client} achieve ${keyMetrics[0]?.value} through strategic SEO implementation. ${challenge.substring(0, 120)}...`}>

  <!-- Case Study Hero -->
  <section class="case-hero">
    <div class="case-hero-bg">
      <div class="success-indicator">
        <i class="fas fa-trophy"></i>
        <span>Success Story</span>
      </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 py-16">
      <nav class="case-breadcrumbs">
        <a href="/"><i class="fas fa-home"></i> Home</a>
        <i class="fas fa-chevron-right"></i>
        <a href="/case-studies/"><i class="fas fa-folder"></i> Case Studies</a>
        <i class="fas fa-chevron-right"></i>
        <span>{client}</span>
      </nav>
      
      <div class="case-hero-content">
        <div class="hero-left">
          <div class="client-badge">
            <i class="fas fa-building"></i>
            <span>{industry}</span>
            <div class="divider"></div>
            <i class="fas fa-calendar"></i>
            <span>{duration}</span>
          </div>
          
          <h1 class="case-title">{title}</h1>
          
          <p class="case-description">
            Discover how we helped {client} transform their digital presence and achieve exceptional growth through data-driven SEO strategies.
          </p>
          
          <div class="primary-metric">
            <div class="metric-number">{keyMetrics[0]?.value}</div>
            <div class="metric-label">{keyMetrics[0]?.label}</div>
            <div class="metric-description">{keyMetrics[0]?.description}</div>
          </div>
          
          <div class="case-actions">
            <a href="#results" class="btn-primary">
              <i class="fas fa-chart-line"></i>
              <span>View Full Results</span>
            </a>
            <a href="/contact/" class="btn-secondary">
              <i class="fas fa-comments"></i>
              <span>Discuss Your Project</span>
            </a>
          </div>
        </div>
        
        {heroImage && (
          <div class="hero-right">
            <div class="results-showcase">
              <img src={heroImage} alt={`${client} Performance Dashboard`} />
              <div class="showcase-overlay">
                <div class="growth-badge">
                  <i class="fas fa-trending-up"></i>
                  <span>Growth Achieved</span>
                </div>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Impact Results Section -->
  <section class="impact-results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="results-header">
        <h2>Impact & Results</h2>
        <p>The measurable transformation we delivered for {client}</p>
      </div>

      <div class="achievement-grid">
        {keyMetrics.map((metric, index) => (
          <div class="achievement-card">
            <div class="achievement-rank">#{index + 1}</div>
            <div class="achievement-icon">
              <i class="fas fa-medal"></i>
            </div>
            <div class="achievement-data">
              <div class="achievement-value">{metric.value}</div>
              <h3 class="achievement-title">{metric.label}</h3>
              <p class="achievement-desc">{metric.description}</p>
            </div>
            <div class="achievement-glow"></div>
          </div>
        ))}
      </div>
      

    </div>
  </section>



  <!-- The Challenge Story -->
  <section class="challenge-story">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="story-header">
        <h2>The Challenge</h2>
        <p>Every success story begins with overcoming obstacles</p>
      </div>

      <div class="timeline-container">
        <div class="timeline-line"></div>
        
        <div class="story-point initial-state">
          <div class="story-marker">
            <i class="fas fa-flag"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Initial State</div>
            <h3>The Situation</h3>
            <div class="challenge-narrative">{challenge}</div>
            
            <div class="challenge-indicators">
              <div class="indicator negative">
                <i class="fas fa-trending-down"></i>
                <span>Declining Performance</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-search-minus"></i>
                <span>Poor Visibility</span>
              </div>
              <div class="indicator negative">
                <i class="fas fa-users-slash"></i>
                <span>Limited Reach</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="story-point turning-point">
          <div class="story-marker">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="story-content">
            <div class="story-badge">Turning Point</div>
            <h3>The Solution Approach</h3>
            <p>We identified the core issues and developed a comprehensive strategy to transform {client}'s digital presence through strategic SEO implementation.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Strategic Methodology -->
  <section class="methodology-section">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="methodology-header">
        <h2>Our Strategic Methodology</h2>
        <p>The proven framework that delivered exceptional results for {client}</p>
      </div>

      <div class="methodology-flow">
        {strategySteps.map((step, index) => (
          <div class="methodology-step">
            <div class="step-connector"></div>
            <div class="method-card">
              <div class="card-header">
                <div class="step-count">
                  <span>Step</span>
                  <div class="step-num">{index + 1}</div>
                </div>
                <div class="step-icon-container">
                  <i class={`fas fa-${step.icon}`}></i>
                </div>
              </div>
              <div class="card-body">
                <h3 class="method-title">{step.title}</h3>
                <p class="method-description">{step.description}</p>
                <div class="completion-status">
                  <i class="fas fa-check-circle"></i>
                  <span>Completed Successfully</span>
                </div>
              </div>
              <div class="card-footer">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 100%"></div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="methodology-summary">
        <div class="summary-grid">
          <div class="summary-stat">
            <div class="stat-number">{strategySteps.length}</div>
            <div class="stat-label">Strategic Steps</div>
          </div>
          <div class="summary-stat">
            <div class="stat-number">{duration}</div>
            <div class="stat-label">Timeline</div>
          </div>
          <div class="summary-stat">
            <div class="stat-number">100%</div>
            <div class="stat-label">Success Rate</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Performance Transformation -->
  <section class="performance-transformation" id="results">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="transformation-header">
        <h2>Performance Transformation</h2>
        <p>Dramatic improvements across all key metrics</p>
      </div>

      <div class="comparison-container">
        {results.map((result) => (
          <div class="comparison-card">
            <div class="metric-header">
              <h3 class="metric-name">{result.metric}</h3>
            </div>
            
            <div class="comparison-visual">
              <div class="before-section">
                <div class="section-label">
                  <i class="fas fa-arrow-down"></i>
                  <span>Before</span>
                </div>
                <div class="metric-value before-value">{result.before}</div>
                <div class="value-indicator before"></div>
              </div>
              
              <div class="transformation-arrow">
                <div class="arrow-icon">
                  <i class="fas fa-arrow-right"></i>
                </div>
                <div class="transformation-label">Transformed</div>
              </div>
              
              <div class="after-section">
                <div class="section-label">
                  <i class="fas fa-arrow-up"></i>
                  <span>After</span>
                </div>
                <div class="metric-value after-value">{result.after}</div>
                <div class="value-indicator after"></div>
              </div>
            </div>
            
            <div class="improvement-highlight">
              <div class="improvement-badge">
                <i class="fas fa-trophy"></i>
                <span class="improvement-text">{result.improvement}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="transformation-footer">
        <div class="footer-content">
          <h3>Exceptional Growth Achieved</h3>
          <p>These results demonstrate the power of strategic SEO implementation tailored specifically for {client}'s industry and market position.</p>
          
          <div class="success-indicators">
            <div class="success-item">
              <i class="fas fa-chart-line"></i>
              <span>Sustainable Growth</span>
            </div>
            <div class="success-item">
              <i class="fas fa-target"></i>
              <span>Goals Exceeded</span>
            </div>
            <div class="success-item">
              <i class="fas fa-rocket"></i>
              <span>Market Leadership</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  {testimonial && (
    <section class="client-spotlight">
      <div class="max-w-7xl mx-auto px-4 py-20">
        <div class="spotlight-container">
          <div class="spotlight-header">
            <h2>Client Spotlight</h2>
            <p>Hear directly from {client} about their transformation journey</p>
          </div>
          
          <div class="testimonial-showcase">
            <div class="quote-section">
              <div class="quote-mark">
                <i class="fas fa-quote-left"></i>
              </div>
              <blockquote class="testimonial-text">
                "{testimonial.quote}"
              </blockquote>
            </div>
            
            <div class="author-section">
              <div class="author-profile">
                {testimonial.avatar && (
                  <div class="author-avatar">
                    <img src={testimonial.avatar} alt={testimonial.author} />
                  </div>
                )}
                <div class="author-details">
                  <h4 class="author-name">{testimonial.author}</h4>
                  <p class="author-title">{testimonial.position}</p>
                  <p class="author-company">{testimonial.company}</p>
                </div>
              </div>
              
              <div class="satisfaction-metrics">
                <div class="satisfaction-item">
                  <i class="fas fa-star"></i>
                  <span>5-Star Partnership</span>
                </div>
                <div class="satisfaction-item">
                  <i class="fas fa-handshake"></i>
                  <span>Ongoing Collaboration</span>
                </div>
                <div class="satisfaction-item">
                  <i class="fas fa-thumbs-up"></i>
                  <span>Highly Recommended</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Strategic Insights -->
  <section class="strategic-insights">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="insights-header">
        <h2>Strategic Insights</h2>
        <p>Key lessons learned from {client}'s transformation journey</p>
      </div>

      <div class="insights-intro">
        <div class="intro-content">
          <h3>What We Learned</h3>
          <p>Every successful project teaches us valuable lessons that can benefit future clients. Here are the strategic insights from {client}'s transformation.</p>
        </div>
      </div>
      
      <div class="insights-grid">
        {keyTakeaways.map((takeaway, index) => (
          <div class="insight-card">
            <div class="insight-header">
              <div class="insight-number">
                <span>{index + 1}</span>
              </div>
              <div class="insight-icon">
                <i class="fas fa-lightbulb"></i>
              </div>
            </div>
            <div class="insight-content">
              <h4>Strategic Insight</h4>
              <p class="insight-text">{takeaway}</p>
              <div class="insight-category">
                <i class="fas fa-tag"></i>
                <span>Lesson Learned</span>
              </div>
            </div>
            <div class="insight-glow"></div>
          </div>
        ))}
      </div>
      
      <div class="insights-conclusion">
        <div class="conclusion-card">
          <h3>The Bottom Line</h3>
          <p>These insights demonstrate that successful SEO requires a strategic, data-driven approach tailored to each client's unique challenges and market position.</p>
          <div class="conclusion-cta">
            <a href="/contact/" class="insights-btn">
              <i class="fas fa-arrow-right"></i>
              <span>Apply These Insights to Your Business</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Next Steps CTA -->
  {nextSteps && (
    <section class="features-section">
      <div class="max-w-7xl mx-auto px-4">
        <div class="cta-container" style="text-align: center; padding: 3rem 2rem; background: white; border-radius: 20px; box-shadow: 0 15px 50px rgba(0,0,0,0.1);">
          <h3 style="font-size: 2rem; margin-bottom: 1rem; color: #1a1a1a;">Ready for Similar Results?</h3>
          <p style="font-size: 1.2rem; color: #666; margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto;">{nextSteps}</p>
          <div class="hero-actions" style="justify-content: center;">
            <a href="/contact" class="cta-button primary">
              <span>Get Started Today</span>
              <i class="fas fa-arrow-right"></i>
            </a>
            <a href="/philippines-seo-services" class="cta-button secondary">
              <i class="fas fa-info-circle"></i>
              <span>Learn More</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  )}

</MainLayout>

<!-- Comprehensive Case Study CSS -->
<style>
  /* Impact Results Section */
  .impact-results {
    background: #f8fafc;
    padding: 100px 0;
  }

  .results-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .results-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .achievement-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  .achievement-card {
    background: white;
    border-radius: 20px;
    padding: 40px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .achievement-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    border-color: rgba(66, 133, 244, 0.3);
  }

  .achievement-rank {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #FF4438, #FF6B35);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 14px;
  }

  .achievement-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4285F4, #34A853);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .achievement-icon i {
    font-size: 24px;
    color: white;
  }

  .achievement-value {
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(135deg, #FF4438, #4285F4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
  }

  .achievement-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 10px;
  }

  .achievement-desc {
    color: #666;
    line-height: 1.6;
  }

  .achievement-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 68, 56, 0.05), rgba(66, 133, 244, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .achievement-card:hover .achievement-glow {
    opacity: 1;
  }

  .success-summary {
    background: white;
    border-radius: 20px;
    padding: 50px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }

  .success-meter {
    width: 200px;
    height: 200px;
    margin: 0 auto 30px;
    position: relative;
  }

  .meter-circle {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: conic-gradient(from 0deg, #FF4438 0%, #FF6B35 50%, #4285F4 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .meter-inner {
    width: 160px;
    height: 160px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 900;
    color: #1a1a1a;
  }

  /* Challenge Story Timeline */
  .challenge-story {
    background: white;
    padding: 100px 0;
  }

  .story-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .story-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .timeline-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-container::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(to bottom, #FF4438, #4285F4);
    transform: translateX(-50%);
  }

  .story-point {
    position: relative;
    margin-bottom: 60px;
  }

  .story-point:nth-child(odd) .story-content {
    margin-right: 60%;
    text-align: right;
  }

  .story-point:nth-child(even) .story-content {
    margin-left: 60%;
    text-align: left;
  }

  .story-marker {
    position: absolute;
    left: 50%;
    top: 30px;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #FF4438, #4285F4);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateX(-50%);
    z-index: 2;
  }

  .story-marker i {
    color: white;
    font-size: 20px;
  }

  .story-content {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: 2px solid #f1f5f9;
  }

  .story-badge {
    display: inline-block;
    background: linear-gradient(135deg, #FF4438, #FF6B35);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .challenge-narrative {
    background: #f8fafc;
    padding: 30px;
    border-radius: 15px;
    margin: 20px 0;
    border-left: 4px solid #4285F4;
    font-style: italic;
    line-height: 1.8;
  }

  /* Strategic Methodology */
  .methodology-section {
    background: #f8fafc;
  }

  .methodology-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .methodology-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .methodology-flow {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-bottom: 60px;
  }

  .methodology-step {
    position: relative;
  }

  .method-card {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .method-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    border-color: rgba(66, 133, 244, 0.3);
  }


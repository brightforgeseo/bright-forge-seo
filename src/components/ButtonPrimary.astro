---
interface Props {
  href: string;
  text: string;
  icon?: string;
}

const { href, text, icon = "fas fa-arrow-right" } = Astro.props;
---

<a href={href} class="btn-primary-modern">
  <span>{text}</span>
  <i class={icon}></i>
</a>

<style>
  .btn-primary-modern {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: white;
    color: #f97316;
    border-radius: 14px;
    font-weight: 700;
    font-size: 15px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: none;
  }

  .btn-primary-modern:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }

  .btn-primary-modern i {
    font-size: 14px;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-primary-modern:hover i {
    transform: translateX(4px);
  }

  @media (max-width: 480px) {
    .btn-primary-modern {
      padding: 12px 22px;
      font-size: 14px;
      width: 100%;
      justify-content: center;
    }
  }
</style>

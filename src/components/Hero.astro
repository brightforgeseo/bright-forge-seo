---
interface Props {
  badgeIcon?: string;
  badgeText?: string;
  title: string;
  breadcrumbCurrent?: string;
}

const {
  badgeIcon = "fas fa-star",
  badgeText = "Professional Service",
  title,
  breadcrumbCurrent = "Home"
} = Astro.props;
---

<section class="hero-modern">
  <!-- Background Elements -->
  <div class="hero-bg">
    <div class="bg-gradient"></div>
    <div class="bg-glow bg-glow-1"></div>
    <div class="bg-glow bg-glow-2"></div>
    <div class="bg-grid"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Breadcrumbs -->
    <nav class="hero-breadcrumbs">
      <a href="/" class="breadcrumb-link">Home</a>
      <svg class="breadcrumb-sep" width="16" height="16" viewBox="0 0 16 16" fill="none">
        <path d="M6 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span class="breadcrumb-current">{breadcrumbCurrent}</span>
    </nav>

    <div class="hero-grid">
      <div class="hero-content">
        <!-- Badge -->
        <div class="hero-badge">
          <i class={badgeIcon}></i>
          <span>{badgeText}</span>
        </div>

        <!-- Title -->
        <h1 set:html={title} />

        <!-- Story Slot -->
        <div class="hero-story">
          <slot name="story" />
        </div>

        <!-- Actions Slot -->
        <div class="hero-actions">
          <slot name="actions" />
        </div>

        <!-- Stats Slot -->
        <div class="hero-stats-wrapper">
          <slot name="stats" />
        </div>
      </div>

      <!-- Visual Slot -->
      <div class="hero-visual">
        <slot name="visual" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-modern {
    position: relative;
    overflow: hidden;
    padding: 4rem 0 5rem;
    color: white;
  }

  /* Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #f97316 0%, #fb923c 30%, #f97316 60%, #ea580c 100%);
    background-size: 200% 200%;
    animation: gradientFlow 12s ease infinite;
  }

  @keyframes gradientFlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .bg-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .bg-glow-1 {
    width: 500px;
    height: 500px;
    background: rgba(255, 255, 255, 0.15);
    top: -200px;
    left: -200px;
  }

  .bg-glow-2 {
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.1);
    bottom: -150px;
    right: -150px;
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* Breadcrumbs */
  .hero-breadcrumbs {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .breadcrumb-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: white;
  }

  .breadcrumb-sep {
    color: rgba(255, 255, 255, 0.4);
    width: 14px;
    height: 14px;
  }

  .breadcrumb-current {
    color: white;
    font-weight: 500;
  }

  /* Grid Layout */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* Content */
  .hero-content {
    max-width: 600px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 18px;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 100px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .hero-badge i {
    color: #fde047;
    font-size: 12px;
  }

  .hero-content h1 {
    font-size: clamp(2.25rem, 4.5vw, 3.25rem);
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 1.5rem;
    color: white;
    letter-spacing: -0.02em;
  }

  .hero-content h1 :global(span) {
    color: white;
  }

  /* Story */
  .hero-story {
    margin-bottom: 2rem;
  }

  .hero-story :global(p) {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
  }

  .hero-story :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Actions */
  .hero-actions {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  /* Stats Wrapper */
  .hero-stats-wrapper {
    margin-top: 1.5rem;
  }

  /* Visual */
  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }

    .hero-content {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero-modern {
      padding: 3rem 0 4rem;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-actions :global(a) {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero-content h1 {
      font-size: 1.75rem;
    }

    .hero-story :global(p) {
      font-size: 1rem;
    }

    .hero-badge {
      font-size: 12px;
      padding: 6px 14px;
    }
  }
</style>

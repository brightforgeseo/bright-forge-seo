---
// Contact Section Component - Used on multiple pages
---

<section class="contact-cta-section">
  <div class="max-w-7xl mx-auto px-6">
    <div class="contact-cta-wrapper">
      <div class="contact-cta-content">
        <span class="contact-badge">Let's Talk</span>
        <h2>Ready to Grow Your Business?</h2>
        <p>Get a free SEO consultation and discover how we can help you dominate search results. Our team will respond within 24 hours.</p>
        <div class="contact-cta-actions">
          <a href="/contact/" class="cta-btn-primary">
            <span>Get Free Consultation</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M3.33 8h9.34M8.67 4l4 4-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="mailto:seo@brightforge.com.ph" class="cta-btn-secondary">
            <i class="fas fa-envelope"></i>
            <span>seo@brightforge.com.ph</span>
          </a>
        </div>
      </div>
      <div class="contact-cta-info">
        <div class="info-card">
          <div class="info-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <div class="info-text">
            <span class="info-label">Call Us</span>
            <a href="tel:+639696206182">(+63) 969 620 6182</a>
          </div>
        </div>
        <div class="info-card">
          <div class="info-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="info-text">
            <span class="info-label">Office Hours</span>
            <span>Mon - Fri: 9AM - 6PM</span>
          </div>
        </div>
        <div class="info-card">
          <div class="info-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="info-text">
            <span class="info-label">Location</span>
            <span>Quezon City, Philippines</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
    position: relative;
    overflow: hidden;
  }

  .contact-cta-section::before {
    content: '';
    position: absolute;
    top: -100px;
    right: -100px;
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    filter: blur(60px);
  }

  .contact-cta-section::after {
    content: '';
    position: absolute;
    bottom: -100px;
    left: -100px;
    width: 300px;
    height: 300px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    filter: blur(60px);
  }

  .contact-cta-wrapper {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .contact-cta-content {
    max-width: 560px;
  }

  .contact-badge {
    display: inline-block;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    color: white;
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    letter-spacing: 0.02em;
  }

  .contact-cta-content h2 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .contact-cta-content p {
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    margin-bottom: 1.75rem;
  }

  .contact-cta-actions {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
  }

  .cta-btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: white;
    color: #f97316;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .cta-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .cta-btn-primary svg {
    transition: transform 0.3s ease;
  }

  .cta-btn-primary:hover svg {
    transform: translateX(4px);
  }

  .cta-btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .cta-btn-secondary i {
    font-size: 14px;
  }

  .contact-cta-info {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .info-card {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 16px 20px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 14px;
    min-width: 240px;
  }

  .info-icon {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
    flex-shrink: 0;
  }

  .info-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .info-label {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .info-text a,
  .info-text span:not(.info-label) {
    color: white;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
  }

  .info-text a:hover {
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-cta-wrapper {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }

    .contact-cta-content {
      max-width: 100%;
    }

    .contact-cta-actions {
      justify-content: center;
    }

    .contact-cta-info {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .info-card {
      min-width: auto;
    }
  }

  @media (max-width: 768px) {
    .contact-cta-section {
      padding: 4rem 0;
    }

    .contact-cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .cta-btn-primary,
    .cta-btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .contact-cta-info {
      flex-direction: column;
    }

    .info-card {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .contact-cta-section {
      padding: 3rem 0;
    }

    .contact-cta-content h2 {
      font-size: 1.5rem;
    }

    .contact-badge {
      font-size: 0.75rem;
    }
  }
</style>
